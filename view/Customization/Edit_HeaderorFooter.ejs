  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* ===== PROFESSIONAL ENTERPRISE BRANDING & NAVIGATION DESIGN ===== */
    
    :root {
      /* Professional Enterprise Color Scheme */
      --enterprise-primary: #2563EB;
      --enterprise-primary-hover: #1D4ED8;
      --enterprise-secondary: #64748B;
      --enterprise-success: #059669;
      --enterprise-warning: #D97706;
      --enterprise-danger: #DC2626;
      --enterprise-info: #0891B2;
      
      /* Background Colors */
      --enterprise-bg-main: #F8FAFC;
      --enterprise-bg-card: #FFFFFF;
      --enterprise-bg-input: #F9FAFB;
      --enterprise-bg-hover: #F1F5F9;
      
      /* Text Colors */
      --enterprise-text-primary: #1E293B;
      --enterprise-text-secondary: #64748B;
      --enterprise-text-muted: #94A3B8;
      --enterprise-text-light: #CBD5E1;
      
      /* Border Colors */
      --enterprise-border: #E2E8F0;
      --enterprise-border-focus: #3B82F6;
      --enterprise-border-hover: #CBD5E1;
      
      /* Shadow Effects */
      --enterprise-shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      --enterprise-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --enterprise-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --enterprise-shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    /* Global Base Styling */
    * {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
      background: var(--enterprise-bg-main) !important;
      color: var(--enterprise-text-primary) !important;
      font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif !important;
      line-height: 1.6;
    }

    .container-scroller,
    .page-body-wrapper,
    .main-panel,
    .content-wrapper {
      background: var(--enterprise-bg-main) !important;
    }

    /* ===== MAIN LAYOUT SYSTEM ===== */
    .enterprise-branding-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
      background: var(--enterprise-bg-main);
    }

    .enterprise-header {
      margin-bottom: 2.5rem;
      text-align: center;
    }

    .enterprise-header h1 {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--enterprise-text-primary);
      margin-bottom: 0.75rem;
      letter-spacing: -0.025em;
    }

    .enterprise-header p {
      font-size: 1.125rem;
      color: var(--enterprise-text-secondary);
      max-width: 600px;
      margin: 0 auto;
    }

    /* ===== BRANDING GRID LAYOUT ===== */
    .enterprise-branding-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      margin-bottom: 2rem;
    }

    /* ===== BRANDING CARDS ===== */
    .enterprise-branding-card {
      background: var(--enterprise-bg-card);
      border: 1px solid var(--enterprise-border);
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: var(--enterprise-shadow-md);
      position: relative;
      overflow: hidden;
    }

    .enterprise-branding-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--enterprise-primary), var(--enterprise-info));
    }

    .enterprise-branding-card:hover {
      box-shadow: var(--enterprise-shadow-lg);
      transform: translateY(-2px);
    }

    /* Card Header */
    .enterprise-card-header {
      display: flex;
      align-items: center;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid var(--enterprise-bg-hover);
    }

    .enterprise-card-icon {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, var(--enterprise-primary), var(--enterprise-info));
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 1rem;
      color: white;
      font-size: 1.25rem;
    }

    .enterprise-card-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--enterprise-text-primary);
      margin: 0;
    }

    /* ===== FORM STYLING ===== */
    .enterprise-form-group {
      margin-bottom: 1.5rem;
    }

    .enterprise-form-label {
      display: block;
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--enterprise-text-primary);
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .enterprise-form-description {
      font-size: 0.875rem;
      color: var(--enterprise-text-secondary);
      margin-bottom: 1rem;
      line-height: 1.5;
    }

    /* Text Input Styling */
    .enterprise-text-input {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 2px solid var(--enterprise-border);
      border-radius: 8px;
      font-size: 0.875rem;
      background: var(--enterprise-bg-input);
      color: var(--enterprise-text-primary);
      transition: all 0.3s ease;
    }

    .enterprise-text-input:focus {
      outline: none;
      border-color: var(--enterprise-primary);
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }

    /* File Upload Styling */
    .enterprise-upload-area {
      position: relative;
      border: 2px dashed var(--enterprise-border);
      border-radius: 12px;
      padding: 3rem;
      text-align: center;
      background: var(--enterprise-bg-input);
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .enterprise-upload-area:hover {
      border-color: var(--enterprise-primary);
      background: rgba(37, 99, 235, 0.02);
    }

    .enterprise-upload-area.dragover {
      border-color: var(--enterprise-primary);
      background: rgba(37, 99, 235, 0.05);
    }

    .enterprise-upload-icon {
      font-size: 3rem;
      color: var(--enterprise-text-muted);
      margin-bottom: 1rem;
    }

    .enterprise-upload-text {
      font-size: 1.125rem;
      color: var(--enterprise-text-secondary);
      margin-bottom: 0.5rem;
      font-weight: 500;
    }

    .enterprise-upload-subtext {
      font-size: 0.875rem;
      color: var(--enterprise-text-muted);
    }

    .enterprise-file-input {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      cursor: pointer;
    }

    /* ===== BUTTON STYLING ===== */
    .enterprise-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.5rem;
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      min-width: 140px;
    }

    .enterprise-btn-primary {
      background: linear-gradient(135deg, var(--enterprise-primary), var(--enterprise-info));
      color: white;
      box-shadow: var(--enterprise-shadow-sm);
    }

    .enterprise-btn-primary:hover {
      transform: translateY(-1px);
      box-shadow: var(--enterprise-shadow-md);
    }

    .enterprise-btn-danger {
      background: linear-gradient(135deg, var(--enterprise-danger), #B91C1C);
      color: white;
      box-shadow: var(--enterprise-shadow-sm);
    }

    .enterprise-btn-danger:hover {
      transform: translateY(-1px);
      box-shadow: var(--enterprise-shadow-md);
    }

    .enterprise-btn i {
      margin-right: 0.5rem;
    }

    /* ===== PREVIEW SECTIONS ===== */
    .enterprise-preview-section {
      background: var(--enterprise-bg-hover);
      border-radius: 8px;
      padding: 1rem;
      margin-top: 1rem;
      border: 1px solid var(--enterprise-border);
    }

    .enterprise-preview-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--enterprise-text-secondary);
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .enterprise-preview-image {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      box-shadow: var(--enterprise-shadow-sm);
    }

    /* Icon Grid Styling */
    .enterprise-icon-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
    }

    .enterprise-icon-item {
      background: var(--enterprise-bg-card);
      border: 1px solid var(--enterprise-border);
      border-radius: 8px;
      padding: 1rem;
      text-align: center;
      position: relative;
      transition: all 0.3s ease;
    }

    .enterprise-icon-item:hover {
      box-shadow: var(--enterprise-shadow-sm);
      transform: translateY(-2px);
    }

    .enterprise-icon-item img {
      width: 40px;
      height: 40px;
      object-fit: contain;
      margin-bottom: 0.5rem;
    }

    .enterprise-icon-item .delete-btn {
      position: absolute;
      top: -8px;
      right: -8px;
      width: 24px;
      height: 24px;
      background: var(--enterprise-danger);
      color: white;
      border: none;
      border-radius: 50%;
      font-size: 0.75rem;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* ===== RESPONSIVE DESIGN ===== */
    @media (max-width: 1024px) {
      .enterprise-branding-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
      
      .enterprise-branding-container {
        padding: 1.5rem;
      }
      
      .enterprise-header h1 {
        font-size: 2rem;
      }
      
      .enterprise-branding-card {
        padding: 1.5rem;
      }
    }

    @media (max-width: 768px) {
      .enterprise-branding-container {
        padding: 1rem;
      }
      
      .enterprise-header h1 {
        font-size: 1.75rem;
      }
      
      .enterprise-branding-card {
        padding: 1.25rem;
      }
      
      .enterprise-card-header {
        flex-direction: column;
        text-align: center;
        align-items: center;
      }
      
      .enterprise-card-icon {
        margin-right: 0;
        margin-bottom: 0.75rem;
      }
      
      .enterprise-upload-area {
        padding: 2rem 1rem;
      }
    }

    @media (max-width: 480px) {
      .enterprise-header h1 {
        font-size: 1.5rem;
      }
      
      .enterprise-card-title {
        font-size: 1.25rem;
      }
      
      .enterprise-btn {
        width: 100%;
        justify-content: center;
      }
    }

    /* Dark Mode Support */
    [data-theme="dark"] body {
      background-color: #111827 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .card {
      background-color: #1F2937 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .table {
      background-color: #1F2937 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .table th {
      background-color: #374151 !important;
      color: #F9FAFB !important;
      border-color: #4B5563 !important;
    }

    [data-theme="dark"] .table td {
      background-color: #1F2937 !important;
      color: #F9FAFB !important;
      border-color: #4B5563 !important;
    }

    [data-theme="dark"] .form-control {
      background-color: #4B5563 !important;
      color: #F9FAFB !important;
      border-color: #6B7280 !important;
    }

    [data-theme="dark"] .form-control:focus {
      background-color: #4B5563 !important;
      color: #F9FAFB !important;
      border-color: #8B5CF6 !important;
    }

    [data-theme="dark"] .btn-primary {
      background-color: #3B82F6 !important;
      border-color: #3B82F6 !important;
    }

    [data-theme="dark"] .btn-success {
      background-color: #10B981 !important;
      border-color: #10B981 !important;
    }

    [data-theme="dark"] .btn-danger {
      background-color: #DC2626 !important;
      border-color: #DC2626 !important;
    }

    [data-theme="dark"] .alert-primary {
      background-color: #1E40AF !important;
      border-color: #3B82F6 !important;
      color: #DBEAFE !important;
    }

    [data-theme="dark"] .modal-content {
      background-color: #1F2937 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .modal-header {
      border-bottom-color: #4B5563 !important;
    }

    [data-theme="dark"] .modal-footer {
      border-top-color: #4B5563 !important;
    }
  </style>

</head>

<body>
  <div class="container-scroller">

    <%- include ('../partials/_navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper" style="padding-left:0px;">
        <!-- partial:partials/_settings-panel.html -->
        <%- include ('../partials/SettingsDow.ejs') %>

          <!-- NavBar Start -->
          <%- include ('../partials/Sidebar.ejs') %>
            <!-- NavBar End -->

            <!-- ===== PROFESSIONAL ENTERPRISE BRANDING & NAVIGATION ===== -->
            <div class="enterprise-branding-container">
              
              <!-- Header Section -->
              <div class="enterprise-header">
                <h1>Brand & Navigation Management</h1>
                <p>Configure your enterprise branding, navigation elements, and footer components with professional precision.</p>
              </div>

              <!-- Branding Grid -->
              <div class="enterprise-branding-grid">

                <% if (!activeTab || activeTab === 'navbar') { %>
                  <!-- Brand Identity Card -->
                  <div class="enterprise-branding-card">
                    <div class="enterprise-card-header">
                      <div class="enterprise-card-icon">
                        <i class="fas fa-building"></i>
                      </div>
                      <h2 class="enterprise-card-title">Brand Identity</h2>
                    </div>

                    <!-- Brand Logo Configuration -->
                    <form action="/index" method="post" enctype="multipart/form-data">
                      <div class="enterprise-form-group">
                        <label class="enterprise-form-label">Company Logo Upload</label>
                        <p class="enterprise-form-description">
                          Upload your company logo for navigation bar. Recommended size: 200x60px for optimal display.
                        </p>
                        <div class="enterprise-upload-area" id="logo-upload-preview">
                          <i class="fas fa-image enterprise-upload-icon"></i>
                          <div class="enterprise-upload-text">Drop your logo here or click to browse</div>
                          <div class="enterprise-upload-subtext">PNG, JPG, SVG up to 5MB</div>
                          <input type="file" name="navImg" class="enterprise-file-input" accept="image/*" required id="logo-file-input">
                        </div>
                      </div>
                      <button type="submit" class="enterprise-btn enterprise-btn-primary">
                        <i class="fas fa-upload"></i>
                        Update Logo
                      </button>
                    </form>

                    <!-- Current Logo Preview -->
                    <% if (bg_result && bg_result.length > 0 && bg_result[0].nav_imgs) { %>
                      <div class="enterprise-preview-section">
                        <div class="enterprise-preview-title">Current Logo</div>
                        <img src="<%= bg_result[0].nav_imgs.startsWith('http') ? bg_result[0].nav_imgs : '/uploads/' + bg_result[0].nav_imgs %>" alt="Current Logo" class="enterprise-preview-image">
                      </div>
                    <% } %>

                    <hr style="margin: 2rem 0; border: none; border-top: 1px solid var(--enterprise-border);">

                    <!-- Brand Text Configuration -->
                    <form action="/logoTextChange" method="post">
                      <div class="enterprise-form-group">
                        <label class="enterprise-form-label">Brand Text/Tagline</label>
                        <p class="enterprise-form-description">
                          Set your company name or tagline that appears alongside your logo.
                        </p>
                        <input type="text" name="logo_text" class="enterprise-text-input" placeholder="Enter brand text..." required>
                      </div>
                      <button type="submit" class="enterprise-btn enterprise-btn-primary">
                        <i class="fas fa-font"></i>
                        Update Text
                      </button>
                    </form>

                    <!-- Current Brand Text Preview -->
                    <% if (bg_result && bg_result.length > 0 && bg_result[0].logo_text) { %>
                      <div class="enterprise-preview-section">
                        <div class="enterprise-preview-title">Current Brand Text</div>
                        <h4 style="margin: 0; color: var(--enterprise-text-primary);"><%= bg_result[0].logo_text %></h4>
                      </div>
                    <% } %>
                  </div>
                <% } %>

                <% if (!activeTab || activeTab === 'footer') { %>
                  <!-- Navigation Elements Card -->
                  <div class="enterprise-branding-card">
                    <div class="enterprise-card-header">
                      <div class="enterprise-card-icon">
                        <i class="fas fa-compass"></i>
                      </div>
                      <h2 class="enterprise-card-title">Navigation Elements</h2>
                    </div>

                    <!-- Footer Icon Upload -->
                    <form action="/updateIcon" method="post" enctype="multipart/form-data">
                      <div class="enterprise-form-group">
                        <label class="enterprise-form-label">Footer Icon Upload</label>
                        <p class="enterprise-form-description">
                          Add navigation icons for mobile footer. Icons will be displayed in the mobile navigation bar.
                        </p>
                        <div class="enterprise-upload-area" id="footer-icon-preview">
                          <i class="fas fa-icons enterprise-upload-icon"></i>
                          <div class="enterprise-upload-text">Drop icon here or click to browse</div>
                          <div class="enterprise-upload-subtext">PNG, JPG, SVG up to 2MB</div>
                          <input type="file" name="Icon" class="enterprise-file-input" accept="image/*" required id="footer-file-input">
                        </div>
                      </div>
                      
                      <div class="enterprise-form-group">
                        <label class="enterprise-form-label">Navigation Link URL</label>
                        <p class="enterprise-form-description">
                          Enter the destination URL when users tap this icon.
                        </p>
                        <input type="text" name="Link" class="enterprise-text-input" placeholder="https://example.com" required>
                      </div>
                      
                      <button type="submit" class="enterprise-btn enterprise-btn-primary">
                        <i class="fas fa-plus"></i>
                        Add Icon
                      </button>
                    </form>

                    <!-- Current Footer Icons Management -->
                    <% if (IconSliders && IconSliders.length > 0) { %>
                      <div class="enterprise-preview-section">
                        <div class="enterprise-preview-title">Current Footer Icons</div>
                        <div class="enterprise-icon-grid">
                          <% IconSliders.forEach(function(result) { %>
                            <div class="enterprise-icon-item">
                              <img src="<%= result.Icon.startsWith('http') ? result.Icon : '/uploads/' + result.Icon %>" alt="Footer Icon">
                              <button type="button" class="delete-btn" onclick="deleteSlider('<%= result.id %>')">
                                <i class="fas fa-times"></i>
                              </button>
                              <div style="font-size: 0.75rem; color: var(--enterprise-text-muted); margin-top: 0.5rem;">
                                <%= result.Link.length > 20 ? result.Link.substring(0, 20) + '...' : result.Link %>
                              </div>
                            </div>
                          <% }); %>
                        </div>
                      </div>
                    <% } else { %>
                      <div class="enterprise-preview-section">
                        <div class="enterprise-preview-title">No Footer Icons</div>
                        <p style="margin: 0; color: var(--enterprise-text-muted);">Add your first footer icon using the form above.</p>
                      </div>
                    <% } %>
                  </div>
                <% } %>

              </div>
            </div>


            <!-- Add professional JavaScript for enhanced functionality -->
            <script>
              // Professional Enterprise Branding Management
              document.addEventListener('DOMContentLoaded', function() {
                // Logo Upload Handler
                const logoUploadArea = document.getElementById('logo-upload-preview');
                const logoFileInput = document.getElementById('logo-file-input');
                
                if (logoUploadArea && logoFileInput) {
                  setupFileUpload(logoUploadArea, logoFileInput, 'logo');
                }

                // Footer Icon Upload Handler
                const footerUploadArea = document.getElementById('footer-icon-preview');
                const footerFileInput = document.getElementById('footer-file-input');
                
                if (footerUploadArea && footerFileInput) {
                  setupFileUpload(footerUploadArea, footerFileInput, 'footer');
                }

                function setupFileUpload(uploadArea, fileInput, type) {
                  // Handle drag and drop
                  uploadArea.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    uploadArea.classList.add('dragover');
                  });

                  uploadArea.addEventListener('dragleave', function(e) {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                  });

                  uploadArea.addEventListener('drop', function(e) {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                    const files = e.dataTransfer.files;
                    if (files.length > 0) {
                      fileInput.files = files;
                      handleFilePreview(files[0], uploadArea, type);
                    }
                  });

                  // Handle file input change
                  fileInput.addEventListener('change', function(e) {
                    if (e.target.files.length > 0) {
                      handleFilePreview(e.target.files[0], uploadArea, type);
                    }
                  });
                }

                function handleFilePreview(file, uploadArea, type) {
                  if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                      uploadArea.style.backgroundImage = `url(${e.target.result})`;
                      uploadArea.style.backgroundSize = 'cover';
                      uploadArea.style.backgroundPosition = 'center';
                      uploadArea.querySelector('.enterprise-upload-icon').style.display = 'none';
                      
                      const uploadText = uploadArea.querySelector('.enterprise-upload-text');
                      const uploadSubtext = uploadArea.querySelector('.enterprise-upload-subtext');
                      
                      if (type === 'logo') {
                        uploadText.textContent = 'Logo uploaded successfully';
                        uploadSubtext.textContent = 'Click to change logo';
                      } else {
                        uploadText.textContent = 'Icon uploaded successfully';
                        uploadSubtext.textContent = 'Click to change icon';
                      }
                    };
                    reader.readAsDataURL(file);
                  }
                }

                // Add smooth transitions and professional animations
                const cards = document.querySelectorAll('.enterprise-branding-card');
                cards.forEach(card => {
                  card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-4px)';
                  });
                  
                  card.addEventListener('mouseleave', function() {
