  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* ===== PROFESSIONAL ENTERPRISE SYSTEM SETTINGS DESIGN ===== */
    
    :root {
      /* Professional Enterprise Color Scheme */
      --enterprise-primary: #2563EB;
      --enterprise-primary-hover: #1D4ED8;
      --enterprise-secondary: #64748B;
      --enterprise-success: #059669;
      --enterprise-warning: #D97706;
      --enterprise-danger: #DC2626;
      --enterprise-info: #0891B2;
      
      /* Background Colors */
      --enterprise-bg-main: #F8FAFC;
      --enterprise-bg-card: #FFFFFF;
      --enterprise-bg-input: #F9FAFB;
      --enterprise-bg-hover: #F1F5F9;
      
      /* Text Colors */
      --enterprise-text-primary: #1E293B;
      --enterprise-text-secondary: #64748B;
      --enterprise-text-muted: #94A3B8;
      --enterprise-text-light: #CBD5E1;
      
      /* Border Colors */
      --enterprise-border: #E2E8F0;
      --enterprise-border-focus: #3B82F6;
      --enterprise-border-hover: #CBD5E1;
      
      /* Shadow Effects */
      --enterprise-shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      --enterprise-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --enterprise-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --enterprise-shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    /* Global Base Styling */
    * {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
      background: var(--enterprise-bg-main) !important;
      color: var(--enterprise-text-primary) !important;
      font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif !important;
      line-height: 1.6;
    }

    .container-scroller,
    .page-body-wrapper,
    .main-panel,
    .content-wrapper {
      background: var(--enterprise-bg-main) !important;
    }

    /* ===== MAIN LAYOUT SYSTEM ===== */
    .enterprise-settings-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
      background: var(--enterprise-bg-main);
    }

    .enterprise-header {
      margin-bottom: 2.5rem;
      text-align: center;
    }

    .enterprise-header h1 {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--enterprise-text-primary);
      margin-bottom: 0.75rem;
      letter-spacing: -0.025em;
    }

    .enterprise-header p {
      font-size: 1.125rem;
      color: var(--enterprise-text-secondary);
      max-width: 600px;
      margin: 0 auto;
    }

    /* ===== SETTINGS GRID LAYOUT ===== */
    .enterprise-settings-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      margin-bottom: 2rem;
    }

    /* Single Column Layout */
    .enterprise-settings-grid.single-column {
      grid-template-columns: 1fr;
      max-width: 800px;
      margin: 0 auto;
    }

    /* ===== SETTINGS CARDS ===== */
    .enterprise-settings-card {
      background: var(--enterprise-bg-card);
      border: 1px solid var(--enterprise-border);
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: var(--enterprise-shadow-md);
      position: relative;
      overflow: hidden;
    }

    .enterprise-settings-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--enterprise-primary), var(--enterprise-info));
    }

    .enterprise-settings-card:hover {
      box-shadow: var(--enterprise-shadow-lg);
      transform: translateY(-2px);
    }

    /* Card Header */
    .enterprise-card-header {
      display: flex;
      align-items: center;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid var(--enterprise-bg-hover);
    }

    .enterprise-card-icon {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, var(--enterprise-primary), var(--enterprise-info));
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 1rem;
      color: white;
      font-size: 1.25rem;
    }

    .enterprise-card-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--enterprise-text-primary);
      margin: 0;
    }

    /* ===== FORM STYLING ===== */
    .enterprise-form-group {
      margin-bottom: 1.5rem;
    }

    .enterprise-form-label {
      display: block;
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--enterprise-text-primary);
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .enterprise-form-description {
      font-size: 0.875rem;
      color: var(--enterprise-text-secondary);
      margin-bottom: 1rem;
      line-height: 1.5;
    }

    /* Color Input Styling */
    .enterprise-color-input {
      width: 100%;
      height: 80px;
      border: 2px solid var(--enterprise-border);
      border-radius: 12px;
      cursor: pointer;
      transition: all 0.3s ease;
      background: var(--enterprise-bg-input);
    }

    .enterprise-color-input:hover {
      border-color: var(--enterprise-border-hover);
      box-shadow: var(--enterprise-shadow-sm);
    }

    .enterprise-color-input:focus {
      outline: none;
      border-color: var(--enterprise-primary);
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }

    /* File Upload Styling */
    .enterprise-upload-area {
      position: relative;
      border: 2px dashed var(--enterprise-border);
      border-radius: 12px;
      padding: 3rem;
      text-align: center;
      background: var(--enterprise-bg-input);
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .enterprise-upload-area:hover {
      border-color: var(--enterprise-primary);
      background: rgba(37, 99, 235, 0.02);
    }

    .enterprise-upload-area.dragover {
      border-color: var(--enterprise-primary);
      background: rgba(37, 99, 235, 0.05);
    }

    .enterprise-upload-icon {
      font-size: 3rem;
      color: var(--enterprise-text-muted);
      margin-bottom: 1rem;
    }

    .enterprise-upload-text {
      font-size: 1.125rem;
      color: var(--enterprise-text-secondary);
      margin-bottom: 0.5rem;
      font-weight: 500;
    }

    .enterprise-upload-subtext {
      font-size: 0.875rem;
      color: var(--enterprise-text-muted);
    }

    .enterprise-file-input {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      cursor: pointer;
    }

    /* ===== BUTTON STYLING ===== */
    .enterprise-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.5rem;
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      min-width: 140px;
    }

    .enterprise-btn-primary {
      background: linear-gradient(135deg, var(--enterprise-primary), var(--enterprise-info));
      color: white;
      box-shadow: var(--enterprise-shadow-sm);
    }

    .enterprise-btn-primary:hover {
      transform: translateY(-1px);
      box-shadow: var(--enterprise-shadow-md);
    }

    .enterprise-btn-danger {
      background: linear-gradient(135deg, var(--enterprise-danger), #B91C1C);
      color: white;
      box-shadow: var(--enterprise-shadow-sm);
    }

    .enterprise-btn-danger:hover {
      transform: translateY(-1px);
      box-shadow: var(--enterprise-shadow-md);
    }

    .enterprise-btn i {
      margin-right: 0.5rem;
    }

    /* ===== PREVIEW SECTIONS ===== */
    .enterprise-preview-section {
      background: var(--enterprise-bg-hover);
      border-radius: 8px;
      padding: 1rem;
      margin-top: 1rem;
      border: 1px solid var(--enterprise-border);
    }

    .enterprise-preview-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--enterprise-text-secondary);
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .enterprise-preview-image {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      box-shadow: var(--enterprise-shadow-sm);
    }

    /* ===== RESPONSIVE DESIGN ===== */
    @media (max-width: 1024px) {
      .enterprise-settings-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
      
      .enterprise-settings-container {
        padding: 1.5rem;
      }
      
      .enterprise-header h1 {
        font-size: 2rem;
      }
      
      .enterprise-settings-card {
        padding: 1.5rem;
      }
    }

    @media (max-width: 768px) {
      .enterprise-settings-container {
        padding: 1rem;
      }
      
      .enterprise-header h1 {
        font-size: 1.75rem;
      }
      
      .enterprise-settings-card {
        padding: 1.25rem;
      }
      
      .enterprise-card-header {
        flex-direction: column;
        text-align: center;
        align-items: center;
      }
      
      .enterprise-card-icon {
        margin-right: 0;
        margin-bottom: 0.75rem;
      }
      
      .enterprise-upload-area {
        padding: 2rem 1rem;
      }
    }

    @media (max-width: 480px) {
      .enterprise-header h1 {
        font-size: 1.5rem;
      }
      
      .enterprise-card-title {
        font-size: 1.25rem;
      }
      
      .enterprise-btn {
        width: 100%;
        justify-content: center;
      }
    }

    /* Dark Mode Support */
    [data-theme="dark"] body {
      background-color: #111827 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .card {
      background-color: #1F2937 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .table {
      background-color: #1F2937 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .table th {
      background-color: #374151 !important;
      color: #F9FAFB !important;
      border-color: #4B5563 !important;
    }

    [data-theme="dark"] .table td {
      background-color: #1F2937 !important;
      color: #F9FAFB !important;
      border-color: #4B5563 !important;
    }

    [data-theme="dark"] .form-control {
      background-color: #4B5563 !important;
      color: #F9FAFB !important;
      border-color: #6B7280 !important;
    }

    [data-theme="dark"] .form-control:focus {
      background-color: #4B5563 !important;
      color: #F9FAFB !important;
      border-color: #8B5CF6 !important;
    }

    [data-theme="dark"] .btn-primary {
      background-color: #3B82F6 !important;
      border-color: #3B82F6 !important;
    }

    [data-theme="dark"] .btn-success {
      background-color: #10B981 !important;
      border-color: #10B981 !important;
    }

    [data-theme="dark"] .btn-danger {
      background-color: #DC2626 !important;
      border-color: #DC2626 !important;
    }

    [data-theme="dark"] .alert-primary {
      background-color: #1E40AF !important;
      border-color: #3B82F6 !important;
      color: #DBEAFE !important;
    }

    [data-theme="dark"] .modal-content {
      background-color: #1F2937 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .modal-header {
      border-bottom-color: #4B5563 !important;
    }

    [data-theme="dark"] .modal-footer {
      border-top-color: #4B5563 !important;
    }
  </style>

</head>

<body>
  <div class="container-scroller">

    <%- include ('../partials/_navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper" style="padding-left:0px;">
        <!-- partial:partials/_settings-panel.html -->
        <%- include ('../partials/SettingsDow.ejs') %>

          <!-- NavBar Start -->
          <%- include ('../partials/Sidebar.ejs') %>
            <!-- NavBar End -->

            <!-- ===== PROFESSIONAL ENTERPRISE SYSTEM SETTINGS ===== -->
            <div class="enterprise-settings-container">
              
              <!-- Header Section -->
              <div class="enterprise-header">
                <h1>System Configuration</h1>
                <p>Manage your enterprise system appearance and branding settings with precision and control.</p>
              </div>

              <!-- Settings Grid -->
              <div class="enterprise-settings-grid <%= activeTab ? 'single-column' : '' %>">

                <% if (!activeTab || activeTab === "color") { %>
                  <!-- Color Management Card -->
                  <div class="enterprise-settings-card">
                    <div class="enterprise-card-header">
                      <div class="enterprise-card-icon">
                        <i class="fas fa-palette"></i>
                      </div>
                      <h2 class="enterprise-card-title">Color Management</h2>
                    </div>

                    <!-- Text Color Configuration -->
                    <form action="/textChange" method="post">
                      <div class="enterprise-form-group">
                        <label class="enterprise-form-label">Primary Text Color</label>
                        <p class="enterprise-form-description">
                          Set the primary text color that will be applied across all user interface elements.
                        </p>
                        <input type="color" name="text_color" class="enterprise-color-input" />
                      </div>
                      <button type="submit" class="enterprise-btn enterprise-btn-primary">
                        <i class="fas fa-paint-brush"></i>
                        Apply Text Color
                      </button>
                    </form>

                    <hr style="margin: 2rem 0; border: none; border-top: 1px solid var(--enterprise-border);">

                    <!-- Background Color Configuration -->
                    <form action="/update-background-color" method="post">
                      <div class="enterprise-form-group">
                        <label class="enterprise-form-label">Background Color</label>
                        <p class="enterprise-form-description">
                          Configure the main background color for the user dashboard and interface.
                        </p>
                        <input type="color" name="background_color" class="enterprise-color-input">
                      </div>
                      <button type="submit" class="enterprise-btn enterprise-btn-primary">
                        <i class="fas fa-fill-drip"></i>
                        Apply Background Color
                      </button>
                    </form>
                  </div>
                <% } %>

                <% if (!activeTab || activeTab === "background") { %>
                  <!-- Background Image Management Card -->
                  <div class="enterprise-settings-card">
                    <div class="enterprise-card-header">
                      <div class="enterprise-card-icon">
                        <i class="fas fa-image"></i>
                      </div>
                      <h2 class="enterprise-card-title">Background Assets</h2>
                    </div>

                    <!-- Background Image Upload -->
                    <form action="/upload" method="post" enctype="multipart/form-data">
                      <div class="enterprise-form-group">
                        <label class="enterprise-form-label">Background Image Upload</label>
                        <p class="enterprise-form-description">
                          Upload a high-quality background image for your user dashboard. Recommended size: 1920x1080px.
                        </p>
                        <div class="enterprise-upload-area" id="background-image-preview">
                          <i class="fas fa-cloud-upload-alt enterprise-upload-icon"></i>
                          <div class="enterprise-upload-text">Drop your image here or click to browse</div>
                          <div class="enterprise-upload-subtext">PNG, JPG up to 10MB</div>
                          <input type="file" name="background_img" class="enterprise-file-input" accept="image/*" required id="enterprise-bg-input">
                        </div>
                      </div>
                      <button type="submit" class="enterprise-btn enterprise-btn-primary">
                        <i class="fas fa-upload"></i>
                        Upload Background
                      </button>
                    </form>

                    <!-- Current Background Preview -->
                    <% if (bg_result && bg_result.length > 0 && bg_result[0].background_img) { %>
                      <div class="enterprise-preview-section">
                        <div class="enterprise-preview-title">Current Background</div>
                        <img src="<%= bg_result[0].background_img.startsWith('http') ? bg_result[0].background_img : '/uploads/' + bg_result[0].background_img %>" alt="Current Background" class="enterprise-preview-image">
                      </div>
                    <% } %>

                    <div style="margin-top: 1.5rem;">
                      <button type="button" class="enterprise-btn enterprise-btn-danger" data-bs-toggle="modal" data-bs-target="#deleteBackgroundModal">
                        <i class="fas fa-trash-alt"></i>
                        Remove Background
                      </button>
                    </div>
                  </div>
                  <div class="modal fade" id="deleteBackgroundModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm modal-dialog-scrollable">
    <div class="modal-content rounded-3 shadow-lg">
      <div class="modal-header bg-light border-bottom-0">
        <h5 class="modal-title text-dark">Confirm Remove Background</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="text-center fs-5">Are you sure you want to remove the current background image?</p>
      </div>
      <div class="modal-footer border-top-0 d-flex justify-content-end">
        <form action="/delete-background" method="POST" style="margin: 0;">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger ms-2">Remove</button>
        </form>
      </div>
    </div>
  </div>
</div>
                <% } %>

              </div>
            </div>

            <!-- Add professional JavaScript for enhanced functionality -->
            <script>
              // Professional Enterprise File Upload Handler
              document.addEventListener('DOMContentLoaded', function() {
                const uploadArea = document.getElementById('background-image-preview');
                const fileInput = document.getElementById('enterprise-bg-input');
                
                if (uploadArea && fileInput) {
                  // Handle drag and drop
                  uploadArea.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    uploadArea.classList.add('dragover');
                  });

                  uploadArea.addEventListener('dragleave', function(e) {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                  });

                  uploadArea.addEventListener('drop', function(e) {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                    const files = e.dataTransfer.files;
                    if (files.length > 0) {
                      fileInput.files = files;
                      handleFilePreview(files[0]);
                    }
                  });

                  // Handle file input change
                  fileInput.addEventListener('change', function(e) {
                    if (e.target.files.length > 0) {
                      handleFilePreview(e.target.files[0]);
                    }
                  });

                  function handleFilePreview(file) {
                    if (file && file.type.startsWith('image/')) {
                      const reader = new FileReader();
                      reader.onload = function(e) {
                        uploadArea.style.backgroundImage = `url(${e.target.result})`;
                        uploadArea.style.backgroundSize = 'cover';
                        uploadArea.style.backgroundPosition = 'center';
                        uploadArea.querySelector('.enterprise-upload-icon').style.display = 'none';
                        uploadArea.querySelector('.enterprise-upload-text').textContent = 'Image uploaded successfully';
                        uploadArea.querySelector('.enterprise-upload-subtext').textContent = 'Click to change';
                      };
                      reader.readAsDataURL(file);
                    }
                  }
                }

                // Add smooth transitions and professional animations
                const cards = document.querySelectorAll('.enterprise-settings-card');
                cards.forEach(card => {
                  card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-4px)';
                  });
                  
                  card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(-2px)';
                  });
                });

                // Professional form validation
                const forms = document.querySelectorAll('form');
                forms.forEach(form => {
                  form.addEventListener('submit', function(e) {
                    const button = this.querySelector('button[type="submit"]');
                    if (button) {
                      button.style.opacity = '0.7';
                      button.style.transform = 'scale(0.95)';
                      const originalText = button.innerHTML;
                      button.innerHTML = '<i class="fas fa-spinner fa-spin" style="margin-right: 0.5rem;"></i>Processing...';
                      
                      setTimeout(() => {
                        button.innerHTML = originalText;
                        button.style.opacity = '1';
                        button.style.transform = 'scale(1)';
                      }, 2000);
                    }
                  });
                });
              });
            </script>
            <!-- plugins:js -->
            <script src="vendors\js\vendor.bundle.base.js"></script>
            <!-- endinject -->
            <!-- Plugin js for this page -->
            <script src="vendors\chart.js/Chart.min.js"></script>
            <script src="vendors/datatables.net/jquery.dataTables.js"></script>
            <script src="vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
            <script src="js/dataTables.select.min.js"></script>

            <!-- End plugin js for this page -->
            <!-- inject:js -->
            <script src="js/off-canvas.js"></script>
            <script src="js/hoverable-collapse.js"></script>
            <script src="js/template.js"></script>
            <script src="js/settings.js"></script>
            <!-- endinject -->
            <!-- Custom js for this page-->
            <script src="js/dashboard.js"></script>
            <script src="js/Chart.roundedBarCharts.js"></script>
            <!-- End custom js for this page-->
            <!-- Bootstrap  -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
</body>

</html>