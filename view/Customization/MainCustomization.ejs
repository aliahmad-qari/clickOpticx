<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>System Settings - Admin Panel</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="vendors/feather/feather.css">
  <link rel="stylesheet" href="vendors\ti-icons\css\themify-icons.css">
  <link rel="stylesheet" href="vendors/css/vendor.bundle.base.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <link rel="stylesheet" href="vendors/datatables.net-bs4/dataTables.bootstrap4.css">
  <link rel="stylesheet" href="vendors\ti-icons\css\themify-icons.css">
  <link rel="stylesheet" type="text/css" href="js/select.dataTables.min.css">
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="css/vertical-layout-light/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="images/favicon.png" />

  <!-- Material Design Icons CSS -->
  <link href="https://cdn.jsdelivr.net/npm/@mdi/font@7.2.96/css/materialdesignicons.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --primary: #4F46E5;
      --primary-dark: #3730A3;
      --secondary: #10B981;
      --warning: #F59E0B;
      --danger: #EF4444;
      --success: #22C55E;
      --dark: #1F2937;
      --gray-50: #F9FAFB;
      --gray-100: #F3F4F6;
      --gray-200: #E5E7EB;
      --gray-300: #D1D5DB;
      --gray-400: #9CA3AF;
      --gray-500: #6B7280;
      --gray-600: #4B5563;
      --gray-700: #374151;
      --gray-800: #1F2937;
      --gray-900: #111827;
      --white: #FFFFFF;
      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
      --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    }

    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      background-color: var(--gray-50);
      color: var(--gray-900);
      margin: 0;
      overflow-x: hidden;
    }

    .main-panel {
      padding: 2rem;
      background-color: var(--gray-50);
      min-height: calc(100vh - 70px);
    }

    .page-header {
      margin-bottom: 2rem;
      text-align: center;
    }

    .page-header h1 {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--gray-900);
      margin: 0 0 0.5rem 0;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
    }

    .page-header h1 i {
      color: var(--primary);
    }

    .page-header p {
      font-size: 1.125rem;
      color: var(--gray-600);
      margin: 0;
    }

    .settings-container {
      display: grid;
      grid-template-columns: 320px 1fr;
      gap: 2rem;
      max-width: 1400px;
      margin: 0 auto;
      align-items: start;
    }

    /* Professional Sidebar Navigation */
    .settings-sidebar {
      background: var(--white);
      border-radius: 16px;
      box-shadow: var(--shadow-lg);
      overflow: hidden;
      position: sticky;
      top: 2rem;
      border: 1px solid var(--gray-200);
    }

    .sidebar-header {
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      color: white;
      padding: 1.5rem;
      text-align: center;
    }

    .sidebar-header h2 {
      margin: 0;
      font-size: 1.125rem;
      font-weight: 600;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .nav-sections {
      padding: 0;
    }

    .nav-section {
      border-bottom: 1px solid var(--gray-200);
    }

    .nav-section:last-child {
      border-bottom: none;
    }

    .section-title {
      background: var(--gray-50);
      padding: 1rem 1.5rem;
      font-weight: 600;
      font-size: 0.875rem;
      color: var(--gray-700);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      border-bottom: 1px solid var(--gray-200);
    }

    .section-title i {
      color: var(--primary);
      font-size: 1rem;
    }

    .nav-item {
      display: block;
      padding: 0.75rem 1.5rem 0.75rem 3rem;
      color: var(--gray-700);
      text-decoration: none;
      font-size: 0.875rem;
      font-weight: 500;
      border: none;
      background: none;
      width: 100%;
      text-align: left;
      cursor: pointer;
      transition: all 0.2s ease;
      border-left: 3px solid transparent;
    }

    .nav-item:hover {
      background: var(--gray-50);
      color: var(--primary);
      border-left-color: var(--primary);
    }

    .nav-item.active {
      background: var(--primary);
      color: white;
      border-left-color: var(--primary-dark);
      font-weight: 600;
    }

    /* Main Content Area */
    .settings-content {
      background: var(--white);
      border-radius: 16px;
      box-shadow: var(--shadow-lg);
      overflow: hidden;
      border: 1px solid var(--gray-200);
    }

    .content-header {
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      color: white;
      padding: 2rem;
      text-align: center;
    }

    .content-header h1 {
      margin: 0;
      font-size: 1.875rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
    }

    .content-header p {
      margin: 0.5rem 0 0 0;
      opacity: 0.9;
      font-size: 1rem;
    }

    .setting-panel {
      display: none;
      padding: 2rem;
    }

    .setting-panel.active {
      display: block;
      animation: slideIn 0.3s ease;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .panel-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--gray-900);
      margin: 0 0 0.5rem 0;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .panel-title i {
      color: var(--primary);
    }

    .panel-description {
      color: var(--gray-600);
      font-size: 1rem;
      margin: 0 0 2rem 0;
      line-height: 1.5;
    }

    .form-card {
      background: var(--gray-50);
      border: 1px solid var(--gray-200);
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-label {
      display: block;
      font-weight: 600;
      color: var(--gray-700);
      margin-bottom: 0.5rem;
      font-size: 0.875rem;
    }

    .form-control {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 2px solid var(--gray-200);
      border-radius: 8px;
      font-size: 0.875rem;
      transition: all 0.2s ease;
      background: var(--white);
    }

    .form-control:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }

    .color-input {
      width: 100%;
      height: 3rem;
      padding: 0.25rem;
      border: 2px solid var(--gray-200);
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .color-input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }

    .upload-area {
      border: 2px dashed var(--gray-300);
      border-radius: 12px;
      padding: 2rem;
      text-align: center;
      background: var(--white);
      transition: all 0.2s ease;
      cursor: pointer;
      position: relative;
    }

    .upload-area:hover {
      border-color: var(--primary);
      background: var(--gray-50);
    }

    .upload-area input[type="file"] {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      cursor: pointer;
    }

    .upload-icon {
      font-size: 2.5rem;
      color: var(--gray-400);
      margin-bottom: 1rem;
    }

    .upload-text {
      color: var(--gray-600);
      font-size: 0.875rem;
      margin: 0;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.875rem;
      cursor: pointer;
      transition: all 0.2s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-primary:hover {
      transform: translateY(-1px);
      box-shadow: var(--shadow-lg);
    }

    .btn-danger {
      background: var(--danger);
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.75rem;
      cursor: pointer;
      transition: all 0.2s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
    }

    .btn-danger:hover {
      background: #dc2626;
      transform: translateY(-1px);
    }

    .preview-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
    }

    .preview-item {
      position: relative;
      border-radius: 8px;
      overflow: hidden;
      background: var(--gray-100);
      aspect-ratio: 1;
    }

    .preview-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .delete-overlay {
      position: absolute;
      top: 0.25rem;
      right: 0.25rem;
      background: var(--danger);
      color: white;
      border: none;
      border-radius: 50%;
      width: 1.5rem;
      height: 1.5rem;
      cursor: pointer;
      font-size: 0.75rem;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0.9;
      transition: opacity 0.2s ease;
    }

    .delete-overlay:hover {
      opacity: 1;
    }

    .current-setting {
      background: var(--white);
      border: 1px solid var(--gray-200);
      border-radius: 8px;
      padding: 1rem;
      margin-top: 1rem;
    }

    .current-label {
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      color: var(--gray-500);
      letter-spacing: 0.05em;
      margin-bottom: 0.5rem;
    }

    .current-value {
      font-size: 1rem;
      color: var(--gray-900);
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
      .settings-container {
        grid-template-columns: 280px 1fr;
        gap: 1.5rem;
      }
    }

    @media (max-width: 768px) {
      .main-panel {
        padding: 1rem;
      }

      .page-header h1 {
        font-size: 2rem;
      }

      .settings-container {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .settings-sidebar {
        position: static;
        order: 2;
      }

      .settings-content {
        order: 1;
      }

      .content-header {
        padding: 1.5rem;
      }

      .content-header h1 {
        font-size: 1.5rem;
      }

      .setting-panel {
        padding: 1.5rem;
      }

      .sidebar-header {
        padding: 1rem;
      }

      .sidebar-header h2 {
        font-size: 1rem;
      }

      .section-title {
        padding: 0.75rem 1rem;
        font-size: 0.8125rem;
      }

      .nav-item {
        padding: 0.625rem 1rem 0.625rem 2.5rem;
        font-size: 0.8125rem;
      }
    }

    @media (max-width: 480px) {
      .main-panel {
        padding: 0.75rem;
      }

      .page-header h1 {
        font-size: 1.75rem;
      }

      .page-header p {
        font-size: 1rem;
      }

      .content-header {
        padding: 1rem;
      }

      .content-header h1 {
        font-size: 1.25rem;
      }

      .setting-panel {
        padding: 1rem;
      }

      .form-card {
        padding: 1rem;
      }

      .upload-area {
        padding: 1.5rem 1rem;
      }

      .upload-icon {
        font-size: 2rem;
      }

      .preview-grid {
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      }
    }
  </style>
</head>

<body>
  <div class="container-scroller">
    <%- include ('../partials/_navbar.ejs') %>
    
    <div class="container-fluid page-body-wrapper" style="padding-left:0px;">
      <%- include ('../partials/SettingsDow.ejs') %>
      <%- include ('../partials/Sidebar.ejs') %>
      
      <div class="main-panel">
        <!-- Page Header -->
        <div class="page-header">
          <h1><i class="fas fa-cogs"></i> System Settings</h1>
          <p>Manage your application's appearance, branding, and configuration settings</p>
        </div>

        <!-- Settings Layout -->
        <div class="settings-container">
          
          <!-- Professional Sidebar Navigation -->
          <div class="settings-sidebar">
            <div class="sidebar-header">
              <h2><i class="fas fa-cogs"></i> Settings Panel</h2>
            </div>
            
            <div class="nav-sections">
              <!-- Dashboard Customization -->
              <div class="nav-section">
                <div class="section-title">
                  <i class="fas fa-tachometer-alt"></i>
                  <span>Dashboard</span>
                </div>
                
                <button class="nav-item" data-panel="text-color">
                  Text Colors
                </button>
                
                <button class="nav-item" data-panel="background-color">
                  Background Colors  
                </button>
                
                <button class="nav-item" data-panel="background-image">
                  Background Images
                </button>
              </div>

              <!-- Media Management -->
              <div class="nav-section">
                <div class="section-title">
                  <i class="fas fa-images"></i>
                  <span>Media</span>
                </div>
                
                <button class="nav-item" data-panel="add-slider">
                  Add Slider Image
                </button>
                
                <button class="nav-item" data-panel="manage-sliders">
                  Manage Sliders
                </button>
              </div>

              <!-- Branding -->
              <div class="nav-section">
                <div class="section-title">
                  <i class="fas fa-paint-brush"></i>
                  <span>Branding</span>
                </div>
                
                <button class="nav-item" data-panel="brand-logo">
                  Company Logo
                </button>
                
                <button class="nav-item" data-panel="brand-text">
                  Brand Text
                </button>
                
                <button class="nav-item" data-panel="footer-icons">
                  Footer Icons
                </button>
              </div>
            </div>
          </div>

          <!-- Main Content Area -->
          <div class="settings-content">
            <!-- Content Header -->
            <div class="content-header">
              <h1><i class="fas fa-palette"></i> System Configuration</h1>
              <p>Configure and customize your application settings</p>
            </div>

            <!-- Settings Panels -->
            <div class="panels-container">
              
              <!-- Text Color Panel -->
              <div class="setting-panel active" id="text-color-panel">
                <h2 class="panel-title">
                  <i class="fas fa-font"></i> Text Color Settings
                </h2>
                <p class="panel-description">
                  Customize the text color that appears throughout your user dashboard and interface.
                </p>
                
                <div class="form-card">
                  <form action="/textChange" method="post">
                    <div class="form-group">
                      <label class="form-label">Dashboard Text Color</label>
                      <input type="color" name="text_color" class="color-input" />
                    </div>
                    <button type="submit" class="btn-primary">
                      <i class="fas fa-save"></i> Apply Color Changes
                    </button>
                  </form>
                </div>
              </div>

              <!-- Background Color Panel -->
              <div class="setting-panel" id="background-color-panel">
                <h2 class="panel-title">
                  <i class="fas fa-fill-drip"></i> Background Color Settings
                </h2>
                <p class="panel-description">
                  Set the primary background color for your dashboard and user interface elements.
                </p>
                
                <div class="form-card">
                  <form action="/update-background-color" method="post">
                    <div class="form-group">
                      <label class="form-label">Dashboard Background Color</label>
                      <input type="color" name="background_color" class="color-input">
                    </div>
                    <button type="submit" class="btn-primary">
                      <i class="fas fa-save"></i> Apply Background Color
                    </button>
                  </form>
                </div>
              </div>

              <!-- Background Image Panel -->
              <div class="setting-panel" id="background-image-panel">
                <h2 class="panel-title">
                  <i class="fas fa-image"></i> Background Image Settings
                </h2>
                <p class="panel-description">
                  Upload custom background images to personalize your dashboard appearance.
                </p>
                
                <div class="form-card">
                  <form action="/upload" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label class="form-label">Upload Background Image</label>
                      <div class="upload-area" id="bg-upload-area">
                        <i class="fas fa-cloud-upload-alt upload-icon"></i>
                        <p class="upload-text">Click or drag to upload background image</p>
                        <input type="file" name="background_img" accept="image/*" required id="bg-file-input">
                      </div>
                    </div>
                    <button type="submit" class="btn-primary">
                      <i class="fas fa-upload"></i> Upload Image
                    </button>
                  </form>

                  <div style="margin-top: 1.5rem;">
                    <button type="button" class="btn-danger" data-bs-toggle="modal" data-bs-target="#deleteBackgroundModal">
                      <i class="fas fa-trash-alt"></i> Remove Current Background
                    </button>
                  </div>

                  <!-- Current Background Preview -->
                  <% if (typeof bg_result !== 'undefined' && bg_result.length > 0) { %>
                    <div class="current-setting">
                      <div class="current-label">Current Background</div>
                      <div class="preview-grid">
                        <% bg_result.forEach(result => { %>
                          <div class="preview-item">
                            <img src="/Uploads/<%= result.background_img %>" alt="Current Background" class="preview-image">
                          </div>
                        <% }) %>
                      </div>
                    </div>
                  <% } %>
                </div>
              </div>

              <!-- Add Slider Panel -->
              <div class="setting-panel" id="add-slider-panel">
                <h2 class="panel-title">
                  <i class="fas fa-plus-circle"></i> Add Slider Image
                </h2>
                <p class="panel-description">
                  Upload new images for your homepage carousel slider to showcase content or promotions.
                </p>
                
                <div class="form-card">
                  <form action="/Slider_img" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label class="form-label">Upload Slider Image</label>
                      <div class="upload-area" id="slider-upload-area">
                        <i class="fas fa-images upload-icon"></i>
                        <p class="upload-text">Click or drag to upload slider image</p>
                        <input type="file" name="Slider_1" accept="image/*" required id="slider-file-input">
                      </div>
                    </div>
                    <button type="submit" class="btn-primary">
                      <i class="fas fa-plus"></i> Add to Slider
                    </button>
                  </form>
                </div>
              </div>

              <!-- Manage Sliders Panel -->
              <div class="setting-panel" id="manage-sliders-panel">
                <h2 class="panel-title">
                  <i class="fas fa-list"></i> Manage Slider Images
                </h2>
                <p class="panel-description">
                  View, organize, and delete existing slider images from your homepage carousel.
                </p>
                
                <div class="form-card">
                  <% if (typeof slider !== 'undefined' && slider.length > 0) { %>
                    <div class="preview-grid">
                      <% slider.forEach(sliderItem => { %>
                        <div class="preview-item">
                          <img src="/uploads/<%= sliderItem.Slider_1 %>" alt="Slider Image" class="preview-image">
                          <button type="button" class="delete-overlay" onclick="deleteSlider('<%= sliderItem.id %>')">
                            <i class="fas fa-times"></i>
                          </button>
                        </div>
                      <% }) %>
                    </div>
                  <% } else { %>
                    <div style="text-align: center; padding: 3rem; color: var(--gray-500);">
                      <i class="fas fa-images" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;"></i>
                      <p style="margin: 0; font-size: 1.125rem;">No slider images uploaded yet</p>
                      <p style="margin: 0.5rem 0 0 0; font-size: 0.875rem;">Add your first slider image using the form above</p>
                    </div>
                  <% } %>
                </div>
              </div>

              <!-- Brand Logo Panel -->
              <div class="setting-panel" id="brand-logo-panel">
                <h2 class="panel-title">
                  <i class="fas fa-image"></i> Company Logo Settings
                </h2>
                <p class="panel-description">
                  Upload and manage your company's brand logo that appears in the navigation header.
                </p>
                
                <div class="form-card">
                  <form action="/index" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label class="form-label">Upload Company Logo</label>
                      <div class="upload-area" id="header-upload-area">
                        <i class="fas fa-image upload-icon"></i>
                        <p class="upload-text">Click or drag to upload brand logo</p>
                        <input type="file" name="navImg" accept="image/*" required id="header-file-input">
                      </div>
                    </div>
                    <button type="submit" class="btn-primary">
                      <i class="fas fa-upload"></i> Update Company Logo
                    </button>
                  </form>

                  <!-- Current Logo Preview -->
                  <% if (typeof bg_result !== 'undefined' && bg_result.length > 0) { %>
                    <% bg_result.forEach(result => { %>
                      <% if (result.nav_imgs) { %>
                        <div class="current-setting">
                          <div class="current-label">Current Logo</div>
                          <div class="preview-grid">
                            <div class="preview-item">
                              <img src="/uploads/<%= result.nav_imgs %>" alt="Brand Logo" class="preview-image">
                            </div>
                          </div>
                        </div>
                      <% } %>
                    <% }) %>
                  <% } %>
                </div>
              </div>

              <!-- Brand Text Panel -->
              <div class="setting-panel" id="brand-text-panel">
                <h2 class="panel-title">
                  <i class="fas fa-text-width"></i> Brand Text Settings
                </h2>
                <p class="panel-description">
                  Configure your website's brand text, tagline, or company name that appears alongside your logo.
                </p>
                
                <div class="form-card">
                  <form action="/logoTextChange" method="post">
                    <div class="form-group">
                      <label class="form-label">Brand Text or Company Name</label>
                      <input type="text" name="logo_text" class="form-control" placeholder="Enter your company name or tagline" required>
                    </div>
                    <button type="submit" class="btn-primary">
                      <i class="fas fa-save"></i> Update Brand Text
                    </button>
                  </form>

                  <!-- Current Text Display -->
                  <% if (typeof bg_result !== 'undefined' && bg_result.length > 0) { %>
                    <% bg_result.forEach(result => { %>
                      <% if (result.logo_text) { %>
                        <div class="current-setting">
                          <div class="current-label">Current Brand Text</div>
                          <div class="current-value"><%= result.logo_text %></div>
                        </div>
                      <% } %>
                    <% }) %>
                  <% } %>
                </div>
              </div>

              <!-- Footer Icons Panel -->
              <div class="setting-panel" id="footer-icons-panel">
                <h2 class="panel-title">
                  <i class="fas fa-icons"></i> Footer Icons Settings
                </h2>
                <p class="panel-description">
                  Add social media icons and links to your website's footer for better user engagement.
                </p>
                
                <div class="form-card">
                  <form action="/updateIcon" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label class="form-label">Upload Footer Icon</label>
                      <div class="upload-area" id="footer-upload-area">
                        <i class="fas fa-icons upload-icon"></i>
                        <p class="upload-text">Click or drag to upload footer icon</p>
                        <input type="file" name="Icon" accept="image/*" required id="footer-file-input">
                      </div>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-label">Icon Link URL</label>
                      <input type="url" name="Link" class="form-control" placeholder="https://facebook.com/yourpage" required>
                    </div>
                    
                    <button type="submit" class="btn-primary">
                      <i class="fas fa-plus"></i> Add Footer Icon
                    </button>
                  </form>

                  <!-- Current Footer Icons -->
                  <% if (typeof IconSliders !== 'undefined' && IconSliders.length > 0) { %>
                    <div class="current-setting">
                      <div class="current-label">Current Footer Icons</div>
                      <div class="preview-grid">
                        <% IconSliders.forEach(icon => { %>
                          <div class="preview-item">
                            <img src="/uploads/<%= icon.Icon %>" alt="Footer Icon" class="preview-image">
                            <button type="button" class="delete-overlay" onclick="deleteIcon('<%= icon.id %>')">
                              <i class="fas fa-times"></i>
                            </button>
                          </div>
                        <% }) %>
                      </div>
                    </div>
                  <% } else { %>
                    <div style="text-align: center; padding: 3rem; color: var(--gray-500);">
                      <i class="fas fa-icons" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;"></i>
                      <p style="margin: 0; font-size: 1.125rem;">No footer icons added yet</p>
                      <p style="margin: 0.5rem 0 0 0; font-size: 0.875rem;">Add social media or other icons to your footer</p>
                    </div>
                  <% } %>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Delete Background Modal -->
  <div class="modal fade" id="deleteBackgroundModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">Delete Background Image</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete the background image? This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <form action="/delete-background" method="POST">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- JavaScript -->
  <script src="vendors\js\vendor.bundle.base.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    // Professional Settings Navigation
    document.addEventListener('DOMContentLoaded', function() {
      const navItems = document.querySelectorAll('.nav-item');
      const settingPanels = document.querySelectorAll('.setting-panel');
      
      // Handle navigation item clicks
      navItems.forEach(item => {
        item.addEventListener('click', function() {
          const panelName = this.getAttribute('data-panel');
          const targetPanel = document.getElementById(panelName + '-panel');
          
          // Remove active class from all nav items
          navItems.forEach(otherItem => {
            otherItem.classList.remove('active');
          });
          
          // Hide all setting panels
          settingPanels.forEach(panel => {
            panel.classList.remove('active');
          });
          
          // Show target panel and activate current item
          if (targetPanel) {
            targetPanel.classList.add('active');
            this.classList.add('active');
            
            // Update content header based on selection
            updateContentHeader(panelName);
          }
        });
      });
      
      // Initialize first panel as active
      if (navItems.length > 0) {
        navItems[0].click();
      }
    });

    // Update content header dynamically
    function updateContentHeader(panelName) {
      const headerTitle = document.querySelector('.content-header h1');
      const headerDescription = document.querySelector('.content-header p');
      
      const headers = {
        'text-color': {
          title: '<i class="fas fa-font"></i> Text Color Configuration',
          description: 'Customize text colors for your dashboard interface'
        },
        'background-color': {
          title: '<i class="fas fa-fill-drip"></i> Background Color Configuration',
          description: 'Set background colors for your application'
        },
        'background-image': {
          title: '<i class="fas fa-image"></i> Background Image Management',
          description: 'Upload and manage background images'
        },
        'add-slider': {
          title: '<i class="fas fa-plus-circle"></i> Add Slider Image',
          description: 'Upload new images for your homepage slider'
        },
        'manage-sliders': {
          title: '<i class="fas fa-list"></i> Slider Management',
          description: 'Manage your existing slider images'
        },
        'brand-logo': {
          title: '<i class="fas fa-image"></i> Brand Logo Settings',
          description: 'Upload and configure your company logo'
        },
        'brand-text': {
          title: '<i class="fas fa-text-width"></i> Brand Text Settings',
          description: 'Configure your brand text and taglines'
        },
        'footer-icons': {
          title: '<i class="fas fa-icons"></i> Footer Icon Settings',
          description: 'Manage social media and footer icons'
        }
      };
      
      if (headers[panelName]) {
        headerTitle.innerHTML = headers[panelName].title;
        headerDescription.textContent = headers[panelName].description;
      }
    }

    // File upload preview functionality
    function setupFilePreview(inputId, previewAreaId) {
      const input = document.getElementById(inputId);
      const previewArea = document.getElementById(previewAreaId);
      
      if (input && previewArea) {
        input.addEventListener('change', function(event) {
          const file = event.target.files[0];
          if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
              previewArea.style.backgroundImage = `url(${e.target.result})`;
              previewArea.style.backgroundSize = 'cover';
              previewArea.style.backgroundPosition = 'center';
              const text = previewArea.querySelector('p');
              if (text) text.style.display = 'none';
            };
            reader.readAsDataURL(file);
          }
        });
      }
    }

    // Setup file previews
    setupFilePreview('bg-file-input', 'bg-upload-area');
    setupFilePreview('slider-file-input', 'slider-upload-area');
    setupFilePreview('header-file-input', 'header-upload-area');
    setupFilePreview('footer-file-input', 'footer-upload-area');

    // Delete functions
    function deleteSlider(id) {
      if (confirm("Are you sure you want to delete this slider image?")) {
        fetch(`/Slider_img/${id}`, {
          method: 'DELETE'
        })
        .then(response => {
          if (response.ok) {
            alert("Slider deleted successfully");
            location.reload();
          } else {
            response.text().then(text => alert("Error: " + text));
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert("Something went wrong.");
        });
      }
    }

    function deleteIcon(id) {
      if (confirm("Are you sure you want to delete this icon?")) {
        fetch(`/icon_slider/${id}`, {
          method: "DELETE"
        })
        .then(response => {
          if (response.ok) {
            alert("Icon deleted successfully.");
            window.location.reload();
          } else {
            alert("Failed to delete icon.");
          }
        })
        .catch(error => {
          console.error("Delete error:", error);
          alert("Error deleting icon.");
        });
      }
    }
  </script>
</body>

</html>