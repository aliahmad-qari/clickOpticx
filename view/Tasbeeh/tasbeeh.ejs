    <script>
        let count = 0;
        let incrementValue = 1;
        let sessionCount = 0;
        let totalToday = 0;

        // Load saved data
        function loadData() {
            const saved = localStorage.getItem('tasbeeh-data');
            if (saved) {
                const data = JSON.parse(saved);
                count = data.count || 0;
                sessionCount = data.sessionCount || 0;
                totalToday = data.totalToday || 0;
                updateDisplay();
            }
        }

        // Save data
        function saveData() {
            const data = {
                count,
                sessionCount,
                totalToday,
                lastSaved: new Date().toDateString()
            };
            localStorage.setItem('tasbeeh-data', JSON.stringify(data));
        }

        // Update display
        function updateDisplay() {
            document.getElementById("counter").textContent = count;
            document.getElementById("session-count").textContent = sessionCount;
            document.getElementById("total-today").textContent = totalToday;
            document.getElementById("increment-value").textContent = incrementValue;
        }

        // Add ripple effect
        function addRipple(event) {
            const button = event.currentTarget;
            const rect = button.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            const x = event.clientX - rect.left - size / 2;
            const y = event.clientY - rect.top - size / 2;
            
            const ripple = document.createElement('span');
            ripple.style.cssText = `
                position: absolute;
                width: ${size}px;
                height: ${size}px;
                left: ${x}px;
                top: ${y}px;
                background: rgba(255, 255, 255, 0.6);
                border-radius: 50%;
                transform: scale(0);
                animation: ripple-animation 0.6s linear;
                pointer-events: none;
            `;
            
            button.appendChild(ripple);
            setTimeout(() => ripple.remove(), 600);
        }

        // Animate counter
        function animateCounter() {
            const counter = document.getElementById("counter");
            counter.classList.add("counter-animate");
            setTimeout(() => counter.classList.remove("counter-animate"), 300);
        }

        // Event listeners
        document.getElementById("increment").addEventListener("click", function (event) {
            addRipple(event);
            count += incrementValue;
            sessionCount += incrementValue;
            totalToday += incrementValue;
            updateDisplay();
            animateCounter();
            saveData();
        });

        document.getElementById("decrement").addEventListener("click", function () {
            if (count > 0) {
                count -= incrementValue;
                if (sessionCount > 0) sessionCount -= incrementValue;
                if (totalToday > 0) totalToday -= incrementValue;
                updateDisplay();
                animateCounter();
                saveData();
            }
        });

        document.getElementById("reset").addEventListener("click", function () {
            if (confirm("Are you sure you want to reset the counter?")) {
                count = 0;
                sessionCount = 0;
                updateDisplay();
                animateCounter();
                saveData();
            }
        });

        document.getElementById("increment-by").addEventListener("click", function () {
            const newValue = prompt("Enter increment value:", incrementValue);
            if (newValue && !isNaN(newValue) && newValue > 0) {
                incrementValue = parseInt(newValue);
                updateDisplay();
            }
        });

        document.getElementById("edit").addEventListener("click", function () {
            alert("Settings: You can customize increment value, reset counters, and view detailed statistics here.");
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadData();
            updateDisplay();
        });

        // Auto-save every 30 seconds
        setInterval(saveData, 30000);
    </script>
                
                
