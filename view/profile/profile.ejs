  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: #f5f7fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #2d3748;
      line-height: 1.6;
    }

    .container-scroller {
      background: #f5f7fa;
    }

    .page-body-wrapper {
      background: #f5f7fa;
    }

    .card-body {
      background: #f5f7fa;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    .user-profile {
      min-height: calc(100vh - 140px);
      padding: 0;
    }

    /* Profile Header */
    .profile-header-background {
      position: relative;
      height: 280px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 20px 20px 0 0;
      overflow: hidden;
      margin-bottom: 0;
    }

    .profile-header-background img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0.3;
    }

    /* Profile Card */
    .profile-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      padding: 0;
      margin-bottom: 30px;
      position: relative;
      border: 1px solid #e2e8f0;
    }

    /* Profile Info Left */
    .profile-info-left {
      text-align: center;
      padding: 40px 30px 30px;
      background: white;
      border-radius: 20px;
      position: relative;
      top: -100px;
      margin-bottom: -70px;
    }

    /* Avatar Styling */
    .avatar-lg {
      width: 160px !important;
      height: 160px !important;
      border-radius: 50%;
      border: 8px solid white;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
      object-fit: cover;
      margin: 0 auto 20px;
      display: block;
      transition: all 0.3s ease;
      position: relative;
      z-index: 10;
    }

    .avatar-lg:hover {
      transform: scale(1.05);
      box-shadow: 0 20px 45px rgba(0, 0, 0, 0.2);
    }

    /* Profile Name */
    .profile-info-left h2 {
      font-size: 28px;
      font-weight: 700;
      color: #2d3748;
      margin: 20px 0 10px;
      line-height: 1.2;
    }

    .profile-info-left p {
      color: #718096;
      font-size: 16px;
      margin-bottom: 25px;
    }

    /* Update Button */
    .action-buttons .btn {
      background: linear-gradient(135deg, #667eea, #764ba2);
      border: none;
      border-radius: 50px;
      padding: 14px 35px;
      font-weight: 600;
      font-size: 16px;
      color: white;
      transition: all 0.3s ease;
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
      text-decoration: none;
      display: inline-block;
    }

    .action-buttons .btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
      color: white;
    }

    /* Right Column */
    .profile-info-right {
      padding-top: 20px;
    }

    /* Navigation Tabs */
    .nav-pills-custom-minimal {
      background: white;
      border-radius: 15px;
      padding: 8px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
      margin-bottom: 25px;
      border: 1px solid #e2e8f0;
    }

    .nav-pills-custom-minimal .nav-link {
      border-radius: 12px;
      padding: 15px 20px;
      font-weight: 600;
      color: #4a5568;
      transition: all 0.3s ease;
      border: none;
      margin: 0 3px;
      font-size: 15px;
      text-align: center;
    }

    .nav-pills-custom-minimal .nav-link:hover {
      background: rgba(102, 126, 234, 0.1);
      color: #667eea;
      transform: translateY(-2px);
    }

    .nav-pills-custom-minimal .nav-link.active {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white !important;
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    /* Tab Content */
    .tab-content {
      padding: 0;
    }

    /* Profile Detail Card */
    .profile-detail-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
      border: 1px solid #e2e8f0;
      overflow: hidden;
      margin-bottom: 20px;
    }

    .profile-detail-card .card-header {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      padding: 25px 30px;
      border: none;
    }

    .profile-detail-card .card-title {
      font-size: 20px;
      font-weight: 700;
      margin: 0;
    }

    .profile-detail-card .card-body {
      padding: 30px;
      background: white;
    }

    /* Info Rows */
    .info-row {
      display: flex;
      align-items: center;
      padding: 18px 0;
      border-bottom: 1px solid #e2e8f0;
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .info-label {
      font-weight: 600;
      color: #2d3748;
      min-width: 180px;
      display: flex;
      align-items: center;
      font-size: 15px;
    }

    .info-label i {
      color: #667eea;
      margin-right: 12px;
      font-size: 18px;
      width: 20px;
    }

    .info-value {
      background: #f7fafc;
      padding: 12px 18px;
      border-radius: 10px;
      font-weight: 500;
      flex: 1;
      margin-left: 20px;
      border: 1px solid #e2e8f0;
      color: #2d3748;
      font-size: 15px;
    }

    /* Password Form Card */
    .password-form-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
      border: 1px solid #e2e8f0;
      padding: 35px;
    }

    .password-form-card h4 {
      color: #2d3748;
      font-weight: 700;
      font-size: 24px;
      margin-bottom: 8px;
    }

    .password-form-card p {
      color: #718096;
      margin-bottom: 30px;
    }

    /* Form Controls */
    .form-control {
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      padding: 14px 18px;
      font-size: 15px;
      transition: all 0.3s ease;
      background: white;
    }

    .form-control:focus {
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
      background: white;
    }

    .form-label {
      font-weight: 600;
      color: #2d3748;
      margin-bottom: 8px;
      font-size: 15px;
    }

    .input-group {
      margin-bottom: 20px;
    }

    .toggle-password {
      background: #f7fafc;
      border: 2px solid #e2e8f0;
      border-left: none;
      border-radius: 0 12px 12px 0;
      color: #4a5568;
    }

    .toggle-password:hover {
      background: #edf2f7;
      color: #667eea;
    }

    /* Buttons */
    .btn-primary {
      background: linear-gradient(135deg, #667eea, #764ba2);
      border: none;
      border-radius: 12px;
      padding: 14px 30px;
      font-weight: 600;
      font-size: 16px;
      color: white;
      transition: all 0.3s ease;
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
      color: white;
    }

    /* Equipment Card */
    .equipment-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
      border: 1px solid #e2e8f0;
      padding: 35px;
    }

    .equipment-card h4 {
      color: #2d3748;
      font-weight: 700;
      font-size: 24px;
      margin-bottom: 25px;
      text-align: center;
    }

    /* Table Styling */
    .table {
      background: white;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
      margin: 0;
    }

    .table th {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      font-weight: 600;
      padding: 15px;
      border: none;
      font-size: 15px;
    }

    .table td {
      padding: 15px;
      border: none;
      border-bottom: 1px solid #e2e8f0;
      font-size: 14px;
      color: #2d3748;
    }

    .table tbody tr:hover {
      background: #f7fafc;
    }

    /* Modal Styling */
    .modal-content {
      background: white;
      border-radius: 20px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    }

    .modal-header {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      border-radius: 20px 20px 0 0;
      border: none;
      padding: 25px 30px;
    }

    .modal-title {
      font-weight: 700;
      font-size: 20px;
    }

    .modal-body {
      padding: 30px;
    }

    .profile-img {
      border-radius: 50%;
      border: 4px solid white;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      object-fit: cover;
    }

    .custom-file-btn {
      background: linear-gradient(135deg, #667eea, #764ba2);
      border: none;
      border-radius: 12px;
      padding: 12px 20px;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
    }

    .custom-file-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
      color: white;
    }

    .btn-success {
      background: linear-gradient(135deg, #48bb78, #38a169);
      border: none;
      border-radius: 12px;
      padding: 12px 25px;
      font-weight: 600;
      color: white;
    }

    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(72, 187, 120, 0.3);
      color: white;
    }

    .custom-cancel-btn {
      background: linear-gradient(135deg, #f56565, #e53e3e);
      color: white;
      border: none;
      border-radius: 12px;
      padding: 12px 25px;
      font-weight: 600;
    }

    .custom-cancel-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(245, 101, 101, 0.3);
      color: white;
    }

    /* Stats Cards */
    .stats-card {
      background: white;
      border-radius: 16px;
      padding: 24px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      border: 1px solid #e2e8f0;
      display: flex;
      align-items: center;
      transition: all 0.3s ease;
    }

    .stats-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }

    .stats-icon {
      width: 60px;
      height: 60px;
      border-radius: 12px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 16px;
    }

    .stats-icon.security {
      background: linear-gradient(135deg, #48bb78, #38a169);
    }

    .stats-icon.equipment {
      background: linear-gradient(135deg, #ed8936, #dd6b20);
    }

    .stats-icon.status {
      background: linear-gradient(135deg, #9f7aea, #805ad5);
    }

    .stats-icon i {
      color: white;
      font-size: 24px;
    }

    .stats-info h3 {
      font-size: 20px;
      font-weight: 700;
      color: #2d3748;
      margin: 0 0 4px 0;
    }

    .stats-info p {
      color: #718096;
      margin: 0;
      font-size: 14px;
    }

    /* Profile Main Card */
    .profile-main-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
      border: 1px solid #e2e8f0;
      overflow: hidden;
      margin-bottom: 24px;
    }

    .profile-header {
      position: relative;
      height: 120px;
    }

    .profile-bg {
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .profile-avatar-section {
      position: absolute;
      bottom: -40px;
      left: 50%;
      transform: translateX(-50%);
    }

    .profile-avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      border: 4px solid white;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
      object-fit: cover;
    }

    .profile-status {
      position: absolute;
      bottom: 8px;
      right: 8px;
      width: 16px;
      height: 16px;
      background: #48bb78;
      border: 3px solid white;
      border-radius: 50%;
    }

    .profile-body {
      padding: 50px 24px 24px;
      text-align: center;
    }

    .profile-name {
      font-size: 20px;
      font-weight: 700;
      color: #2d3748;
      margin: 0 0 4px 0;
    }

    .profile-role {
      color: #718096;
      font-size: 14px;
      margin: 0 0 20px 0;
    }

    .profile-stats-mini {
      display: flex;
      justify-content: space-around;
      margin-bottom: 24px;
      padding: 16px 0;
      border-top: 1px solid #e2e8f0;
      border-bottom: 1px solid #e2e8f0;
    }

    .stat-mini {
      text-align: center;
    }

    .stat-value {
      display: block;
      font-size: 16px;
      font-weight: 700;
      color: #2d3748;
    }

    .stat-label {
      font-size: 12px;
      color: #718096;
    }

    .btn-edit-profile {
      width: 100%;
      padding: 12px;
      font-weight: 600;
    }

    /* Quick Actions Card */
    .quick-actions-card {
      background: white;
      border-radius: 16px;
      padding: 24px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      border: 1px solid #e2e8f0;
    }

    .quick-actions-card .card-title {
      font-size: 16px;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 20px;
    }

    .quick-action-item {
      display: flex;
      align-items: center;
      padding: 12px 0;
      border-bottom: 1px solid #e2e8f0;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .quick-action-item:last-child {
      border-bottom: none;
    }

    .quick-action-item:hover {
      background: #f7fafc;
      margin: 0 -16px;
      padding-left: 16px;
      padding-right: 16px;
      border-radius: 8px;
    }

    .quick-action-item i:first-child {
      color: #667eea;
      margin-right: 12px;
      font-size: 16px;
      width: 20px;
    }

    .quick-action-item span {
      flex: 1;
      font-weight: 500;
      color: #2d3748;
    }

    .quick-action-item i:last-child {
      color: #cbd5e0;
      font-size: 14px;
    }

    /* Professional Tabs */
    .professional-tabs {
      margin-bottom: 24px;
    }

    .custom-nav-pills {
      background: white;
      border-radius: 16px;
      padding: 8px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      border: 1px solid #e2e8f0;
      display: flex;
      gap: 4px;
    }

    .custom-nav-pills .nav-link {
      flex: 1;
      border-radius: 12px;
      padding: 16px 20px;
      font-weight: 600;
      color: #4a5568;
      transition: all 0.3s ease;
      border: none;
      background: transparent;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .custom-nav-pills .nav-link i {
      margin-right: 8px;
      font-size: 16px;
    }

    .custom-nav-pills .nav-link:hover {
      background: rgba(102, 126, 234, 0.1);
      color: #667eea;
    }

    .custom-nav-pills .nav-link.active {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white !important;
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    /* Content Cards */
    .content-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      border: 1px solid #e2e8f0;
      margin-bottom: 24px;
      overflow: hidden;
    }

    .card-header-custom {
      padding: 20px 24px;
      border-bottom: 1px solid #e2e8f0;
      display: flex;
      align-items: center;
      justify-content: between;
      background: #f8fafc;
    }

    .card-header-custom h6 {
      margin: 0;
      font-size: 16px;
      font-weight: 700;
      color: #2d3748;
      flex: 1;
    }

    .card-body-custom {
      padding: 24px;
    }

    /* Detail Items */
    .detail-item {
      margin-bottom: 24px;
    }

    .detail-item label {
      font-size: 12px;
      font-weight: 600;
      color: #718096;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 8px;
      display: block;
    }

    .detail-value {
      display: flex;
      align-items: center;
      padding: 12px 16px;
      background: #f7fafc;
      border-radius: 10px;
      border: 1px solid #e2e8f0;
    }

    .detail-value i {
      color: #667eea;
      margin-right: 12px;
      font-size: 16px;
      width: 16px;
    }

    .detail-value span {
      font-weight: 500;
      color: #2d3748;
    }

    /* Activity Items */
    .activity-item {
      display: flex;
      align-items: center;
      padding: 12px 0;
      border-bottom: 1px solid #e2e8f0;
    }

    .activity-item:last-child {
      border-bottom: none;
    }

    .activity-icon {
      margin-right: 12px;
    }

    .activity-icon i {
      font-size: 16px;
    }

    .activity-content p {
      margin: 0;
      font-weight: 500;
      color: #2d3748;
      font-size: 14px;
    }

    .activity-content small {
      color: #718096;
      font-size: 12px;
    }

    /* Preference Items */
    .preference-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 12px 0;
      border-bottom: 1px solid #e2e8f0;
    }

    .preference-item:last-child {
      border-bottom: none;
    }

    .preference-item span {
      font-weight: 500;
      color: #2d3748;
    }

    /* Security Items */
    .security-item {
      display: flex;
      align-items: center;
      padding: 12px 0;
      border-bottom: 1px solid #e2e8f0;
    }

    .security-item:last-child {
      border-bottom: none;
    }

    .security-icon {
      margin-right: 12px;
    }

    .security-icon.success i {
      color: #48bb78;
      font-size: 16px;
    }

    .security-icon.warning i {
      color: #ed8936;
      font-size: 16px;
    }

    .security-content p {
      margin: 0;
      font-weight: 500;
      color: #2d3748;
      font-size: 14px;
    }

    .security-content small {
      color: #718096;
      font-size: 12px;
    }

    /* Login Items */
    .login-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 12px 0;
      border-bottom: 1px solid #e2e8f0;
    }

    .login-item:last-child {
      border-bottom: none;
    }

    .login-info p {
      margin: 0;
      font-weight: 500;
      color: #2d3748;
      font-size: 14px;
    }

    .login-info small {
      color: #718096;
      font-size: 12px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container-fluid {
        padding: 10px;
      }
      
      .custom-nav-pills {
        flex-direction: column;
      }
      
      .custom-nav-pills .nav-link {
        justify-content: flex-start;
      }
      
      .stats-card {
        padding: 16px;
      }
      
      .stats-icon {
        width: 50px;
        height: 50px;
        margin-right: 12px;
      }
      
      .stats-icon i {
        font-size: 20px;
      }
      
      .profile-main-card {
        margin-bottom: 20px;
      }
      
      .card-header-custom {
        padding: 16px 20px;
      }
      
      .card-body-custom {
        padding: 20px;
      }
    }

    /* Professional Tab Content */
    .professional-tab-content {
      padding: 0;
    }

    .professional-tab-content .tab-pane {
      padding: 0;
    }

    /* Form Styling */
    .form-check-input:checked {
      background-color: #667eea;
      border-color: #667eea;
    }

    .badge {
      font-size: 11px;
      padding: 4px 8px;
      border-radius: 6px;
    }

