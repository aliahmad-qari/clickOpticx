  <style>
    .user-profile {
      padding-bottom: 30px;
    }

    .profile-header-background {
      margin: -30px -30px 0 -30px;
    }

    .profile-header-background img {
      width: 100%;
      height: 135px;
    }

    .profile-info-left {
      position: relative;
      top: -92px;
    }

    .profile-info-left h2 {
      font-family: "josefinslab-semibold";
      margin-bottom: 30px;
    }

    .profile-info-left .section {
      margin-top: 50px;
    }

    .profile-info-left .section h3 {
      font-size: 1.1em;
      font-weight: 700;
      border-bottom: 1px solid #ccc;
      padding-bottom: 10px;
    }

    .profile-info-left ul.list-social>li {
      line-height: 2.3;
    }

    .profile-info-left ul.list-social>li i {
      font-size: 16px;
      min-width: 16px;
      line-height: 1;
      position: relative;
      top: 1px;
    }

    .profile-info-left ul.list-social>li a {
      color: #696565;
    }

    .profile-info-right .tab-content {
      padding: 30px 8px;
      background-color: transparent;
      border-radius: 23px;
    }

    @media screen and (max-width: 768px) {
      .profile-info-right {
        position: relative;
        top: -70px;
      }
    }

    /* Followers & Following */
    .user-follower,
    .user-following {
      position: relative;
      margin-bottom: 40px;
    }

    .user-follower img,
    .user-following img {
      border-radius: 2px;
      width: 40px;
    }

    .user-follower a,
    .user-following a {
      font-size: 1.1em;
    }

    .user-follower .username,
    .user-following .username {
      font-size: 0.9em;
      line-height: 1.5;
    }

    .user-follower .btn,
    .user-following .btn {
      position: absolute;
      top: 0;
      right: 0;
      min-width: 92px;
    }

    /* Follow Button */
    .btn-toggle-following {
      background-color: #7bae16;
      color: #fff;
    }

    .btn-toggle-following:hover {
      background-color: #ef2020;
      color: #fff;
    }

    .btn-toggle-following:hover span {
      display: none;
    }

    .btn-toggle-following:hover:after {
      content: 'Unfollow';
    }

    .btn-toggle-following:hover i:before {
      content: '\f129';
    }

    /* Icons List */
    .list-icons-demo li {
      margin-bottom: 20px;
      text-align: center;
    }

    .list-icons-demo li i {
      font-size: 24px;
    }

    .list-icons-demo2 li {
      margin-bottom: 10px;
    }

    /* Activity Section */
    .activity-item {
      position: relative;
      margin: 15px 0;
      padding-top: 15px;
      border-top: 1px dashed #ccc;
    }

    .activity-item:first-child {
      border-top: none;
    }

    .activity-item .avatar {
      border-radius: 2px;
      width: 32px;
    }

    .activity-item>i {
      font-size: 18px;
    }

    .activity-item .activity-title {
      line-height: 1.3;
    }

    .activity-item .activity-attachment {
      padding-top: 20px;
    }

    .activity-item .well {
      border-radius: 0;
      box-shadow: none;
      border: none;
      border-left: 2px solid #cfcfcf;
      background: #fff;
      margin-left: 20px;
      font-size: 0.85em;
    }

    .activity-item .thumbnail {
      display: inline;
      border: none;
      padding: 0;
    }

    .activity-item .thumbnail img {
      border-radius: 2px;
      width: auto;
      margin: 0;
    }

    .activity-item .activity-actions {
      position: absolute;
      top: 15px;
      right: 0;
    }

    .activity-item .activity-actions .btn i {
      margin: 0;
    }

    .activity-item .activity-actions .dropdown-menu>li>a {
      font-size: 0.9em;
      padding: 3px 10px;
    }

    .activity-item+.btn {
      margin-bottom: 15px;
    }

    /* Tabs and Pills */
    .nav-tabs>li>a {
      border-top-left-radius: 2px;
      border-top-right-radius: 2px;
    }

    .nav-tabs>li.active>a,
    .nav-tabs>li.active>a:hover,
    .nav-tabs>li.active>a:focus {
      cursor: pointer;
    }

    .nav-pills>li>a {
      border-radius: 2px;
    }

    .nav-pills>li.active>a,
    .nav-pills>li.active>a:hover,
    .nav-pills>li.active>a:focus {
      background-color: #4B49AC !important;
    }

    /* Tabs Iconized */
    .nav-tabs.tabs-iconized>li a,
    .nav-pills.tabs-iconized>li a {
      padding-top: 0;
      padding-bottom: 5px;
    }

    .nav-tabs.tabs-iconized>li i,
    .nav-pills.tabs-iconized>li i {
      margin-right: 3px;
      top: 4px;
      font-size: 24px;
      position: relative;
    }

    /* Tab Content */
    .tab-content {
      padding: 30px 15px 15px;
      background-color: #fff;
    }

    /* Custom Colored Tabs */
    .nav.nav-tabs-custom-colored>li>a {
      border-color: #ccc;
      border-bottom: transparent;
    }

    .nav.nav-tabs-custom-colored>li>a:hover,
    .nav.nav-tabs-custom-colored>li>a:focus {
      background-color: #4B49AC;
    }

    .nav-tabs.nav-tabs-custom-colored {
      border-bottom-color: #4B49AC;
    }

    .nav-tabs.nav-tabs-custom-colored>li {
      margin-bottom: 0;
      background-color: #fff;
    }

    .nav-tabs.nav-tabs-custom-colored>li>a {
      border-top-left-radius: 2px;
      border-top-right-radius: 2px;
      color: #696565;
    }

    .nav-tabs.nav-tabs-custom-colored>li>a:hover,
    .nav-tabs.nav-tabs-custom-colored>li>a:focus {
      color: #fff;
      border-color: #1688ae;
    }

    .nav-tabs.nav-tabs-custom-colored>li.active>a,
    .nav-tabs.nav-tabs-custom-colored>li.active>a:hover,
    .nav-tabs.nav-tabs-custom-colored>li.active>a:focus {
      color: #fff;
      background-color: #1688ae;
      border-color: #1688ae;
      border-bottom: transparent;
    }

    .nav-tabs>li.active {
      z-index: 1;
    }

    /* Custom Minimal Pills */
    .nav-pills-custom-minimal {
      border-bottom: 1px solid #ccc;
    }

    .nav-pills-custom-minimal>li>a {
      border-radius: 0;
      padding: 10px;
      border-top: 4px solid transparent;
      color: #696565;
    }

    .nav-pills-custom-minimal>li>a:hover,
    .nav-pills-custom-minimal>li>a:focus {
      background-color: transparent;
      color: #4f4c4c;
    }

    .nav-pills-custom-minimal>li.active>a,
    .nav-pills-custom-minimal>li.active>a:hover,
    .nav-pills-custom-minimal>li.active>a:focus {
      background-color: transparent;
      border-top-color: #94c632;
    }

    .nav-pills-custom-minimal>li+li {
      margin-left: 30px;
    }

    @media screen and (max-width: 480px) {
      .nav-pills-custom-minimal>li+li {
        margin-left: 0;
      }
    }

    .nav-pills-custom-minimal.custom-minimal-bottom>li a {
      border-top: none;
      border-bottom: 4px solid transparent;
    }

    .nav-pills-custom-minimal.custom-minimal-bottom>li.active>a,
    .nav-pills-custom-minimal.custom-minimal-bottom>li.active>a:hover,
    .nav-pills-custom-minimal.custom-minimal-bottom>li.active>a:focus {
      border-bottom-color: #94c632;
    }

    .avatar-lg {
      width: 150px;
      height: 150px;
      object-fit: cover;
    }

    @media (min-width: 992px) {
      .avatar-lg {
        width: 304px;
        height: 304px;
      }
    }

    .container,
    .user-profile {
      min-height: 100vh;
      /* Full screen height */
      display: flex;
      flex-direction: column;
    }

    .user-profile {

      padding: 20px 0;
    }

    .modal-custom {
      background-color: #f8f9fa;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
      background-color: #4e73df;
      color: white;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
      padding: 1rem 1.5rem;
    }

    .modal-title {
      font-weight: 600;
      font-size: 1.25rem;
    }

    .btn-close {
      filter: invert(1);
    }

    .profile-img {
      border-radius: 50%;
      border: 3px solid #4e73df;
      object-fit: cover;
      height: 77px;
    }

    .custom-file-btn {
      background-color: #4e73df;
      border: none;
      padding: 8px 15px;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .custom-file-btn:hover {
      background-color: #2e59d9;
      transform: translateY(-2px);
    }

    .form-control {
      border: 1px solid #d1d3e2;
      border-radius: 5px;
      padding: 8px 12px;
    }

    .form-control:focus {
      border-color: #bac8f3;
      box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
    }

    .form-label {
      font-weight: 600;
      color: #5a5c69;
      margin-bottom: 0.5rem;
    }

    .btn-success {
      background-color: #1cc88a;
      border: none;
      padding: 8px 20px;
      border-radius: 5px;
      font-weight: 600;
    }

    .btn-success:hover {
      background-color: #17a673;
    }

    .custom-cancel-btn {
      background-color: #e74a3b;
      color: white;
      border: none;
      padding: 8px 20px;
      border-radius: 5px;
      font-weight: 600;
    }

    .custom-cancel-btn:hover {
      background-color: #be2617;
      color: white;
    }

    .text-secondary {
      color: #858796 !important;
    }
  </style>

</head>

