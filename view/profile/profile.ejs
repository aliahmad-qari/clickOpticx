                    pdf.text("Device", 20, yPosition);
                    pdf.text(item.device_label || 'N/A', 60, yPosition);
                    pdf.text("Rs" + (item.device_price || 0), 120, yPosition);
                    pdf.text("Rs" + (item.device_price || 0), 160, yPosition);
                    yPosition += 8;
                    
                    pdf.text("Package", 20, yPosition);
                    pdf.text("Selected Package", 60, yPosition);
                    pdf.text("Rs" + (item.first_package_price || 0), 120, yPosition);
                    pdf.text("Rs" + (item.first_package_price || 0), 160, yPosition);
                    yPosition += 8;
                    
                    pdf.text("Fibre Power", 20, yPosition);
                    pdf.text(item.fibre_power_label || 'N/A', 60, yPosition);
                    pdf.text("Rs" + (item.fibre_power_price || 0), 120, yPosition);
                    pdf.text("Rs" + (item.fibre_power_price || 0), 160, yPosition);
                    yPosition += 8;
                    
                    const duckPattiTotal = (parseFloat(item.duck_patti_quantity) || 0) * parsePrice(item.duck_patti_price);
                    pdf.text("Duck Patti", 20, yPosition);
                    pdf.text("Qty: " + (item.duck_patti_quantity || 0), 60, yPosition);
                    pdf.text("Rs" + (item.duck_patti_price || 0), 120, yPosition);
                    pdf.text("Rs" + duckPattiTotal.toFixed(2), 160, yPosition);
                    yPosition += 8;
                    
                    const patchCardTotal = (parseFloat(item.patch_card_quantity) || 0) * parsePrice(item.patch_card_price);
                    pdf.text("Patch Card", 20, yPosition);
                    pdf.text("Qty: " + (item.patch_card_quantity || 0), 60, yPosition);
                    pdf.text("Rs" + (item.patch_card_price || 0), 120, yPosition);
                    pdf.text("Rs" + patchCardTotal.toFixed(2), 160, yPosition);
                    yPosition += 10;
                    
                    const itemTotal = parsePrice(item.device_price) + parsePrice(item.first_package_price) + parsePrice(item.fibre_power_price) + 
                                    parsePrice(item.cable_price) + duckPattiTotal + patchCardTotal;
                    fiberTotal += itemTotal;
                });
                
                // Draw line and show fiber total
                pdf.line(20, yPosition, 190, yPosition);
                yPosition += 10;
                pdf.setFontSize(12);
                pdf.text("Fiber Equipment Total: Rs" + fiberTotal.toFixed(2), 120, yPosition);
                yPosition += 20;
            }
            
            // Dynamic Equipment Section
            let dynamicTotal = 0;
            if (userEquipmentData.details && Object.keys(userEquipmentData.details).length > 0) {
                yPosition = addText("ADDITIONAL EQUIPMENT", 20, yPosition, 16);
                yPosition += 10;
                
                for (const [equipmentType, details] of Object.entries(userEquipmentData.details)) {
                    if (details.total && details.total > 0) {
                        let displayName = '';
                        if (equipmentType === 'duck_patti') displayName = 'Duck Patti';
                        else if (equipmentType === 'patch_card') displayName = 'Patch Card';
                        else if (equipmentType === 'cat6_wire') displayName = 'Cat 6 Wire';
                        else if (equipmentType === 'clips') displayName = 'Clips';
                        else displayName = equipmentType.replace('_', ' ').toUpperCase();
                        
                        if (yPosition > 260) {
                            pdf.addPage();
                            yPosition = 20;
                        }
                        
                        pdf.setFontSize(10);
                        pdf.text(displayName, 20, yPosition);
                        pdf.text("Qty: " + details.quantity, 60, yPosition);
                        pdf.text("Rs" + details.price.toFixed(2), 120, yPosition);
                        pdf.text("Rs" + details.total.toFixed(2), 160, yPosition);
                        yPosition += 8;
                        
                        dynamicTotal += details.total;
                    }
                }
                
                yPosition += 10;
                pdf.setFontSize(12);
                pdf.text("Additional Equipment Total: Rs" + dynamicTotal.toFixed(2), 120, yPosition);
                yPosition += 20;
            }
            
                // Grand Total
                pdf.line(20, yPosition, 190, yPosition);
                yPosition += 10;
                pdf.setFontSize(14);
                pdf.text("GRAND TOTAL: Rs" + (fiberTotal + dynamicTotal).toFixed(2), 105, yPosition, { align: 'center' });
                
                // Save the PDF
                pdf.save("equipment_data_" + userName + "_" + new Date().toISOString().split('T')[0] + ".pdf");
            }
        }
    </script>
