                                  <div class="card-header bg-white border-0 px-0 pt-0">
                                    <h4 class="card-title fw-bold mb-1">Change Your Profile Password</h4>
                                    <p class="card-subtitle text-muted">ðŸ”‘ "One Click to Keep Your Internet Safe!"</p>
                                  </div>

                                  <div class="card-body px-0 py-3">
                                    <form action="/sett" method="POST">
                                      <!-- Current Password -->
                                      <div class="mb-3">
                                        <label for="password" class="form-label fw-medium">Current Password</label>
                                        <div class="input-group">
                                          <input type="password" class="form-control py-2" id="password" name="password"
                                            required>
                                          <button class="btn btn-outline-secondary toggle-password" type="button"
                                            data-target="password">
                                            <i class="bi bi-eye"></i>
                                          </button>
                                        </div>
                                      </div>

                                      <!-- New Password -->
