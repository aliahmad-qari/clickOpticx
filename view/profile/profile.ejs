  <style>
    /* Global Theme Variables */
    :root {
      /* Brand Colors - Same for both themes */
      --primary-color: #4F46E5;
      --primary-dark: #3730A3;
      --primary-light: #8B5CF6;
      --secondary-color: #10B981;
      --secondary-dark: #059669;
      --accent-color: #F59E0B;
      --accent-dark: #D97706;
      --danger-color: #EF4444;
      --success-color: #22C55E;
      --warning-color: #F59E0B;
      --info-color: #3B82F6;

      /* Light Theme Colors */
      --bg-primary: #FFFFFF;
      --bg-secondary: #F8FAFC;
      --bg-tertiary: #F1F5F9;
      --text-primary: #1E293B;
      --text-secondary: #475569;
      --text-tertiary: #64748B;
      --border-primary: #E2E8F0;
      --border-secondary: #CBD5E1;
      --shadow-light: rgba(0, 0, 0, 0.1);
      --shadow-medium: rgba(0, 0, 0, 0.15);
      --shadow-heavy: rgba(0, 0, 0, 0.25);
      --card-bg: #FFFFFF;
      --navbar-bg: #FFFFFF;
      --sidebar-bg: #FFFFFF;
    }

    /* Professional Dark Theme Colors */
    [data-theme="dark"] {
      --bg-primary: #0F172A;      /* Dark navy main background */
      --bg-secondary: #1E293B;    /* Slate background for containers */
      --bg-tertiary: #334155;     /* Lighter slate for form inputs */
      --text-primary: #F8FAFC;    /* Light text for readability */
      --text-secondary: #CBD5E1;  /* Muted text for descriptions */
      --text-tertiary: #94A3B8;   /* Even more muted text */
      --border-primary: #475569;  /* Visible borders in dark mode */
      --border-secondary: #64748B; /* Secondary borders */
      --shadow-light: rgba(0, 0, 0, 0.4);
      --shadow-medium: rgba(0, 0, 0, 0.6);
      --shadow-heavy: rgba(0, 0, 0, 0.8);
      --card-bg: #1E293B;        /* Dark cards with proper contrast */
      --navbar-bg: #0F172A;
      --sidebar-bg: #1E293B;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
    }

    body {
      background: var(--bg-secondary) !important;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: var(--text-primary) !important;
      line-height: 1.6;
    }

    .container-scroller {
      background: var(--bg-secondary) !important;
    }

    .page-body-wrapper {
      background: var(--bg-secondary) !important;
    }

    .card-body {
      background: var(--card-bg) !important;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    .user-profile {
      min-height: calc(100vh - 140px);
      padding: 0;
    }

    /* Profile Header */
    .profile-header-background {
      position: relative;
      height: 280px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 20px 20px 0 0;
      overflow: hidden;
      margin-bottom: 0;
    }

    .profile-header-background img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0.3;
    }

    /* Profile Card */
    .profile-card {
      background: var(--card-bg) !important;
      border-radius: 20px;
      box-shadow: 0 10px 40px var(--shadow-medium);
      padding: 0;
      margin-bottom: 30px;
      position: relative;
      border: 1px solid var(--border-primary) !important;
    }

    /* Profile Info Left */
    .profile-info-left {
      text-align: center;
      padding: 40px 30px 30px;
      background: var(--card-bg) !important;
      border-radius: 20px;
      position: relative;
      top: -100px;
      margin-bottom: -70px;
    }

    /* Avatar Styling */
    .avatar-lg {
      width: 160px !important;
      height: 160px !important;
      border-radius: 50%;
      border: 8px solid var(--card-bg);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
      object-fit: cover;
      margin: 0 auto 20px;
      display: block;
      transition: all 0.3s ease;
      position: relative;
      z-index: 10;
    }

    .avatar-lg:hover {
      transform: scale(1.05);
      box-shadow: 0 20px 45px rgba(0, 0, 0, 0.2);
    }

    /* Profile Name */
    .profile-info-left h2 {
      font-size: 28px;
      font-weight: 700;
      color: var(--text-primary) !important;
      margin: 20px 0 10px;
      line-height: 1.2;
    }

    .profile-info-left p {
      color: var(--text-secondary) !important;
      font-size: 16px;
      margin-bottom: 25px;
    }

    /* Update Button */
    .action-buttons .btn {
      background: linear-gradient(135deg, #667eea, #764ba2);
      border: none;
      border-radius: 50px;
      padding: 14px 35px;
      font-weight: 600;
      font-size: 16px;
      color: white;
      transition: all 0.3s ease;
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
      text-decoration: none;
      display: inline-block;
    }

    .action-buttons .btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
      color: white;
    }

    /* Right Column */
    .profile-info-right {
      padding-top: 20px;
    }

    /* Navigation Tabs */
    .nav-pills-custom-minimal {
      background: var(--card-bg) !important;
      border-radius: 15px;
      padding: 8px;
      box-shadow: 0 5px 20px var(--shadow-light);
      margin-bottom: 25px;
      border: 1px solid var(--border-primary) !important;
    }

    .nav-pills-custom-minimal .nav-link {
      border-radius: 12px;
      padding: 15px 20px;
      font-weight: 600;
      color: var(--text-secondary) !important;
      transition: all 0.3s ease;
      border: none;
      margin: 0 3px;
      font-size: 15px;
      text-align: center;
    }

    .nav-pills-custom-minimal .nav-link:hover {
      background: rgba(79, 70, 229, 0.1);
      color: var(--primary-color) !important;
      transform: translateY(-2px);
    }

    .nav-pills-custom-minimal .nav-link.active {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      color: white !important;
      box-shadow: 0 5px 15px rgba(79, 70, 229, 0.3);
    }

    /* Tab Content */
    .tab-content {
      padding: 0;
    }

    /* Profile Detail Card */
    .profile-detail-card {
      background: var(--card-bg) !important;
      border-radius: 20px;
      box-shadow: 0 8px 30px var(--shadow-light);
      border: 1px solid var(--border-primary) !important;
      overflow: hidden;
      margin-bottom: 20px;
    }

    .profile-detail-card .card-header {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      color: white;
      padding: 25px 30px;
      border: none;
    }

    .profile-detail-card .card-title {
      font-size: 20px;
      font-weight: 700;
      margin: 0;
    }

    .profile-detail-card .card-body {
      padding: 30px;
      background: var(--card-bg) !important;
    }

    /* Info Rows */
    .info-row {
      display: flex;
      align-items: center;
      padding: 18px 0;
      border-bottom: 1px solid var(--border-primary);
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .info-label {
      font-weight: 600;
      color: var(--text-primary) !important;
      min-width: 180px;
      display: flex;
      align-items: center;
      font-size: 15px;
    }

    .info-label i {
      color: var(--primary-color);
      margin-right: 12px;
      font-size: 18px;
      width: 20px;
    }

    .info-value {
      background: var(--bg-tertiary) !important;
      padding: 12px 18px;
      border-radius: 10px;
      font-weight: 500;
      flex: 1;
      margin-left: 20px;
      border: 1px solid var(--border-primary) !important;
      color: var(--text-primary) !important;
      font-size: 15px;
    }

    /* Password Form Card */
    .password-form-card {
      background: var(--card-bg) !important;
      border-radius: 20px;
      box-shadow: 0 8px 30px var(--shadow-light);
      border: 1px solid var(--border-primary) !important;
      padding: 35px;
    }

    .password-form-card h4 {
      color: var(--text-primary) !important;
      font-weight: 700;
      font-size: 24px;
      margin-bottom: 8px;
    }

    .password-form-card p {
      color: var(--text-secondary) !important;
      margin-bottom: 30px;
    }

    /* Professional Dark Theme Implementation */
    
    /* Form Elements Dark Theme */
    [data-theme="dark"] .form-control {
      background: var(--bg-tertiary) !important;
      color: var(--text-primary) !important;
      border: 1px solid var(--border-primary) !important;
    }

    [data-theme="dark"] .form-control:focus {
      background: var(--bg-tertiary) !important;
      color: var(--text-primary) !important;
      border-color: var(--primary-color) !important;
      box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.15) !important;
    }

    [data-theme="dark"] .form-label {
      color: var(--text-secondary) !important;
    }

    /* Typography Dark Theme */
    [data-theme="dark"] h1,
    [data-theme="dark"] h2,
    [data-theme="dark"] h3,
    [data-theme="dark"] h4,
    [data-theme="dark"] h5,
    [data-theme="dark"] h6 {
      color: var(--text-primary) !important;
    }

    [data-theme="dark"] p,
    [data-theme="dark"] span,
    [data-theme="dark"] .font-weight-bold {
      color: var(--text-secondary) !important;
    }

    [data-theme="dark"] .text-muted {
      color: var(--text-tertiary) !important;
    }

    /* Button Dark Theme */
    [data-theme="dark"] .btn-outline-primary {
      border-color: var(--primary-color) !important;
      color: var(--primary-color) !important;
      background: transparent !important;
    }

    [data-theme="dark"] .btn-outline-primary:hover {
      background: var(--primary-color) !important;
      color: white !important;
    }

    /* Table Dark Theme */
    [data-theme="dark"] .table {
      color: var(--text-primary) !important;
    }

    [data-theme="dark"] .table td {
      color: var(--text-secondary) !important;
    }

    /* Equipment and Security Sections Dark Theme */
    [data-theme="dark"] .btn-outline-secondary {
      border-color: var(--border-primary) !important;
      color: var(--text-secondary) !important;
      background: transparent !important;
    }

    [data-theme="dark"] .btn-outline-secondary:hover {
      background: var(--bg-tertiary) !important;
      color: var(--text-primary) !important;
      border-color: var(--border-primary) !important;
    }

    [data-theme="dark"] .badge {
      background: var(--primary-color) !important;
      color: white !important;
    }

    [data-theme="dark"] .bg-success {
      background: var(--success-color) !important;
    }

    [data-theme="dark"] .bg-warning {
      background: var(--warning-color) !important;
    }

    /* Toggle password buttons */
    [data-theme="dark"] .toggle-password {
      background: var(--bg-tertiary) !important;
      border-color: var(--border-primary) !important;
      color: var(--text-secondary) !important;
    }

    [data-theme="dark"] .toggle-password:hover {
      background: var(--bg-secondary) !important;
      color: var(--primary-color) !important;
    }

    /* Personal Details Modal Dark Theme */
    [data-theme="dark"] .modal-custom {
      background: var(--card-bg) !important;
      color: var(--text-primary) !important;
    }

    [data-theme="dark"] .modal-custom .modal-header {
      background: var(--bg-tertiary) !important;
      border-bottom: 1px solid var(--border-primary) !important;
      color: var(--text-primary) !important;
    }

    [data-theme="dark"] .modal-custom .modal-body {
      background: var(--card-bg) !important;
      color: var(--text-primary) !important;
    }

    [data-theme="dark"] .modal-custom .modal-title {
      color: var(--text-primary) !important;
    }

    /* Fix the personal details form inputs specifically */
    [data-theme="dark"] .modal-custom .form-control {
      background: var(--bg-tertiary) !important;
      color: var(--text-primary) !important;
      border: 1px solid var(--border-primary) !important;
    }

    [data-theme="dark"] .modal-custom .form-control:focus {
      background: var(--bg-tertiary) !important;
      color: var(--text-primary) !important;
      border-color: var(--primary-color) !important;
      box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.15) !important;
    }

    [data-theme="dark"] .modal-custom .form-label {
      color: var(--text-secondary) !important;
    }

    [data-theme="dark"] .modal-custom .text-secondary {
      color: var(--text-tertiary) !important;
    }

    /* Form Controls */
    .form-control {
      border: 2px solid var(--border-primary);
      border-radius: 12px;
      padding: 14px 18px;
      font-size: 15px;
      transition: all 0.3s ease;
      background: var(--card-bg) !important;
      color: var(--text-primary) !important;
    }

    .form-control:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
      background: var(--card-bg) !important;
      color: var(--text-primary) !important;
    }

    .form-label {
      font-weight: 600;
      color: var(--text-primary) !important;
      margin-bottom: 8px;
      font-size: 15px;
    }

    .input-group {
      margin-bottom: 20px;
    }

    .toggle-password {
      background: var(--bg-tertiary) !important;
      border: 2px solid var(--border-primary) !important;
      border-left: none;
      border-radius: 0 12px 12px 0;
      color: var(--text-secondary) !important;
    }

    .toggle-password:hover {
      background: var(--bg-secondary) !important;
      color: var(--primary-color) !important;
    }

    /* Buttons */
    .btn-primary {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      border: none;
      border-radius: 12px;
      padding: 14px 30px;
      font-weight: 600;
      font-size: 16px;
      color: white;
      transition: all 0.3s ease;
      box-shadow: 0 8px 25px rgba(79, 70, 229, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 35px rgba(79, 70, 229, 0.4);
      color: white;
    }

    /* Equipment Card */
    .equipment-card {
      background: var(--card-bg) !important;
      border-radius: 20px;
      box-shadow: 0 8px 30px var(--shadow-light);
      border: 1px solid var(--border-primary) !important;
      padding: 35px;
    }

    .equipment-card h4 {
      color: var(--text-primary) !important;
      font-weight: 700;
      font-size: 24px;
      margin-bottom: 25px;
      text-align: center;
    }

    /* Equipment Calculation Styles */
    .equipment-calculation {
      background: var(--bg-tertiary) !important;
      border-radius: 8px;
      padding: 12px;
      border-left: 4px solid var(--primary-color);
    }

    .equipment-calculation .d-flex {
      font-size: 0.9rem;
    }

    .equipment-calculation .text-primary {
      font-size: 1rem;
    }

    .equipment-summary-card {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      color: white;
      border-radius: 15px;
      padding: 20px;
      margin-top: 20px;
      box-shadow: 0 8px 25px rgba(79, 70, 229, 0.3);
    }

    .dynamic-equipment-section {
      margin-top: 20px;
      padding: 15px;
      background: var(--bg-tertiary) !important;
      border-radius: 10px;
      border: 1px solid var(--border-primary) !important;
    }
    }

    /* Table Styling */
    .table {
      background: var(--card-bg) !important;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 5px 20px var(--shadow-light);
      margin: 0;
    }

    .table th {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      color: white;
      font-weight: 600;
      padding: 15px;
      border: none;
      font-size: 15px;
    }

    .table td {
      padding: 15px;
      border: none;
      border-bottom: 1px solid var(--border-primary);
      font-size: 14px;
      color: var(--text-primary) !important;
    }

    .table tbody tr:hover {
      background: var(--bg-tertiary) !important;
    }

    /* Modal Styling */
    .modal-content {
      background: var(--card-bg) !important;
      border-radius: 20px;
      border: 1px solid var(--border-primary) !important;
      box-shadow: 0 20px 60px var(--shadow-heavy);
      color: var(--text-primary) !important;
    }

    .modal-header {
      background: var(--bg-tertiary) !important;
      border-bottom: 1px solid var(--border-primary) !important;
    }

    .modal-body {
      background: var(--card-bg) !important;
    }

    .modal-footer {
      background: var(--card-bg) !important;
      border-top: 1px solid var(--border-primary) !important;
    }

    .modal-header.gradient-header {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      color: white;
      border-radius: 20px 20px 0 0;
      border: none;
      padding: 25px 30px;
    }

    .modal-title {
      font-weight: 700;
      font-size: 20px;
    }

    .modal-body {
      padding: 30px;
      background: var(--card-bg) !important;
      color: var(--text-primary) !important;
    }

    .profile-img {
      border-radius: 50%;
      border: 4px solid var(--card-bg);
      box-shadow: 0 8px 25px var(--shadow-light);
      object-fit: cover;
    }

    .custom-file-btn {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      border: none;
      border-radius: 12px;
      padding: 12px 20px;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
    }

    .custom-file-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(79, 70, 229, 0.3);
      color: white;
    }

    .btn-success {
      background: linear-gradient(135deg, var(--success-color), #16A34A);
      border: none;
      border-radius: 12px;
      padding: 12px 25px;
      font-weight: 600;
      color: white;
    }

    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(34, 197, 94, 0.3);
      color: white;
    }

    .custom-cancel-btn {
      background: linear-gradient(135deg, var(--danger-color), #DC2626);
      color: white;
      border: none;
      border-radius: 12px;
      padding: 12px 25px;
      font-weight: 600;
    }

    .custom-cancel-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(239, 68, 68, 0.3);
      color: white;
    }

    /* Stats Cards */
    .stats-card {
      background: var(--card-bg) !important;
      border-radius: 16px;
      padding: 24px;
      box-shadow: 0 4px 20px var(--shadow-light);
      border: 1px solid var(--border-primary) !important;
      display: flex;
      align-items: center;
      transition: all 0.3s ease;
    }

    .stats-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 30px var(--shadow-medium);
    }

    .stats-icon {
      width: 60px;
      height: 60px;
      border-radius: 12px;
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 16px;
    }

    .stats-icon.security {
      background: linear-gradient(135deg, var(--success-color), #16A34A);
    }

    .stats-icon.equipment {
      background: linear-gradient(135deg, var(--warning-color), #D97706);
    }

    .stats-icon.status {
      background: linear-gradient(135deg, var(--primary-light), #7C3AED);
    }

    .stats-icon i {
      color: white;
      font-size: 24px;
    }

    .stats-info h3 {
      font-size: 20px;
      font-weight: 700;
      color: var(--text-primary) !important;
      margin: 0 0 4px 0;
    }

    .stats-info p {
      color: var(--text-secondary) !important;
      margin: 0;
      font-size: 14px;
    }

    /* Profile Main Card */
    .profile-main-card {
      background: var(--card-bg) !important;
      border-radius: 20px;
      box-shadow: 0 8px 30px var(--shadow-light);
      border: 1px solid var(--border-primary) !important;
      overflow: hidden;
      margin-bottom: 24px;
    }

    .profile-header {
      position: relative;
      height: 120px;
    }

    .profile-bg {
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    }

    .profile-avatar-section {
      position: absolute;
      bottom: -40px;
      left: 50%;
      transform: translateX(-50%);
    }

    .profile-avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      border: 4px solid white;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
      object-fit: cover;
    }

    .profile-status {
      position: absolute;
      bottom: 8px;
      right: 8px;
      width: 16px;
      height: 16px;
