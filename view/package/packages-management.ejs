                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="editPackagePrice" class="form-label">Price (Rs.)</label>
                                    <input type="number" class="form-control" id="editPackagePrice" name="Price" required>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="editPackageSpeed" class="form-label">Speed</label>
                                    <input type="text" class="form-control" id="editPackageSpeed" name="Speed" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="editPackageData" class="form-label">Data Usage</label>
                                    <input type="text" class="form-control" id="editPackageData" name="Data_Used" required>
