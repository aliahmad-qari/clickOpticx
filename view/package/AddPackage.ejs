            <!-- Add Dashboard Package Form -->
            <div class="form-card">
              <div class="form-header">
                <h2><i class="fas fa-chart-line"></i> Dashboard Package</h2>
                <p>Create featured packages for main dashboard display</p>
              </div>

              <form action="/Cards" method="POST" id="addDashboardPackageForm">
                <!-- Package Details -->
                <div class="form-row">
                  <div class="form-group">
                    <label for="dashboardPackage" class="form-label">Package Name <span class="required">*</span></label>
                    <input type="text" name="Package" id="dashboardPackage" class="form-control" required placeholder="e.g., Premium Fiber 100GB">
                  </div>
                  <div class="form-group">
                    <label for="dashboardPrice" class="form-label">Price ($) <span class="required">*</span></label>
                    <input type="number" name="Price" id="dashboardPrice" class="form-control" required placeholder="29.99" step="0.01" min="0">
                  </div>
                </div>

                <!-- Technical Specifications -->
                <div class="form-row">
                  <div class="form-group">
                    <label for="dashboardSpeed" class="form-label">Internet Speed <span class="required">*</span></label>
                    <input type="text" name="Speed" id="dashboardSpeed" class="form-control" required placeholder="100 Mbps">
                  </div>
                  <div class="form-group">
                    <label for="dashboardDataUsed" class="form-label">Data Allowance <span class="required">*</span></label>
                    <input type="text" name="Data_Used" id="dashboardDataUsed" class="form-control" required placeholder="Unlimited / 500GB">
                  </div>
                </div>

                <!-- Package Settings -->
                <div class="form-row">
                  <div class="form-group">
                    <label for="dashboardOfferValid" class="form-label">Offer Valid Until <span class="required">*</span></label>
                    <input type="date" name="Offer_Valid" id="dashboardOfferValid" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="dashboardLimits" class="form-label">Connection Limit <span class="required">*</span></label>
                    <input type="text" name="limits" id="dashboardLimits" class="form-control" required placeholder="5 Devices">
                  </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-chart-line"></i> Create Dashboard Package
                </button>
              </form>
            </div>

            <!-- Add Custom Package Form -->
