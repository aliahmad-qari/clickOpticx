<style>
  :root {
    --primary-color: #4F46E5;
    --primary-dark: #3730A3;
    --secondary-color: #06B6D4;
    --success-color: #10B981;
    --warning-color: #F59E0B;
    --danger-color: #EF4444;
    --dark-color: #1F2937;
    --light-color: #F8FAFC;
    --gray-color: #9CA3AF;
    --border-color: #E5E7EB;
    --white: #FFFFFF;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: var(--bg-secondary, #F8FAFC);
    min-height: 100vh;
    color: var(--text-primary, #1F2937);
    line-height: 1.6;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  /* Dark theme support */
  [data-theme="dark"] {
    --bg-primary: #0F172A;
    --bg-secondary: #1E293B;
    --bg-tertiary: #334155;
    --text-primary: #F8FAFC;
    --text-secondary: #CBD5E1;
    --border-color: #334155;
    --white: #1E293B;
    --dark-color: #F8FAFC;
    --gray-color: #94A3B8;
  }

  [data-theme="dark"] body {
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  .container-fluid.page-body-wrapper {
    display: flex;
    flex-direction: row;
    min-height: 100vh;
  }

  .main-panel {
    flex-grow: 1;
    padding: 1rem;
    margin-left: 110px;
    transition: margin-left 0.3s ease;
  }

  /* Modal Backdrop Effect */
  .modal-backdrop {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    min-height: calc(100vh - 80px);
    padding: 1.5rem 0;
    position: relative;
    gap: 2rem;
  }

  .modal-backdrop::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at center, rgba(79, 70, 229, 0.03) 0%, rgba(79, 70, 229, 0.01) 50%, transparent 100%);
    pointer-events: none;
  }

  @media (max-width: 991px) {
    .main-panel {
      margin-left: 0;
      padding: 1rem;
    }
  }

  /* Professional Modal-Style Form Card */
  .form-card {
    background: var(--white, #FFFFFF);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(0, 0, 0, 0.05);
    border: 1px solid var(--border-color, #E5E7EB);
    max-width: 700px;
    width: 100%;
    position: relative;
    overflow: hidden;
    animation: modalSlideIn 0.4s ease-out;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .form-card:hover {
    box-shadow: 0 32px 64px -12px rgba(0, 0, 0, 0.2), 0 0 0 1px rgba(79, 70, 229, 0.1);
    transform: translateY(-2px);
  }

  /* Dark theme form card */
  [data-theme="dark"] .form-card {
    background: var(--white, #1E293B);
    border-color: var(--border-color, #334155);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  [data-theme="dark"] .form-card:hover {
    box-shadow: 0 32px 64px -12px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(79, 70, 229, 0.3);
  }

  .form-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    border-radius: 24px 24px 0 0;
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.96);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Header Styling */
  .form-header {
    text-align: center;
    margin-bottom: 2rem;
    padding: 0;
    background: none;
  }

  .form-header h2 {
    font-size: 1.75rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .form-header p {
    color: var(--gray-color, #9CA3AF);
    font-size: 0.95rem;
    font-weight: 400;
    transition: color 0.3s ease;
  }

  [data-theme="dark"] .form-header p {
    color: var(--text-secondary, #CBD5E1);
  }

  /* Form Groups */
  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .form-group {
    position: relative;
    margin-bottom: 0;
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  /* Input Styling */
  .form-control,
  .form-select {
    width: 100%;
    padding: 1rem 1.25rem;
    border: 2px solid var(--border-color, #E5E7EB);
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 500;
    color: var(--dark-color, #1F2937);
    background: var(--white, #FFFFFF);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
  }

  .form-control:focus,
  .form-select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
    transform: translateY(-2px);
  }

  .form-control:hover,
  .form-select:hover {
    border-color: var(--gray-color, #9CA3AF);
  }

  /* Dark theme inputs */
  [data-theme="dark"] .form-control,
  [data-theme="dark"] .form-select {
    background: var(--bg-tertiary, #334155);
    color: var(--text-primary, #F8FAFC);
    border-color: var(--border-color, #334155);
  }

  [data-theme="dark"] .form-control:focus,
  [data-theme="dark"] .form-select:focus {
    box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.2);
    border-color: var(--primary-color);
  }

  [data-theme="dark"] .form-control:hover,
  [data-theme="dark"] .form-select:hover {
    border-color: var(--gray-color, #94A3B8);
  }

  /* Modern Labels */
  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--dark-color, #1F2937);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  [data-theme="dark"] .form-label {
    color: var(--text-primary, #F8FAFC);
  }

  .form-label .required {
    color: var(--danger-color);
    margin-left: 0.25rem;
  }

  /* Submit Button */
  .btn-primary {
    width: 100%;
    padding: 1.25rem 2rem;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    color: var(--white);
    border: none;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    margin-top: 1rem;
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-xl);
    background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
  }

  .btn-primary:active {
    transform: translateY(-1px);
  }

  .btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .btn-primary:hover::before {
    left: 100%;
  }

  /* Success Message */
  #pusher-message-box {
    border-radius: 12px;
    border: none;
    background: linear-gradient(135deg, var(--success-color), #059669);
    color: var(--white);
    font-weight: 600;
    box-shadow: var(--shadow-lg);
  }

  /* Package Cards */
  .custom-container {
    background: var(--white);
    border-radius: 20px;
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid var(--border-color);
  }

  .custom-container:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
  }

  .custom-cardimg {
    position: relative;
    background-size: cover;
    background-position: center;
  }

  .img-txt-2 {
    position: absolute;
    top: 20px;
    left: 20px;
    background: rgba(79, 70, 229, 0.9);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .card-info {
    padding: 1.5rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .form-card {
      padding: 2rem;
      margin: 1rem auto 2rem;
      border-radius: 20px;
    }

    .form-header h2 {
      font-size: 1.5rem;
    }

    .form-row {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .main-panel {
      padding: 1rem;
    }
  }

  @media (max-width: 480px) {
    .form-card {
      padding: 1.5rem;
    }

    .form-header h2 {
      font-size: 1.25rem;
    }
  }
</style>

<body>
  <div class="container-scroller">

    <%- include ('../partials/_navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper" style="padding-left:0% !important; ">
        <!-- partial:partials/_settings-panel.html -->
        <%- include ('../partials/SettingsDow.ejs') %>

          <!-- NavBar Start -->
          <%- include ('../partials/Sidebar.ejs') %>
            <!-- NavBar End -->


            <div class="container-fluid" style="background: transparent;">
              <!-- sss --> <!-- sss --> <!-- sss --> <!-- sss -->
              <% if (messages.success) { %>
                <div style="display: flex; justify-content: end;">
                  <div id="pusher-message-box" style="
            display: flex;
            border-left: 8px solid #45439e;
            color: green;
            font-weight: bold;
            font-size: 16px;
            justify-content: end;
            align-items: center;
            height: 70px;
          " class="mt-3 alert alert-primary">
                    <%= messages.success %>
                  </div>
                </div>
                <% } %>
                  <script>
                    window.addEventListener('DOMContentLoaded', () => {
                      const msgBox = document.getElementById('pusher-message-box');
                      if (msgBox) {
                        setTimeout(() => {
                          msgBox.style.transition = "opacity 0.5s";
                          msgBox.style.opacity = 0;
                          setTimeout(() => msgBox.style.display = "none", 500);
                        }, 4000);
                      }
                    });
                  </script>
                  <!-- sss --> <!-- sss --> <!-- sss --> <!-- sss -->

                  <div class="main-panel">
                    <div class="content-wrapper">
                      <!-- Modal Backdrop Effect -->
                      <div class="modal-backdrop">
                        <!-- Unified Package Creation Form -->
                        <div class="form-card">
                          <div class="form-header">
                            <h2><i class="fas fa-box"></i> Create New Package</h2>
                            <p>Create packages visible to all users and admin dashboard</p>
                          </div>

                          <form action="/createPackage" method="POST" id="createPackageForm">
                            <!-- Package Details -->
                            <div class="form-row">
                              <div class="form-group">
                                <label for="packageName" class="form-label">Package Name <span class="required">*</span></label>
                                <input type="text" name="Package" id="packageName" class="form-control" required placeholder="e.g., Premium Fiber 100GB">
                              </div>
                              <div class="form-group">
                                <label for="packagePrice" class="form-label">Price (PKR) <span class="required">*</span></label>
                                <input type="number" name="Price" id="packagePrice" class="form-control" required placeholder="2999" step="1" min="0">
                              </div>
                            </div>

                            <!-- Technical Specifications -->
                            <div class="form-row">
                              <div class="form-group">
                                <label for="packageSpeed" class="form-label">Internet Speed <span class="required">*</span></label>
                                <input type="text" name="Speed" id="packageSpeed" class="form-control" required placeholder="100 Mbps">
                              </div>
                              <div class="form-group">
                                <label for="packageDataUsed" class="form-label">Data Allowance <span class="required">*</span></label>
                                <input type="text" name="Data_Used" id="packageDataUsed" class="form-control" required placeholder="Unlimited / 500GB">
                              </div>
                            </div>

                            <!-- Package Settings -->
                            <div class="form-row">
                              <div class="form-group">
                                <label for="packageOfferValid" class="form-label">Offer Valid Until <span class="required">*</span></label>
                                <input type="date" name="Offer_Valid" id="packageOfferValid" class="form-control" required>
                              </div>
                              <div class="form-group">
                                <label for="packageLimits" class="form-label">Connection Limit</label>
                                <input type="text" name="limits" id="packageLimits" class="form-control" placeholder="5 Devices / Unlimited">
                              </div>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-primary">
                              <i class="fas fa-plus-circle"></i> Create Package
                            </button>
                          </form>
                        </div>


                        <!-- All Packages Display -->
                        <div class="form-card">
                          <div class="form-header">
                            <h2><i class="fas fa-list"></i> All Created Packages</h2>
                            <p>Manage all packages visible to users</p>
                          </div>
              <div class="row g-4 px-2 py-3">
                <% if (packages && packages.length > 0) { %>
                  <% packages.forEach(function(package) { %>
                    <div class="col-md-4 col-lg-4 col-sm-12 col-xs-12">
                      <div class="custom-container">
                        <div class="custom-cardimg" style="background-image: url('/images/Packagesimg.jpg'); height: 200px; border-radius: 15px 15px 0 0;"></div>
                        <span class="img-txt-2"><%= package.Package %></span>
                        <div class="card-info pl-3 pr-3">
                          <div class="d-flex justify-content-between align-items-center">
                            <h4 style="font-weight: bold;">Rs. <%= package.Price %></h4>
                          </div>
                          <div class="mbs d-flex pt-1">
                            <img src="/images/wifi1.png" alt="">
                            <span class="ml-3 font-weight-bold">Upto <%= package.Speed %> speed</span>
                          </div>
                          <div class="phone d-flex pt-2">
                            <img src="/images/speedometer1.png" alt="">
                            <span class="ml-3 font-weight-bold">Data Usage in month <%= package.Data_Used %></span>
                          </div>
                          <div class="stream d-flex pt-2">
                            <img src="/images/open-hand1.png" alt="">
                            <span class="ml-3 font-weight-bold">Offer valid till <%= package.Offer_Valid %></span>
                          </div>
                          <div class="App d-flex pt-2">
                            <img src="/images/smarthome1.png" alt="">
                            <span class="ml-3 font-weight-bold"><%= package.limits %></span>
                          </div>
                          <p class="pt-3 font-weight-bold" style="font-size: 17px; margin-bottom: 20px;">
                            Internet Bundles prices are inclusive of all taxes
                          </p>
                          <div class="buy d-flex align-items-center justify-content-between">
                            <small class="text-muted">
                              <i class="fas fa-calendar-alt"></i> Created: <%= new Date(package.created_at).toLocaleDateString() %>
                            </small>
                            <form action="/deletePackage/<%= package.id %>?_method=DELETE" method="POST" 
                                  onsubmit="return confirm('Are you sure you want to delete this package?')" 
                                  style="display: inline;">
                              <input type="hidden" name="_method" value="DELETE">
                              <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                              </button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                <% } else { %>
                  <div class="text-center py-5">
                    <i class="fas fa-box-open text-muted" style="font-size: 3rem;"></i>
                    <h4 class="text-muted mt-3">No packages created yet</h4>
                    <p class="text-muted">Create your first package using the form above</p>
                  </div>
                <% } %>
              </div>
            </div>

                        </div>
                      </div>
                    </div>
                  </div>

            </div>
