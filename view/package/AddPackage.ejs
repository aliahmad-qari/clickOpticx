              <div class="form-header">
                <h2><i class="fas fa-cog"></i> Custom Package</h2>
                <p>Design tailored packages for specific customer needs</p>
              </div>

              <form action="/custom" method="POST" id="addCustomPackageForm">
                <!-- Package Information -->
                <div class="form-row">
                  <div class="form-group">
                    <label for="Package" class="form-label">Custom Package Name <span class="required">*</span></label>
                    <input type="text" name="Package" id="Package" class="form-control" required placeholder="e.g., Business Pro 250GB">
                  </div>
                  <div class="form-group">
                    <label for="Price" class="form-label">Package Price ($) <span class="required">*</span></label>
                    <input type="number" name="Price" id="Price" class="form-control" required placeholder="49.99" step="0.01" min="0">
                  </div>
                </div>

                <!-- Service Specifications -->
                <div class="form-row">
                  <div class="form-group">
                    <label for="Speed" class="form-label">Maximum Speed <span class="required">*</span></label>
                    <input type="text" name="Speed" id="Speed" class="form-control" required placeholder="250 Mbps">
                  </div>
                  <div class="form-group">
                    <label for="Data_Used" class="form-label">Monthly Data <span class="required">*</span></label>
                    <input type="text" name="Data_Used" id="Data_Used" class="form-control" required placeholder="Unlimited / 1TB">
                  </div>
                </div>

                <!-- Additional Settings -->
                <div class="form-row">
                  <div class="form-group">
                    <label for="Offer_Valid" class="form-label">Promotion Expires <span class="required">*</span></label>
                    <input type="date" name="Offer_Valid" id="Offer_Valid" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="limits" class="form-label">Device Limit</label>
                    <input type="text" name="limits" id="limits" class="form-control" placeholder="10 Devices / Unlimited">
                  </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-cog"></i> Create Custom Package
                </button>
              </form>
            </div>

            <!-- Subscribed Packages Section -->
