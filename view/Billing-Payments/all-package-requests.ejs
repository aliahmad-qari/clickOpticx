  <!-- Scripts -->
 
  <script>
    let originalRequests = [];

    // Load all package requests
    async function loadAllRequests() {
      try {
        const response = await fetch('/all-package-requests');
        const requests = await response.json();
        
        originalRequests = requests;
        displayRequestsTable(requests);
        displayRequestsCards(requests);
        updateStatistics(requests);
      } catch (error) {
        console.error('Error loading package requests:', error);
      }
    }

    function displayRequestsTable(requests) {
      const tbody = document.getElementById('requests-table');
      
      if (requests.length === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="5" class="text-center" style="padding: 40px;">
              <i class="fas fa-inbox" style="font-size: 3rem; color: #ccc; margin-bottom: 10px;"></i>
              <h6>No Package Requests Found</h6>
              <p class="text-muted">No package requests match your current filters</p>
            </td>
          </tr>
        `;
        return;
      }

      tbody.innerHTML = requests.map(req => `
        <tr>
          <td>#${req.id}</td>
          <td>${req.package_name}</td>
          <td>${req.Username}</td>
          <td><span class="badge badge-${req.status || 'pending'}">
            ${getStatusIcon(req.status || 'pending')} ${(req.status || 'pending').toUpperCase()}
          </span></td>
          <td>${getPriorityBadge(req.status)}</td>
        </tr>
      `).join('');
    }

    function displayRequestsCards(requests) {
      const cardsContainer = document.getElementById('requests-cards');
      
      if (requests.length === 0) {
        cardsContainer.innerHTML = `
          <div class="request-card">
            <div style="text-align: center; padding: 40px;">
              <i class="fas fa-inbox" style="font-size: 3rem; color: #ccc; margin-bottom: 10px;"></i>
              <h6>No Package Requests Found</h6>
              <p class="text-muted">No package requests match your current filters</p>
            </div>
          </div>
        `;
        return;
      }

      cardsContainer.innerHTML = requests.map(req => `
        <div class="request-card ${req.status || 'pending'}">
          <div class="request-card-header">
            <div class="request-card-icon">
              <i class="fas fa-clipboard-list"></i>
            </div>
            <div class="request-card-name">
              <h6>${req.package_name}</h6>
              <p>Requested by ${req.Username}</p>
            </div>
          </div>
          
          <div class="request-card-content">
            <div class="request-card-field">
              <div class="request-card-label">Request ID</div>
              <div class="request-card-value">#${req.id}</div>
            </div>
            
            <div class="request-card-field">
              <div class="request-card-label">Status</div>
              <div class="request-card-value">
                <span class="badge badge-${req.status || 'pending'}">
                  ${getStatusIcon(req.status || 'pending')} ${(req.status || 'pending').toUpperCase()}
                </span>
              </div>
            </div>
            
            <div class="request-card-field">
              <div class="request-card-label">Priority</div>
              <div class="request-card-value">${getPriorityText(req.status)}</div>
            </div>
          </div>
        </div>
      `).join('');
    }

    function getStatusIcon(status) {
      switch(status) {
        case 'paid': return '<i class="fas fa-check-circle"></i>';
        case 'unpaid': return '<i class="fas fa-clock"></i>';
        case 'pending': return '<i class="fas fa-hourglass-half"></i>';
        default: return '<i class="fas fa-question-circle"></i>';
      }
    }

    function getPriorityBadge(status) {
      switch(status) {
        case 'paid': return '<span class="badge badge-success">Completed</span>';
        case 'unpaid': return '<span class="badge badge-warning">High Priority</span>';
        case 'pending': return '<span class="badge badge-info">Medium Priority</span>';
        default: return '<span class="badge badge-secondary">Normal</span>';
      }
    }

    function getPriorityText(status) {
      switch(status) {
        case 'paid': return 'Completed';
        case 'unpaid': return 'High Priority';
        case 'pending': return 'Medium Priority';
        default: return 'Normal';
      }
    }

    function updateStatistics(requests) {
      const stats = requests.reduce((acc, req) => {
        const status = req.status || 'pending';
        acc[status] = (acc[status] || 0) + 1;
        acc.total = (acc.total || 0) + 1;
        return acc;
      }, {});

      document.getElementById('stats-grid').innerHTML = `
        <div class="stat-card">
          <div class="stat-number" style="color: var(--primary)">${stats.total || 0}</div>
          <div class="stat-label">Total Requests</div>
        </div>
        <div class="stat-card">
          <div class="stat-number" style="color: var(--success)">${stats.paid || 0}</div>
          <div class="stat-label">Completed</div>
        </div>
        <div class="stat-card">
          <div class="stat-number" style="color: var(--warning)">${stats.unpaid || 0}</div>
          <div class="stat-label">Unpaid</div>
        </div>
        <div class="stat-card">
          <div class="stat-number" style="color: var(--info)">${stats.pending || 0}</div>
          <div class="stat-label">Pending</div>
        </div>
      `;
    }

    // Filter functionality
    document.getElementById('status-filter').addEventListener('change', function(e) {
      const status = e.target.value;
      const filteredRequests = status ? 
        originalRequests.filter(req => (req.status || 'pending') === status) : 
        originalRequests;
      
      displayRequestsTable(filteredRequests);
      displayRequestsCards(filteredRequests);
    });

    // Search functionality
    document.getElementById('search-input').addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const filteredRequests = originalRequests.filter(req => 
        req.id.toString().includes(searchTerm) ||
        req.package_name.toLowerCase().includes(searchTerm) ||
        req.Username.toLowerCase().includes(searchTerm) ||
        (req.status && req.status.toLowerCase().includes(searchTerm))
      );
      
      displayRequestsTable(filteredRequests);
      displayRequestsCards(filteredRequests);
    });

    // Refresh functionality
    document.getElementById('refresh-btn').addEventListener('click', function() {
      this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Refreshing...';
      setTimeout(() => {
        loadAllRequests();
        this.innerHTML = '<i class="fas fa-sync-alt me-2"></i>Refresh';
      }, 1000);
    });

    // Load data on page load
    document.addEventListener('DOMContentLoaded', loadAllRequests);
  </script>

