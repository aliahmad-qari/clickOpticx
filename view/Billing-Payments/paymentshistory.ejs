  <style>
    :root {
      --primary: #6c5ce7;
      --primary-light: #a29bfe;
      --secondary: #00cec9;
      --success: #198754;
      --success-light: #198754;
      --warning: #fdcb6e;
      --danger: #d63031;
      --dark: #2d3436;
      --light: #f5f6fa;
      --gray: #dfe6e9;
      --card-bg: rgba(255, 255, 255, 0.9);
      --glass-effect: rgba(255, 255, 255, 0.15);
    }

    /* Dark Mode Styles */
    [data-theme="dark"] {
      --primary: #8B5CF6;
      --secondary: #06B6D4;
      --success: #10B981;
      --warning: #F59E0B;
      --danger: #EF4444;
      --dark: #1F2937;
      --light: #111827;
      --gray: #374151;
      --card-bg: rgba(31, 41, 55, 0.9);
      --glass-effect: rgba(31, 41, 55, 0.15);
    }

    [data-theme="dark"] body {
      background-color: #111827 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .main-panel {
      background-color: #111827 !important;
    }

    [data-theme="dark"] .container-fluid.page-body-wrapper {
      background-color: #111827 !important;
    }

    [data-theme="dark"] .card {
      background-color: #1F2937 !important;
      border-color: #374151 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .equipment-table {
      background-color: #1F2937 !important;
      color: #F9FAFB !important;
    }

    [data-theme="dark"] .equipment-table thead th {
