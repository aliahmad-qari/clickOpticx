    [data-theme="dark"] .alert-primary {
      background-color: #1E40AF !important;
      border-color: #3B82F6 !important;
      color: #DBEAFE !important;
    }
  </style>
</head>

<body>
  <div class="container-scroller">
    <!-- partial:partials/_navbar -->
    <%- include('../partials/_navbar.ejs') %>
      <!-- partial:partials/_navbar -->

      <!-- partial -->
      <div class="container-fluid page-body-wrapper" style="padding-left: 0px;">
        <!-- NavBar Start -->
        <%- include('../partials/Sidebar.ejs') %>
          <!-- NavBar End -->

          <!-- Main Content -->
          <div class="main-panel">
            <div class="content-wrapper">
              <div class="card">
                <div class="card-header">
                  <i class="fas fa-history me-3"></i> Payments History
                  <div class="header-actions"></div>
                </div>

                <div class="card-body">
                  <div class="toolbar">
                    <div class="search-box position-relative">
                      <i class="fas fa-search position-absolute search-icon"></i>
                      <form class="d-flex ms-auto w-100" id="search-form" onsubmit="return false;">
                        <input class="form-control ps-5 search-input" type="search" id="search-input"
                          placeholder="Search by User ID, Username,">
                      </form>
                    </div>
                  </div>
                  
                  <!-- Desktop Table View -->
                  <div class="desktop-table">
                    <div class="table-responsive">
                      <table class="equipment-table">
    <thead>
      <tr>
        <th>User ID</th>
        <th>Package Name</th>
        <th>Username</th>
        <th>Transaction ID</th>
        <th>Home Collection</th>
        <th>Collection Address</th>
        <th>Contact Number</th>
        <th>Preferred Time</th>
        <th>Screenshot</th>
        <th>Created At</th>
        <th>Package Amount</th>
        <th>Paid Amount</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="payments-body">
      <% payments.forEach(payment => { %>
        <tr class="<%= payment.status %>">
          <td><%= payment.user_id %></td>
          <td><%= payment.package_name %></td>
          <td><%= payment.username %></td>
          <td><%= payment.transaction_id %></td>
          <td>
            <% if (payment.home_collection === 1) { %>
              <span class="badge bg-info">Yes</span>
            <% } else { %>
              <span class="badge bg-secondary">No</span>
            <% } %>
          </td>
          <td>
            <% if (payment.collection_address) { %>
              <small title="<%= payment.collection_address %>">
                <%= payment.collection_address.length > 30 ? payment.collection_address.substring(0, 30) + '...' : payment.collection_address %>
              </small>
            <% } else { %>
              <span class="text-muted">-</span>
            <% } %>
          </td>
          <td>
            <%= payment.contact_number || '-' %>
          </td>
          <td>
            <%= payment.preferred_time || '-' %>
          </td>
          <td>
            <% if (payment.payment_screenshot) { %>
              <a href="<%= payment.payment_screenshot.startsWith('http') ? payment.payment_screenshot : '/uploads/' + payment.payment_screenshot %>" target="_blank" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-image"></i> View
              </a>
            <% } else { %>
              <span class="text-muted">-</span>
            <% } %>
          </td>
          <td>
            <%= new Date(payment.created_at).toLocaleString('en-GB', {
              day: '2-digit',
              month: '2-digit',
              year: 'numeric',
              hour: '2-digit',
              minute: '2-digit',
              hour12: true
            }) %>
          </td>
          <td><%= payment.amount %></td>
          <td><%= payment.custom_amount %></td>
          <td>
