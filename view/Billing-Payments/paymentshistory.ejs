    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: var(--light);
      color: var(--dark);
    }

    .container-fluid.page-body-wrapper {
      display: flex;
      flex-direction: row;
    }

    .main-panel {
      flex-grow: 1;
      padding: 10px;
      transition: margin-left 0.3s ease;
    }

    /* ===== MOBILE CARD LAYOUT ===== */
    @media (max-width: 768px) {
      .desktop-table {
        display: none !important;
      }
      
      .mobile-cards {
        display: block !important;
      }
      
      .main-panel {
        margin-left: 0;
        padding: 10px;
      }
    }
    
    @media (min-width: 769px) {
      .desktop-table {
        display: block !important;
      }
      
      .mobile-cards {
        display: none !important;
      }
    }
    
    .mobile-cards {
      display: none;
    }
    
    .history-card {
      background: white;
      border-radius: 12px;
      padding: 15px;
      margin-bottom: 15px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      border: 1px solid #e0e0e0;
      position: relative;
    }
    
    .history-card.paid::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
      background: var(--success);
      border-radius: 12px 0 0 12px;
    }
    
    .history-card.pending::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
      background: var(--warning);
      border-radius: 12px 0 0 12px;
    }
    
    .history-card-header {
      display: flex;
      align-items: center;
      margin-bottom: 12px;
      padding-bottom: 12px;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .history-card-icon {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background: var(--primary);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 12px;
      font-size: 1.2rem;
    }
    
    .history-card-name {
      flex: 1;
    }
    
    .history-card-name h6 {
      margin: 0;
      font-weight: 600;
      font-size: 1rem;
      color: #333;
    }
    
    .history-card-name p {
      margin: 0;
      font-size: 0.85rem;
      color: #666;
    }
    
    .history-card-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
      margin-bottom: 15px;
    }
    
    .history-card-field {
      display: flex;
      flex-direction: column;
    }
    
    .history-card-label {
      font-size: 0.75rem;
      color: #888;
      margin-bottom: 2px;
      text-transform: uppercase;
      font-weight: 500;
    }
    
    .history-card-value {
      font-size: 0.9rem;
      color: #333;
      font-weight: 500;
    }
    
    .history-card-actions {
      display: flex;
      justify-content: flex-end;
      gap: 8px;
      padding-top: 12px;
      border-top: 1px solid #f0f0f0;
    }
    
    .mobile-btn {
      padding: 8px 16px;
      border: none;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    .mobile-btn.delete {
      background-color: #fee;
      color: #dc3545;
      border: 1px solid #dc3545;
    }
    
    .mobile-btn.delete:hover {
      background-color: #dc3545;
      color: white;
    }
    
    .mobile-badge.paid {
      background-color: rgba(25, 135, 84, 0.1);
      color: var(--success);
    }
    
    .mobile-badge.pending {
      background-color: rgba(253, 203, 110, 0.1);
      color: var(--warning);
    }

    @media (max-width: 991px) {
      .main-panel {
        margin-left: 0;
      }
    }

    .card {
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
      border: none;
      overflow: hidden;
      margin-bottom: 30px;
    }

    .card-header {
      background: linear-gradient(90deg, var(--primary), var(--primary-light));
      color: white;
      padding: 20px 25px;
      font-size: 1.4rem;
      font-weight: 600;
      display: flex;
      align-items: center;
      justify-content: center;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .card-body {
      padding: 25px;
    }

    .toolbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      flex-wrap: wrap;
      gap: 15px;
    }

    .search-box {
      position: relative;
      flex: 1;
      min-width: 250px;
      max-width: 400px;
    }

    .search-box i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #9e9e9e;
    }

    .search-input {
      width: 100%;
      padding: 12px 15px 12px 45px;
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      background-color: #f9f9f9;
    }

    .search-input:focus {
      outline: none;
      border-color: #1a73e8;
      background-color: white;
      box-shadow: 0 0 0 3px rgba(26, 115, 232, 0.1);
    }

    .table-responsive {
      overflow-x: hidden;
      border-radius: 10px;
      background: white;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      width: 100%;
    }

    @media (max-width: 1200px) {
      .equipment-table {
        font-size: 12px;
      }
      
      .equipment-table th,
      .equipment-table td {
        padding: 10px 6px;
      }

      /* Smaller column widths for tablets */
      .equipment-table th:nth-child(1) { width: 55px; }
      .equipment-table th:nth-child(2) { width: 100px; }
      .equipment-table th:nth-child(3) { width: 85px; }
      .equipment-table th:nth-child(4) { width: 100px; }
      .equipment-table th:nth-child(5) { width: 65px; }
      .equipment-table th:nth-child(6) { width: 120px; }
      .equipment-table th:nth-child(7) { width: 95px; }
      .equipment-table th:nth-child(8) { width: 85px; }
      .equipment-table th:nth-child(9) { width: 65px; }
      .equipment-table th:nth-child(10) { width: 95px; }
      .equipment-table th:nth-child(11) { width: 75px; }
      .equipment-table th:nth-child(12) { width: 75px; }
      .equipment-table th:nth-child(13) { width: 85px; }
    }

    .equipment-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      min-width: auto;
      table-layout: fixed;
    }

    /* Column width optimization */
    .equipment-table th:nth-child(1) { width: 60px; } /* User ID */
    .equipment-table th:nth-child(2) { width: 110px; } /* Package Name */
    .equipment-table th:nth-child(3) { width: 90px; } /* Username */
    .equipment-table th:nth-child(4) { width: 110px; } /* Transaction ID */
    .equipment-table th:nth-child(5) { width: 70px; } /* Home Collection */
    .equipment-table th:nth-child(6) { width: 130px; } /* Collection Address */
    .equipment-table th:nth-child(7) { width: 100px; } /* Contact Number */
    .equipment-table th:nth-child(8) { width: 90px; } /* Preferred Time */
    .equipment-table th:nth-child(9) { width: 70px; } /* Screenshot */
    .equipment-table th:nth-child(10) { width: 100px; } /* Created At */
    .equipment-table th:nth-child(11) { width: 80px; } /* Package Amount */
    .equipment-table th:nth-child(12) { width: 80px; } /* Paid Amount */
    .equipment-table th:nth-child(13) { width: 90px; } /* Actions */

    .equipment-table th {
      background-color: #f5f8ff;
      color: #1a73e8;
      font-weight: 600;
      padding: 12px 8px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
      white-space: nowrap;
      font-size: 13px;
    }

    .equipment-table td {
      padding: 12px 8px;
      border-bottom: 1px solid #f0f0f0;
      vertical-align: middle;
      word-wrap: break-word;
      overflow: hidden;
      text-overflow: ellipsis;
      font-size: 13px;
    }

    .equipment-table tr:hover {
      background-color: #f9fbff;
    }

    .action-buttons {
      display: flex;
      gap: 8px;
    }

    .btn-action {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      border: none;
      background-color: transparent;
      color: #5f6368;
      cursor: pointer;
      transition: all 0.2s ease;
    }
tr.paid {
  background-color: #e8f5e9;
}
tr.pending {
  background-color: #fff9c4;
}
tr.failed {
  background-color: #ffebee;
}
tr.refunded {
  background-color: #e3f2fd;
