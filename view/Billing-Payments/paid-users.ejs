        overlay.addEventListener('click', window.toggleSidebar);
      }
      
      // Test the toggle function
      console.log('toggleSidebar function:', typeof window.toggleSidebar);
    });
  </script>
  <script>
    // Load paid users data
    async function loadPaidUsers() {
      showLoadingState('paid-users-table');
      showLoadingState('paid-users-cards');
      
      try {
        const response = await fetch('/paid-users');
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const users = await response.json();
        
        if (!users || users.length === 0) {
          showNoDataState('paid-users-table', 'No paid users found');
          showNoDataState('paid-users-cards', 'No paid users found');
          return;
        }
        
        displayUsersTable(users);
        displayUsersCards(users);
        
        // Store original data for filtering
        window.originalUsers = users;
        
        // Initialize real-time search
        if (window.createAdminSearch) {
          window.paidUsersSearch = createAdminSearch({
            searchInputId: 'search-input',
            dataSource: users,
            searchFields: ['id', 'Username', 'Email', 'plan'],
            displayFunction: function(filteredUsers) {
              displayUsersTable(filteredUsers);
              displayUsersCards(filteredUsers);
            },
            debounceTime: 200,
            minSearchLength: 0
          });
        }
        
      } catch (error) {
        console.error('Error loading paid users:', error);
        handleApiError(error, 'loading paid users');
        showNoDataState('paid-users-table', 'Error loading data');
        showNoDataState('paid-users-cards', 'Error loading data');
      }
    }

    function displayUsersTable(users) {
      const tbody = document.getElementById('paid-users-table');
      tbody.innerHTML = users.map(user => `
        <tr>
          <td>#${user.id}</td>
          <td>${user.Username}</td>
          <td>${user.Email}</td>
          <td>${user.plan || 'N/A'}</td>
          <td><span class="badge badge-success"><i class="fas fa-check-circle"></i> Paid</span></td>
        </tr>
      `).join('');
    }

    function displayUsersCards(users) {
      const cardsContainer = document.getElementById('paid-users-cards');
      cardsContainer.innerHTML = users.map(user => `
        <div class="user-card paid">
          <div class="user-card-header">
            <div class="user-card-avatar">
              ${user.Username.charAt(0).toUpperCase()}
            </div>
            <div class="user-card-name">
              <h6>${user.Username}</h6>
              <p>${user.Email}</p>
            </div>
          </div>
          
          <div class="user-card-content">
            <div class="user-card-field">
              <div class="user-card-label">User ID</div>
              <div class="user-card-value">#${user.id}</div>
            </div>
            
            <div class="user-card-field">
              <div class="user-card-label">Plan</div>
              <div class="user-card-value">${user.plan || 'N/A'}</div>
            </div>
            
            <div class="user-card-field" style="grid-column: 1 / -1;">
              <div class="user-card-label">Status</div>
              <div class="user-card-value">
                <span class="badge badge-success">
                  <i class="fas fa-check-circle"></i> Paid User
                </span>
              </div>
            </div>
          </div>
        </div>
      `).join('');
    }


    // Export functionality
    document.getElementById('export-btn').addEventListener('click', function() {
      const csvContent = [
        ['User ID', 'Username', 'Email', 'Plan', 'Status'],
        ...window.originalUsers.map(user => [
          user.id,
          user.Username,
          user.Email,
          user.plan || 'N/A',
          'Paid'
        ])
      ].map(row => row.join(',')).join('\n');
      
      const blob = new Blob([csvContent], { type: 'text/csv' });
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `paid-users-${new Date().toISOString().split('T')[0]}.csv`;
      a.click();
      window.URL.revokeObjectURL(url);
    });

    // Load data on page load
    document.addEventListener('DOMContentLoaded', loadPaidUsers);
  </script>
