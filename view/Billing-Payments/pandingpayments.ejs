  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS (single version) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <style>
    :root {
      --primary: #6c5ce7;
      --primary-light: #a29bfe;
      --success: #00b894;
      --warning: #fdcb6e;
      --danger: #d63031;
      --dark: #2d3436;
      --light: #f5f6fa;
      --gray: #dfe6e9;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: var(--light);
      color: var(--dark);
    }

    /* Dark Mode Styles */
    [data-theme="dark"] {
      --light: #1a1a1a;
      --dark: #e0e0e0;
      --warning: #fbbf24;
      --primary: #8b5cf6;
    }

    [data-theme="dark"] body {
      background: #1a1a1a !important;
      color: #e0e0e0 !important;
    }

    [data-theme="dark"] .card {
      background: #2d2d2d !important;
      color: #e0e0e0 !important;
    }

    [data-theme="dark"] .card-header {
      background: linear-gradient(90deg, #8b5cf6, #a855f7) !important;
    }

    [data-theme="dark"] .billing-table {
      background: #2d2d2d !important;
      color: #e0e0e0 !important;
    }

    [data-theme="dark"] .billing-table th {
      background-color: #374151 !important;
      color: #8b5cf6 !important;
    }

    [data-theme="dark"] .billing-table td {
      border-bottom: 1px solid #374151 !important;
      color: #e0e0e0 !important;
    }

    [data-theme="dark"] .billing-table tr:hover {
      background-color: #374151 !important;
    }

    [data-theme="dark"] .payment-card {
      background: #2d2d2d !important;
      border: 1px solid #374151 !important;
      color: #e0e0e0 !important;
    }

    [data-theme="dark"] .search-input {
      background-color: #374151 !important;
      border-color: #4b5563 !important;
      color: #e0e0e0 !important;
    }

    [data-theme="dark"] tr.pending {
      background-color: rgba(251, 191, 36, 0.1) !important;
    }

    .container-fluid.page-body-wrapper {
      display: flex;
      flex-direction: row;
    }

    .main-panel {
      flex-grow: 1;
      padding: 20px;
      transition: margin-left 0.3s ease;
    }

    /* ===== MOBILE CARD LAYOUT ===== */
    @media (max-width: 768px) {
      .desktop-table {
        display: none !important;
      }
      
      .mobile-cards {
        display: block !important;
      }
      
      .main-panel {
        margin-left: 0;
        padding: 10px;
      }
    }
    
    @media (min-width: 769px) {
      .desktop-table {
        display: block !important;
      }
      
      .mobile-cards {
        display: none !important;
      }
    }
    
    .mobile-cards {
      display: none;
    }
    
    .payment-card {
      background: white;
      border-radius: 12px;
      padding: 15px;
      margin-bottom: 15px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      border: 1px solid #e0e0e0;
      position: relative;
    }
    
    .payment-card.pending::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
      background: var(--warning);
      border-radius: 12px 0 0 12px;
    }
    
    .payment-card-header {
      display: flex;
      align-items: center;
      margin-bottom: 12px;
      padding-bottom: 12px;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .payment-card-avatar {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background: var(--primary);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 12px;
      font-size: 1.2rem;
      font-weight: 600;
    }
    
    .payment-card-name {
      flex: 1;
    }
    
    .payment-card-name h6 {
      margin: 0;
      font-weight: 600;
      font-size: 1rem;
      color: #333;
    }
    
    .payment-card-name p {
      margin: 0;
      font-size: 0.85rem;
      color: #666;
    }
    
    .payment-card-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
      margin-bottom: 15px;
    }
    
    .payment-card-field {
      display: flex;
      flex-direction: column;
    }
    
    .payment-card-label {
      font-size: 0.75rem;
      color: #888;
      margin-bottom: 2px;
      text-transform: uppercase;
      font-weight: 500;
    }
    
    .payment-card-value {
      font-size: 0.9rem;
      color: #333;
      font-weight: 500;
    }
    
    .mobile-badge {
      padding: 4px 8px;
      border-radius: 12px;
      font-size: 0.8rem;
      font-weight: 500;
    }
    
    .mobile-badge.pending {
      background-color: rgba(253, 203, 110, 0.1);
      color: var(--warning);
    }
    
    .mobile-badge.paid {
      background-color: rgba(0, 184, 148, 0.1);
      color: var(--success);
    }
    
    @media (max-width: 991px) {
      .main-panel {
        margin-left: 0;
      }
    }

    .card {
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      margin-bottom: 30px;
      animation: slideUp 0.8s ease forwards;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(50px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .card-header {
      background: linear-gradient(90deg, var(--primary), var(--primary-light));
      color: white;
      padding: 20px 25px;
      font-size: 1.4rem;
      font-weight: 600;
      display: flex;
      justify-content: center;
      align-items: center;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      overflow: hidden;
    }

    .card-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      animation: shine 2s infinite;
    }

    @keyframes shine {
      0% {
        left: -100%;
      }

      100% {
        left: 100%;
      }
    }

    .card-body {
      padding: 25px;
    }

    .alert {
      padding: 15px 20px;
      border-radius: 8px;
      margin-bottom: 25px;
      display: flex;
      align-items: center;
      font-size: 0.95rem;
    }

    .alert-success {
      background-color: rgba(52, 168, 83, 0.1);
      color: #155724;
      border-left: 4px solid #34a853;
    }

    .alert-danger {
      background-color: rgba(234, 67, 53, 0.1);
      color: #721c24;
      border-left: 4px solid #ea4335;
    }

    .toolbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      flex-wrap: wrap;
      gap: 15px;
    }

    .search-box {
      position: relative;
      max-width: 400px;
      flex: 1;
    }

    .search-box i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #9e9e9e;
    }

    .search-input {
      width: 100%;
      padding: 12px 15px 12px 45px;
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      font-size: 0.95rem;
      background-color: #f9f9f9;
      transition: all 0.3s ease;
    }
tr.paid { background-color: #e8f5e9; }
tr.pending { background-color: #fff9c4; }
tr.failed { background-color: #fdecea; }
tr.refunded { background-color: #eceff1; }

    .search-input:focus {
      outline: none;
      border-color: var(--primary);
      background-color: white;
      box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.1);
    }

    .btn-add {
      background: linear-gradient(135deg, #1a73e8, #4285f4);
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      font-size: 0.95rem;
      font-weight: 500;
      display: flex;
      align-items: center;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(26, 115, 232, 0.2);
    }

    .btn-add:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(203, 204, 206, 0.3);
    }

    .table-responsive {
      overflow-x: auto;
      border-radius: 10px;
      background: white;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .billing-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
    }

    .billing-table th {
      background-color: #f5f8ff;
      color: var(--primary);
      font-weight: 600;
      padding: 16px 20px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
      white-space: nowrap;
    }

    .billing-table td {
      padding: 14px 20px;
      border-bottom: 1px solid #f0f0f0;
      vertical-align: middle;
    }

    .billing-table tr:hover {
      background-color: #f9fbff;
    }

    .billing-table-empty {
      text-align: center;
      padding: 60px 20px;
      color: #666;
    }

    .billing-table-empty i {
      font-size: 4rem;
      color: #ddd;
      margin-bottom: 20px;
      display: block;
    }

    .billing-table-empty h6 {
      margin-bottom: 10px;
      font-size: 1.2rem;
      color: #333;
    }

    .billing-table-empty p {
      margin: 0;
      color: #666;
    }

    .action-buttons {
      display: flex;
      gap: 8px;
    }

    .btn-action {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      border: none;
      background-color: transparent;
      color: #5f6368;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .btn-action:hover {
      background-color: #f1f3f4;
      color: #1a73e8;
    }

    .search-box {
      width: 100%;
      max-width: 500px;
      /* or any width you want */
    }

    .search-icon {
      top: 50%;
      left: 15px;
      transform: translateY(-50%);
      color: #aaa;
      font-size: 16px;
    }

    /* Icon styling enhancements */
    .card-header i {
      font-size: 1.2rem;
      opacity: 0.9;
    }

    .billing-table th i {
      color: var(--primary);
      font-size: 0.9rem;
      opacity: 0.8;
    }

    .badge i {
      font-size: 0.8rem;
    }

    /* Add subtle animation to header icon */
    .card-header i.fa-clock {
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% { opacity: 0.9; }
      50% { opacity: 0.6; }
      100% { opacity: 0.9; }
    }
    \n    /* Enhanced Mobile Responsiveness */\n    @media (min-width: 769px) {\n      .billing-table {\n        min-width: 600px;\n      }\n    }\n  </style>

</head>

<body>
  <div class="container-scroller">
    <!-- partial:partials/_navbar -->
    <%- include('../partials/_navbar.ejs') %>
      <!-- partial:partials/_navbar -->

      <!-- partial -->
      <div class="container-fluid page-body-wrapper" style="padding-left: 0px;">
        <!-- NavBar Start -->
        <%- include('../partials/Sidebar.ejs') %>
          <!-- NavBar End -->

          <!-- Main Content -->
          <div class="main-panel">
            <div class="content-wrapper">
              <div class="card">
                <div class="card-header">
                  <i class="fas fa-clock me-3"></i> Pending Payments
                  <div class="header-actions">
                  </div>
                </div>

                <div class="card-body">
                  <div class="toolbar">
                    <div class="search-box position-relative">
                      <i class="fas fa-search position-absolute search-icon"></i>
                      <form class="d-flex ms-auto w-100" id="search-form" onsubmit="return false;">
                        <input class="form-control ps-5 search-input" type="search" id="search-input"
                          placeholder="Search by User ID, Username">
                      </form>
                    </div>
                  </div>
                  <!-- Desktop Table View -->
                  <div class="desktop-table">
                    <div class="table-responsive">
                      <table class="billing-table">
                     <thead>
  <tr>
    <th><i class="fas fa-user-tag me-2"></i>User ID</th>
    <th><i class="fas fa-user me-2"></i>Username</th>
    <th><i class="fas fa-envelope me-2"></i>Email</th>
    <th><i class="fas fa-hourglass-half me-2"></i>Total Pending Payments</th>
    <th><i class="fas fa-box me-2"></i>Total Package Amount</th>
    <th><i class="fas fa-money-bill-wave me-2"></i>Total Paid Amount</th>
    <th><i class="fas fa-calendar-alt me-2"></i>Last Payment Date</th>
    <th><i class="fas fa-info-circle me-2"></i>Status</th>
  </tr>
</thead>

<tbody id="payments-body">
  <% if (typeof groupedPayments !== 'undefined' && groupedPayments.length > 0) { %>
    <% groupedPayments.forEach(user => { %>
      <tr class="pending">
        <td><%= user.user_id %></td>
        <td><%= user.Username %></td>
        <td><%= user.Email %></td>
        <td><%= user.total_pending_payments %> requests</td>
        <td><%= user.total_amount || 0 %></td>
        <td><%= user.total_custom_amount || 0 %></td>
        <td>
          <%= user.last_payment_date ? new Date(user.last_payment_date).toLocaleDateString('en-GB') : '-' %>
        </td>
        <td><span class="badge bg-warning text-dark"><i class="fas fa-clock me-1"></i>Pending</span></td>
      </tr>
    <% }) %>
  <% } else { %>
    <tr>
      <td colspan="8" class="billing-table-empty">
        <i class="fas fa-inbox"></i>
        <h6>No Pending Payments Found</h6>
        <p>All payments are up to date!</p>
      </td>
    </tr>
  <% } %>
</tbody>




                            
                          </table>
                    </div>
                  </div>

                  <!-- Mobile Cards View -->
                  <div class="mobile-cards">
                    <% if (typeof groupedPayments !== 'undefined' && groupedPayments.length > 0) { %>
                      <% groupedPayments.forEach(user => { %>
                        <div class="payment-card pending">
                          <div class="payment-card-header">
                            <div class="payment-card-avatar">
                              <%= user.Username.charAt(0).toUpperCase() %>
                            </div>
                            <div class="payment-card-name">
                              <h6><%= user.Username %></h6>
                              <p><%= user.Email %></p>
                            </div>
                          </div>
                          
                          <div class="payment-card-content">
                            <div class="payment-card-field">
                              <div class="payment-card-label">User ID</div>
                              <div class="payment-card-value">
                                #<%= user.user_id %>
                              </div>
                            </div>
                            
                            <div class="payment-card-field">
                              <div class="payment-card-label">Pending Payments</div>
                              <div class="payment-card-value">
                                <%= user.total_pending_payments %> requests
                              </div>
                            </div>
                            
                            <div class="payment-card-field">
                              <div class="payment-card-label">Package Amount</div>
                              <div class="payment-card-value">
                                PKR <%= user.total_amount || 0 %>
                              </div>
                            </div>
                            
                            <div class="payment-card-field">
                              <div class="payment-card-label">Paid Amount</div>
                              <div class="payment-card-value">
                                PKR <%= user.total_custom_amount || 0 %>
                              </div>
                            </div>
                            
                            <div class="payment-card-field">
                              <div class="payment-card-label">Last Payment</div>
                              <div class="payment-card-value">
                                <%= user.last_payment_date ? new Date(user.last_payment_date).toLocaleDateString() : 'N/A' %>
                              </div>
                            </div>
                            
                            <div class="payment-card-field">
                              <div class="payment-card-label">Status</div>
                              <div class="payment-card-value">
                                <span class="mobile-badge pending">
                                  <i class="fas fa-clock"></i> Pending
                                </span>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% }) %>
                    <% } else { %>
                      <div class="billing-empty-state">
                        <i class="fas fa-inbox"></i>
                        <h5>No Pending Payments Found</h5>
                        <p>All payments are up to date!</p>
                      </div>
                    <% } %>
                  </div>

                  <!-- Edit Equipment Modal -->
                  <div class="modal fade" id="editEquipmentModal" tabindex="-1"
                    aria-labelledby="editEquipmentModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="editEquipmentModalLabel">Edit Equipment</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <form action="/updateEquipment" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="id" id="edit-id">
                            <div class="form-group mb-3">
                              <label for="edit-type">Type</label>
                              <select name="type" id="edit-type" class="form-select" required>
                                <option value="fibre">Fibre</option>
                                <option value="wireless">Wireless</option>
                              </select>
                            </div>
                            <div class="form-group mb-3">
                              <label for="edit-name">Equipment Name</label>
                              <input type="text" name="name" id="edit-name" class="form-control" required>
                            </div>
                            <div class="form-group mb-3">
                              <label for="edit-quantity">Quantity</label>
                              <input type="text" name="quantity" id="edit-quantity" class="form-control" required>
                            </div>
                            <div class="form-group mb-3">
                              <label for="edit-category">Category</label>
                              <input type="text" name="category" id="edit-category" class="form-control" readonly>
                            </div>
                            <div class="form-group mb-3">
                              <label for="edit-image">Image (optional)</label>
                              <input type="file" name="image" id="edit-image" class="form-file" accept="image/*">
                              <div id="current-image-container" class="mt-2">
                                <img id="current-image" class="current-image" alt="Current Equipment Image">
                              </div>
                            </div>
                            <button type="submit" class="btn btn-success">
                              <i class="fas fa-save mr-2"></i> Update Equipment
                            </button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
  </div>

  <!-- Scripts - Load in correct order: jQuery first, then others -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Vendor and Custom Scripts -->
  <script src="/vendors/js/vendor.bundle.base.js"></script>
  <script src="/vendors/chart.js/Chart.min.js"></script>
  <script src="/vendors/datatables.net/jquery.dataTables.js"></script>
  <script src="/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
  <script src="/js/dataTables.select.min.js"></script>
  <script src="/js/off-canvas.js"></script>
  <script src="/js/hoverable-collapse.js"></script>
  <script src="/js/template.js"></script>
  <script src="/js/settings.js"></script>
  <script src="/js/dashboard.js"></script>
  <script src="/js/Chart.roundedBarCharts.js"></script>
  <script src="/js/billing-payments-common.js"></script>

  <!-- Search Bar Functionality -->
  <script>
    $(document).ready(function () {
      $('#search-input').on('keyup', function () {
        var value = $(this).val().toLowerCase();
        $('#payments-body tr').filter(function () {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
        });
      });
    });
  </script>
</body>

</html>