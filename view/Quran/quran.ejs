  <script>
    // Initialize jsPDF
    const { jsPDF } = window.jspdf;
    
    let allSurahsList = [];
    let currentArabicSurah = null;
    let currentUrduSurah = null;
    let showTranslation = true;

    document.addEventListener("DOMContentLoaded", async () => {
      try {
        // First load the list of all surahs
        const surahListRes = await fetch("https://api.alquran.cloud/v1/surah");
        const surahListData = await surahListRes.json();
        allSurahsList = surahListData.data;
        
        // Populate surah selector
        populateSurahSelector(allSurahsList);

        // Load the first surah by default
        loadSurah(1);
      } catch (error) {
        console.error("Error initializing:", error);
        document.getElementById('loading').innerHTML = `
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">Failed to load data. Please try again later.</span>
          </div>
        `;
      }
    });

    function populateSurahSelector(surahs) {
      const selector = document.getElementById('surahSelector');
      surahs.forEach(surah => {
        const option = document.createElement('option');
        option.value = surah.number;
        option.textContent = `${surah.number}. ${surah.englishName} (${surah.name})`;
        selector.appendChild(option);
      });
    }

    async function loadSurah(surahNumber) {
      if (!surahNumber) return;
      
      try {
        document.getElementById('loading').classList.remove('hidden');
        document.getElementById('quranContainer').classList.add('hidden');
        document.getElementById('noResults').classList.add('hidden');

        // Fetch Arabic Quran
        const arabicRes = await fetch(`https://api.alquran.cloud/v1/surah/${surahNumber}/ar.alafasy`);
        const arabicData = await arabicRes.json();
        currentArabicSurah = arabicData.data;

        // Fetch Urdu translation
        const urduRes = await fetch(`https://api.alquran.cloud/v1/surah/${surahNumber}/ur.jalandhry`);
        const urduData = await urduRes.json();
        currentUrduSurah = urduData.data;

        displayCurrentSurah();
        
        document.getElementById('loading').classList.add('hidden');
        document.getElementById('quranContainer').classList.remove('hidden');
      } catch (error) {
        console.error("Error fetching surah data:", error);
        document.getElementById('loading').innerHTML = `
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">Failed to load surah. Please try again later.</span>
          </div>
        `;
      }
    }

    function toggleTranslation() {
      showTranslation = !showTranslation;
      const toggleBtn = document.getElementById('toggleTranslation');
      
      if (showTranslation) {
        toggleBtn.classList.add('active', 'bg-green-600', 'text-white');
        toggleBtn.classList.remove('bg-gray-200', 'text-gray-700');
      } else {
        toggleBtn.classList.remove('active', 'bg-green-600', 'text-white');
        toggleBtn.classList.add('bg-gray-200', 'text-gray-700');
      }
      
      // Refresh the display
      if (currentArabicSurah && currentUrduSurah) {
        displayCurrentSurah();
      }
    }

    function displayCurrentSurah() {
      const quranContainer = document.getElementById("quranContainer");
      quranContainer.innerHTML = "";

      if (!currentArabicSurah || !currentUrduSurah) {
        document.getElementById('noResults').classList.remove('hidden');
        quranContainer.classList.add('hidden');
        return;
      }

      const surahDiv = document.createElement("div");
      surahDiv.className = "surah-card bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all";

      // Surah Header
      const surahHeader = document.createElement("div");
      surahHeader.className = "flex items-center justify-between mb-6 pb-4 border-b border-gray-200";
      
      const surahTitle = document.createElement("div");
      surahTitle.className = "flex items-center gap-4";
      
      const surahNumber = document.createElement("div");
      surahNumber.className = "flex items-center justify-center bg-green-100 text-green-800 rounded-full w-10 h-10 font-bold";
      surahNumber.textContent = currentArabicSurah.number;
      
      const surahName = document.createElement("h2");
      surahName.className = "text-2xl font-bold text-green-700";
      surahName.textContent = `ÿ≥Ÿàÿ±ÿ© ${currentArabicSurah.name}`;
      
      surahTitle.appendChild(surahNumber);
      surahTitle.appendChild(surahName);
      
      const surahInfo = document.createElement("div");
      surahInfo.className = "text-sm text-gray-500 text-left";
      surahInfo.innerHTML = `
        <div>${currentArabicSurah.englishName} <span class="text-gray-400">|</span> ${currentArabicSurah.englishNameTranslation}</div>
        <div>${currentArabicSurah.revelationType === "Meccan" ? "ŸÖŸÉŸäÿ©" : "ŸÖÿØŸÜŸäÿ©"} <span class="text-gray-400">|</span> ${currentArabicSurah.ayahs.length} ÿ¢Ÿäÿßÿ™</div>
      `;
      
      surahHeader.appendChild(surahTitle);
      surahHeader.appendChild(surahInfo);
      
      // Surah Content
      const surahContent = document.createElement("div");
      surahContent.className = "arabic-text text-right text-gray-800";

      currentArabicSurah.ayahs.forEach((ayah, i) => {
        const urduAyah = currentUrduSurah.ayahs[i];

        const ayahContainer = document.createElement("div");
        ayahContainer.className = "ayah-container mb-4 pb-4 border-b border-gray-100 last:border-0 last:pb-0 last:mb-0";

        // Arabic text
        const arabicText = document.createElement("div");
        arabicText.className = "mb-3 leading-loose";
        arabicText.innerHTML = `${ayah.text} <span class="ayah-number">${ayah.numberInSurah}</span>`;

        ayahContainer.appendChild(arabicText);

        // Urdu translation (conditionally added)
        if (showTranslation) {
          const urduText = document.createElement("div");
          urduText.className = "text-gray-700 text-right text-lg font-light bg-gray-50 p-3 rounded-lg mt-2";
          urduText.textContent = urduAyah.text;
          ayahContainer.appendChild(urduText);
        }

        surahContent.appendChild(ayahContainer);
      });

      surahDiv.appendChild(surahHeader);
      surahDiv.appendChild(surahContent);
      quranContainer.appendChild(surahDiv);
    }

    async function searchQuran() {
      const query = document.getElementById("searchInput").value.trim().toLowerCase();
      if (!query) {
        return;
      }

      // Try to match by number first
      if (/^\d+$/.test(query)) {
        const surahNumber = parseInt(query);
        if (surahNumber >= 1 && surahNumber <= 114) {
          loadSurah(surahNumber);
          return;
        }
      }

      // Then try to match by name
      const matchingSurah = allSurahsList.find(surah => 
        surah.name.toLowerCase().includes(query) || 
        surah.englishName.toLowerCase().includes(query) ||
        surah.englishNameTranslation.toLowerCase().includes(query)
      );

      if (matchingSurah) {
        loadSurah(matchingSurah.number);
      } else {
        document.getElementById('noResults').classList.remove('hidden');
        document.getElementById('quranContainer').classList.add('hidden');
      }
    }

    async function downloadAsPdf() {
      if (!currentArabicSurah) {
        alert('No Surah loaded to download');
        return;
      }

      const downloadBtn = document.getElementById('downloadPdf');
      const originalText = downloadBtn.innerHTML;
      downloadBtn.innerHTML = '<i class="bi bi-hourglass mr-1"></i> Preparing PDF...';
      downloadBtn.disabled = true;

      try {
        const pdf = new jsPDF({
          orientation: 'portrait',
          unit: 'mm',
          format: 'a4'
        });

        // Add title page
        pdf.setFontSize(24);
        pdf.text(`Surah ${currentArabicSurah.englishName} (${currentArabicSurah.name})`, 105, 30, { align: 'center' });
        pdf.setFontSize(16);
        pdf.text(currentArabicSurah.englishNameTranslation, 105, 40, { align: 'center' });
        pdf.setFontSize(14);
        pdf.text(`${currentArabicSurah.revelationType === "Meccan" ? "Makki Surah" : "Madani Surah"} | ${currentArabicSurah.ayahs.length} Verses`, 105, 50, { align: 'center' });
        pdf.addPage();

        // Process verses in chunks
        const versesPerPage = 15;
        const totalVerses = currentArabicSurah.ayahs.length;
        const totalPages = Math.ceil(totalVerses / versesPerPage);

        for (let page = 0; page < totalPages; page++) {
          if (page > 0) {
            pdf.addPage();
          }

          const startVerse = page * versesPerPage;
          const endVerse = Math.min((page + 1) * versesPerPage, totalVerses);
          
          // Create temporary container for this page
          const pdfContainer = document.getElementById('pdfContainer');
          pdfContainer.innerHTML = '';
          
          const pageDiv = document.createElement('div');
          pageDiv.className = 'pdf-page';
          
          // Add header
          const header = document.createElement('h3');
          header.style.textAlign = 'center';
          header.style.fontSize = '18px';
          header.style.marginBottom = '20px';
          header.textContent = `Surah ${currentArabicSurah.englishName} - Page ${page + 1} of ${totalPages}`;
          pageDiv.appendChild(header);

          // Add verses for this page
          for (let i = startVerse; i < endVerse; i++) {
            const ayah = currentArabicSurah.ayahs[i];
            const urduAyah = currentUrduSurah.ayahs[i];

            const ayahDiv = document.createElement('div');
            ayahDiv.style.marginBottom = '15px';
            
            // Arabic text
            const arabicText = document.createElement('div');
            arabicText.style.textAlign = 'right';
            arabicText.style.fontFamily = "'Amiri', serif";
            arabicText.style.fontSize = '18px';
            arabicText.style.marginBottom = '5px';
            arabicText.innerHTML = `${ayah.text} <span style="background-color: #d1fae5; border-radius: 50%; width: 25px; height: 25px; display: inline-flex; align-items: center; justify-content: center; font-size: 12px;">${ayah.numberInSurah}</span>`;
            
            ayahDiv.appendChild(arabicText);

            // Urdu translation
            if (showTranslation) {
              const urduText = document.createElement('div');
              urduText.style.textAlign = 'right';
              urduText.style.fontSize = '14px';
              urduText.style.color = '#555';
              urduText.style.marginTop = '5px';
              urduText.textContent = urduAyah.text;
              ayahDiv.appendChild(urduText);
            }

            pageDiv.appendChild(ayahDiv);
          }

          pdfContainer.appendChild(pageDiv);

          // Convert this page to image and add to PDF
          await new Promise((resolve) => {
            html2canvas(pageDiv, {
              scale: 1,
              logging: false,
              useCORS: true
            }).then(canvas => {
              const imgData = canvas.toDataURL('image/png');
              const imgWidth = 210; // A4 width in mm
              const imgHeight = (canvas.height * imgWidth) / canvas.width;
              
              pdf.addImage(imgData, 'PNG', 0, 20, imgWidth, imgHeight);
              resolve();
            });
          });
        }

        // Save the PDF
        pdf.save(`Surah_${currentArabicSurah.englishName}.pdf`);
        
      } catch (error) {
        console.error('Error generating PDF:', error);
        alert('Failed to generate PDF. Please try a shorter Surah or check your internet connection.');
      } finally {
        downloadBtn.innerHTML = originalText;
        downloadBtn.disabled = false;
      }
    }

    // Sidebar Toggle for Mobile
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('sidebarOverlay');

        if (sidebar && overlay) {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
