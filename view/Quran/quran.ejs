    <script>
        let allArabicSurahs = [];
        let allUrduSurahs = [];
        let showTranslation = true;

        document.addEventListener("DOMContentLoaded", async () => {
            try {
                // Show loading state
                document.getElementById('loading').classList.remove('hidden');
                document.getElementById('quranContainer').classList.add('hidden');

                // Fetch Arabic Quran
                const arabicRes = await fetch("https://api.alquran.cloud/v1/quran/quran-uthmani");
                const arabicData = await arabicRes.json();
                allArabicSurahs = arabicData.data.surahs;

                // Fetch Urdu translation
                const urduRes = await fetch("https://api.alquran.cloud/v1/quran/ur.jalandhry");
                const urduData = await urduRes.json();
                allUrduSurahs = urduData.data.surahs;

                // Populate surah selector
                populateSurahSelector(allArabicSurahs);

                displaySurahs(allArabicSurahs, allUrduSurahs);
                
                // Hide loading and show content
                document.getElementById('loading').classList.add('hidden');
                document.getElementById('quranContainer').classList.remove('hidden');
            } catch (error) {
                console.error("Error fetching Quran data:", error);
                document.getElementById('loading').innerHTML = `
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                        <strong class="font-bold">خطأ!</strong>
                        <span class="block sm:inline">حدث خطأ أثناء تحميل البيانات. الرجاء المحاولة لاحقاً.</span>
                    </div>
                `;
            }
        });

        function populateSurahSelector(surahs) {
            const selector = document.getElementById('surahSelector');
            surahs.forEach(surah => {
                const option = document.createElement('option');
                option.value = surah.number;
                option.textContent = `${surah.number}. ${surah.name} (${surah.englishName})`;
                selector.appendChild(option);
            });
        }

        function selectSurah(surahNumber) {
            if (!surahNumber) return;
            
            const arabicSurah = allArabicSurahs.find(s => s.number.toString() === surahNumber);
            const urduSurah = allUrduSurahs.find(s => s.number.toString() === surahNumber);
            
            if (arabicSurah && urduSurah) {
                displaySurahs([arabicSurah], [urduSurah]);
                document.getElementById('searchInput').value = arabicSurah.name;
            }
        }

        function toggleTranslation() {
            showTranslation = !showTranslation;
            const toggleBtn = document.getElementById('toggleTranslation');
            
            if (showTranslation) {
                toggleBtn.classList.add('active');
                toggleBtn.classList.remove('bg-gray-200', 'text-gray-700');
                toggleBtn.classList.add('bg-green-600', 'text-white');
            } else {
                toggleBtn.classList.remove('active');
                toggleBtn.classList.add('bg-gray-200', 'text-gray-700');
                toggleBtn.classList.remove('bg-green-600', 'text-white');
            }
            
            // Refresh the display
            const currentSurahNumber = document.getElementById('surahSelector').value;
            if (currentSurahNumber) {
                selectSurah(currentSurahNumber);
            } else {
                displaySurahs(allArabicSurahs, allUrduSurahs);
            }
        }

        function displaySurahs(arabicSurahs, urduSurahs) {
            const quranContainer = document.getElementById("quranContainer");
            quranContainer.innerHTML = "";

            if (arabicSurahs.length === 0 || urduSurahs.length === 0) {
                document.getElementById('noResults').classList.remove('hidden');
                quranContainer.classList.add('hidden');
                return;
            } else {
                document.getElementById('noResults').classList.add('hidden');
                quranContainer.classList.remove('hidden');
            }

            arabicSurahs.forEach((arabicSurah, index) => {
                const urduSurah = urduSurahs[index]; // Corresponding Urdu surah

                const surahDiv = document.createElement("div");
                surahDiv.className = "surah-card bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all";

                // Surah Header
                const surahHeader = document.createElement("div");
                surahHeader.className = "flex items-center justify-between mb-6 pb-4 border-b border-gray-200";
                
                const surahTitle = document.createElement("div");
                surahTitle.className = "flex items-center gap-4";
                
                const surahNumber = document.createElement("div");
                surahNumber.className = "flex items-center justify-center bg-green-100 text-green-800 rounded-full w-10 h-10 font-bold";
                surahNumber.textContent = arabicSurah.number;
                
                const surahName = document.createElement("h2");
                surahName.className = "text-2xl font-bold text-green-700";
                surahName.textContent = `سورة ${arabicSurah.name}`;
                
                surahTitle.appendChild(surahNumber);
                surahTitle.appendChild(surahName);
                
                const surahInfo = document.createElement("div");
                surahInfo.className = "text-sm text-gray-500 text-left";
                surahInfo.innerHTML = `
                    <div>${arabicSurah.englishName} <span class="text-gray-400">|</span> ${arabicSurah.englishNameTranslation}</div>
                    <div>${arabicSurah.revelationType === "Meccan" ? "مكية" : "مدنية"} <span class="text-gray-400">|</span> ${arabicSurah.ayahs.length} آيات</div>
                `;
                
                surahHeader.appendChild(surahTitle);
                surahHeader.appendChild(surahInfo);
                
                // Surah Content
                const surahContent = document.createElement("div");
                surahContent.className = "arabic-text text-right text-gray-800 space-y-6";

                arabicSurah.ayahs.forEach((ayah, i) => {
                    const urduAyah = urduSurah.ayahs[i];

                    const ayahBlock = document.createElement("div");
                    ayahBlock.className = "mb-4 pb-4 border-b border-gray-100 last:border-0 last:pb-0 last:mb-0";

                    const arabicText = document.createElement("div");
                    arabicText.className = "mb-3 leading-loose";
                    arabicText.innerHTML = `${ayah.text} <span class="ayah-number">${ayah.numberInSurah}</span>`;

                    ayahBlock.appendChild(arabicText);

                    if (showTranslation) {
                        const urduText = document.createElement("div");
                        urduText.className = "text-gray-700 text-right text-lg font-light bg-gray-50 p-3 rounded-lg";
                        urduText.textContent = urduAyah.text;
                        ayahBlock.appendChild(urduText);
                    }

                    surahContent.appendChild(ayahBlock);
                });

                surahDiv.appendChild(surahHeader);
                surahDiv.appendChild(surahContent);
                quranContainer.appendChild(surahDiv);
            });
        }

        function searchQuran() {
            const query = document.getElementById("searchInput").value.trim().toLowerCase();
            if (!query) {
                displaySurahs(allArabicSurahs, allUrduSurahs);
                return;
            }

            // Try to match by number first
            if (/^\d+$/.test(query)) {
                const filteredArabic = allArabicSurahs.filter(surah => surah.number.toString() === query);
                const filteredUrdu = allUrduSurahs.filter(surah => surah.number.toString() === query);
                
                if (filteredArabic.length > 0 && filteredUrdu.length > 0) {
                    displaySurahs(filteredArabic, filteredUrdu);
                    return;
                }
            }

            // Then try to match by name
            const filteredArabic = allArabicSurahs.filter(surah => 
                surah.name.toLowerCase().includes(query) || 
                surah.englishName.toLowerCase().includes(query) ||
                surah.englishNameTranslation.toLowerCase().includes(query)
            );

            const filteredUrdu = allUrduSurahs.filter(surah => 
                surah.name.toLowerCase().includes(query) || 
                surah.englishName.toLowerCase().includes(query) ||
                surah.englishNameTranslation.toLowerCase().includes(query)
            );

            if (filteredArabic.length > 0 && filteredUrdu.length > 0) {
                displaySurahs(filteredArabic, filteredUrdu);
            } else {
                document.getElementById('noResults').classList.remove('hidden');
                document.getElementById('quranContainer').classList.add('hidden');
            }
        }
        function displaySurahs(arabicSurahs, urduSurahs) {
            const quranContainer = document.getElementById("quranContainer");
            quranContainer.innerHTML = "";

            if (arabicSurahs.length === 0 || urduSurahs.length === 0) {
                document.getElementById('noResults').classList.remove('hidden');
                quranContainer.classList.add('hidden');
                return;
            } else {
                document.getElementById('noResults').classList.add('hidden');
                quranContainer.classList.remove('hidden');
            }

            arabicSurahs.forEach((arabicSurah, index) => {
                const urduSurah = urduSurahs[index];

                const surahDiv = document.createElement("div");
                surahDiv.className = "surah-card bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all";

                // Surah Header (same as before)
                const surahHeader = document.createElement("div");
                surahHeader.className = "flex items-center justify-between mb-6 pb-4 border-b border-gray-200";
                
                const surahTitle = document.createElement("div");
                surahTitle.className = "flex items-center gap-4";
                
                const surahNumber = document.createElement("div");
                surahNumber.className = "flex items-center justify-center bg-green-100 text-green-800 rounded-full w-10 h-10 font-bold";
                surahNumber.textContent = arabicSurah.number;
                
                const surahName = document.createElement("h2");
                surahName.className = "text-2xl font-bold text-green-700";
                surahName.textContent = `سورة ${arabicSurah.name}`;
                
                surahTitle.appendChild(surahNumber);
                surahTitle.appendChild(surahName);
                
                const surahInfo = document.createElement("div");
                surahInfo.className = "text-sm text-gray-500 text-left";
                surahInfo.innerHTML = `
                    <div>${arabicSurah.englishName} <span class="text-gray-400">|</span> ${arabicSurah.englishNameTranslation}</div>
                    <div>${arabicSurah.revelationType === "Meccan" ? "مكية" : "مدنية"} <span class="text-gray-400">|</span> ${arabicSurah.ayahs.length} آيات</div>
                `;
                
                surahHeader.appendChild(surahTitle);
                surahHeader.appendChild(surahInfo);
                
                // Surah Content - Modified to fix the issue
                const surahContent = document.createElement("div");
                surahContent.className = "arabic-text text-right text-gray-800";

                arabicSurah.ayahs.forEach((ayah, i) => {
                    const urduAyah = urduSurah.ayahs[i];

                    // Create container for each ayah that will always take full width
                    const ayahContainer = document.createElement("div");
                    ayahContainer.className = "ayah-container mb-4 pb-4 border-b border-gray-100 last:border-0 last:pb-0 last:mb-0";

                    // Arabic text
                    const arabicText = document.createElement("div");
                    arabicText.className = "mb-3 leading-loose";
                    arabicText.innerHTML = `${ayah.text} <span class="ayah-number">${ayah.numberInSurah}</span>`;

                    ayahContainer.appendChild(arabicText);

                    // Urdu translation (conditionally added)
                    if (showTranslation) {
                        const urduText = document.createElement("div");
                        urduText.className = "text-gray-700 text-right text-lg font-light bg-gray-50 p-3 rounded-lg mt-2";
                        urduText.textContent = urduAyah.text;
                        ayahContainer.appendChild(urduText);
                    }

                    surahContent.appendChild(ayahContainer);
                });

                surahDiv.appendChild(surahHeader);
                surahDiv.appendChild(surahContent);
                quranContainer.appendChild(surahDiv);
            });
        }
    </script>



