<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Sign Up</title>
  <link rel="stylesheet" href="../../vendors/feather/feather.css">
  <link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
  <link rel="stylesheet" href="../../css/vertical-layout-light/style.css">
  <link rel="shortcut icon" href="../../images/favicon.png" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

  <style>
    /* Video Background Styling */
    .video-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
    }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 0;
    }

    .content-wrapper {
      position: relative;
      z-index: 1;
    }

    /* Improved form styling */
    .auth-form-light {
      background-color: rgba(255, 255, 255, 0.2) !important;
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      border-radius: 20px;
      padding: 30px 40px;
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    /* Text and icon visibility */
    .auth-form-light,
    .auth-form-light h2,
    .auth-form-light p,
    .auth-form-light a {
      color: white !important;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    /* Add this to your <style> section in both files */
    .alert .btn-close {
      padding: 0 !important;
      margin-left: 1rem !important;
      float: none;
      position: static;
      display: flex;
      align-items: center;
    }

    /* Input group icons */
    .input-group-text {
      background-color: rgba(255, 255, 255, 0.3) !important;
      border-color: rgba(255, 255, 255, 0.3) !important;
    }

    /* Logo styling */
    .brand-logo img {
      max-width: 200px;
      filter: drop-shadow(0 0 5px rgba(0, 0, 0, 0.5));
    }

    a.text-info {
      /* color: inherit !important; */
      text-decoration: none !important;
    }

    a.text-info:hover {
      /* color: inherit !important; */
      /* Prevent blue hover */
      text-decoration: underline !important;
      /* Optional: add underline on hover */
    }

    .form-control::placeholder {
      color: #fff;
    }

    .form-control,
    .form-control:focus,
    .form-control:-webkit-autofill {
      color: white !important;
      background-color: rgba(255, 255, 255, 0.2) !important;
      -webkit-text-fill-color: white !important;
    }

    input.form-control:-webkit-autofill,
    input.form-control:-webkit-autofill:focus,
    input.form-control:-webkit-autofill:hover,
    input.form-control:-webkit-autofill:active {
      -webkit-box-shadow: 0 0 0 100px rgba(255, 255, 255, 0.2) inset !important;
      box-shadow: 0 0 0 100px rgba(255, 255, 255, 0.2) inset !important;
      -webkit-text-fill-color: white !important;
      color: white !important;
      background-color: rgba(255, 255, 255, 0.2) !important;
      transition: background-color 5000s ease-in-out 0s !important;
    }

    .fa-eye {
      color: black;
    }
  </style>

</head>

<body>
  <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
  <div style="position:fixed;top:20px;right:20px;z-index:2000;max-width:400px;">
    <div id="register-message-box" class="alert alert-danger alert-dismissible fade show d-flex align-items-center justify-content-between" role="alert" style="color: rgb(155, 11, 11); padding: 0.75rem 1rem;">
      <div class="d-flex align-items-center flex-grow-1">
        <span><strong>Error:</strong> <%= errorMessage %></span>
      </div>
      <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close" style="padding:0;margin-left:1rem;"></button>
    </div>
  </div>
  <% } %>

  <% if (typeof message !== 'undefined' && message) { %>
    <div class="position-relative" style="z-index: 1055;">
      <div class="d-flex justify-content-end position-absolute w-100" style="top: 10px; right: 0; z-index: 1055;">
        <div id="register-success-box" class="alert alert-success alert-dismissible fade show mt-3" role="alert" style="color: white;align-items: center;">
           <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    </div>
  <% } %>

  <video autoplay loop muted class="video-bg">
    <source src="/images/1234.mp4" type="video/mp4">
  </video>
  <div class="overlay"></div>

  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light px-4 px-sm-5 d-flex flex-column align-items-center text-center">
              <!-- Logo -->
              <div class="brand-logo mb-3">
                <% if (bg_result && bg_result[0] && bg_result[0].nav_imgs) { %>
                  <img src="/images/profile-1743219091310.png" alt="Company Logo" class="mt-3">
                  <% } else { %>
                    <div class="logo-placeholder d-flex align-items-center justify-content-center"
                      style="width:150px;height:80px;background:rgba(255,255,255,0.2);border-radius:10px;">
                      <span class="text-white fw-bold">LOGO</span>
                    </div>
                    <% } %>
              </div>

              <!-- Headings -->
              <h4>Create Your Account</h4>
              <h6 class="font-weight-light mb-4">Join us in just a few simple steps</h6>

              <!-- Signup Form -->
              <form action="/register" method="post" class="pt-3 w-100" style="max-width: 400px;">
                <!-- Username -->
                <div class="form-group position-relative mb-3">

                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-person-fill text-white"></i>
                    </span>
                    <input type="text" class="form-control form-control-lg" id="exampleInputUsername1" name="Username"
                      placeholder="User Name" required autocomplete="username">
                  </div>
                </div>

                <!-- Email -->
                <div class="form-group position-relative mb-3">

                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-envelope-fill text-white"></i>
                    </span>
                    <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" name="Email"
                      placeholder="Email address" required autocomplete="Email">
                  </div>
                </div>

                <!-- Password -->
                <div class="form-group position-relative mb-3">

                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-lock-fill text-white"></i>
                    </span>
                    <input type="password" class="form-control form-control-lg pe-5" id="exampleInputPassword1"
                      name="password" placeholder="Password" required autocomplete="current-password"
                      style="z-index: 1;">
                    <button type="button"
                      class="btn  text-black btn-link position-absolute end-0 top-50 translate-middle-y me-2"
                      id="togglePasswordBtn" aria-label="Show password" style="z-index: 2;">
                      <i class="fas fa-eye-slash" id="togglePasswordIcon"></i>
                    </button>
                  </div>
                </div>

                <!-- CNIC -->
                <div class="form-group position-relative mb-3">
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-credit-card-2-front-fill text-white"></i>
                    </span>
                    <input type="text" class="form-control form-control-lg" id="exampleInputCnic1" name="cnic"
                      placeholder="CNIC (13 digits)" required autocomplete="off" maxlength="15">
                  </div>
                  <small id="cnicError" class="text-danger d-none">CNIC must be 13 digits (without dashes)</small>
                </div>

                <!-- Phone Number -->
                <div class="form-group position-relative mb-3">
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-telephone-fill text-white"></i>
                    </span>
                    <input type="tel" class="form-control form-control-lg" id="exampleInputPhone1" name="phone"
                      placeholder="PHONE (11 digits)" required autocomplete="off" maxlength="12">
                  </div>
                  <small id="phoneError" class="text-danger d-none">Phone number must be 11 digits (without dashes or
                    country code)</small>
                </div>


                <!-- Submit Button -->
                <div class="d-grid mb-3">
                  <button type="submit" class="btn btn-primary btn-lg py-3 fw-medium"
                    style="border-radius: 23px; background-color: #4B49AC;">
                    CREATE ACCOUNT
                  </button>
                </div>

                <!-- Login Link -->
                <div class="text-center mt-4 font-weight-light">
                  Already have an account? <a href="/" class="text-info"
                    style="color: inherit; text-decoration: none;">Sign In</a>
                </div>
              </form>

              <!-- Popup Message -->
              <div id="account-popup"
                class="alert alert-success text-center position-fixed top-0 start-50 translate-middle-x mt-5"
                style="display:none; z-index:2000; min-width:300px;">
                Please check your email for confirmation!
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Only auto-hide success, NOT error
    window.addEventListener('DOMContentLoaded', () => {
      const successBox = document.getElementById('register-success-box');
      if (successBox) {
        setTimeout(() => {
          successBox.classList.remove('show');
          successBox.classList.add('fade');
          setTimeout(() => successBox.style.display = "none", 500);
        }, 4000);
      }
      // Do NOT auto-hide error messages!
    });
  </script>

  <script>
    const toggleButton = document.getElementById('togglePasswordBtn');
    const toggleIcon = document.getElementById('togglePasswordIcon');
    const passwordInput = document.getElementById('exampleInputPassword1');

    toggleButton.addEventListener('click', function () {
      const isText = passwordInput.type === 'text';
      passwordInput.type = isText ? 'password' : 'text';

      toggleIcon.classList.toggle('fa-eye', isText);
      toggleIcon.classList.toggle('fa-eye-slash', !isText);
    });

    const form = document.querySelector('form[action="/register"]');
    const popup = document.getElementById('account-popup');
    
    // CNIC validation (13 digits)
    const cnicInput = document.getElementById('exampleInputCnic1');
    const cnicError = document.getElementById('cnicError');

    cnicInput.addEventListener('input', function () {
      // Remove any non-digit characters
      let cnicValue = this.value.replace(/\D/g, '');

      // Format with dashes if user is typing
      if (cnicValue.length > 5) {
        cnicValue = cnicValue.substring(0, 5) + '-' + cnicValue.substring(5);
      }
      if (cnicValue.length > 13) {
        cnicValue = cnicValue.substring(0, 13) + '-' + cnicValue.substring(13);
      }

      this.value = cnicValue;

      // Validate length (13 digits without counting dashes)
      const digitsOnly = cnicValue.replace(/\D/g, '');
      if (digitsOnly.length !== 13 && digitsOnly.length > 0) {
        cnicError.classList.remove('d-none');
      } else {
        cnicError.classList.add('d-none');
      }
    });

    // Phone number validation (11 digits)
    const phoneInput = document.getElementById('exampleInputPhone1');
    const phoneError = document.getElementById('phoneError');

    phoneInput.addEventListener('input', function () {
      // Remove any non-digit characters
      let phoneValue = this.value.replace(/\D/g, '');

      // Format with dashes if user is typing
      if (phoneValue.length > 4) {
        phoneValue = phoneValue.substring(0, 4) + '-' + phoneValue.substring(4);
      }

      this.value = phoneValue;

      // Validate length (11 digits without counting dashes)
      const digitsOnly = phoneValue.replace(/\D/g, '');
      if (digitsOnly.length !== 11 && digitsOnly.length > 0) {
        phoneError.classList.remove('d-none');
      } else {
        phoneError.classList.add('d-none');
      }
    });

    // Form submission validation
    document.querySelector('form').addEventListener('submit', function (e) {
      const cnicDigits = cnicInput.value.replace(/\D/g, '');
      const phoneDigits = phoneInput.value.replace(/\D/g, '');

      if (cnicDigits.length !== 13) {
        e.preventDefault();
        cnicError.classList.remove('d-none');
        cnicInput.focus();
        return;
      }

      if (phoneDigits.length !== 11) {
        e.preventDefault();
        phoneError.classList.remove('d-none');
        phoneInput.focus();
        return;
      }
    });
  </script>

