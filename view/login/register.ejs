<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Sign Up</title>
  <link rel="stylesheet" href="../../vendors/feather/feather.css">
  <link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
  <link rel="stylesheet" href="../../css/vertical-layout-light/style.css">
  <link rel="shortcut icon" href="../../images/favicon.png" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

  <style>
    /* Video Background Styling */
    .video-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
    }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 0;
    }

    .content-wrapper {
      position: relative;
      z-index: 1;
    }

    /* Modern professional form styling */
    .auth-form-light {
      background: rgba(40, 44, 52, 0.85) !important;
      backdrop-filter: blur(15px) saturate(120%);
      -webkit-backdrop-filter: blur(15px) saturate(120%);
      border-radius: 24px;
      padding: 40px 45px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 
        0 20px 40px rgba(0, 0, 0, 0.3),
        0 0 0 1px rgba(255, 255, 255, 0.05) inset;
      position: relative;
      overflow: hidden;
      max-width: 500px;
      margin: 0 auto;
      transition: all 0.3s ease;
    }

    .auth-form-light::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, #4F46E5, #7C3AED, #4F46E5);
      opacity: 0.8;
    }

    .auth-form-light:hover {
      transform: translateY(-3px);
      box-shadow: 
        0 25px 50px rgba(0, 0, 0, 0.4),
        0 0 0 1px rgba(255, 255, 255, 0.1) inset;
      border-color: rgba(255, 255, 255, 0.2);
    }

    /* Text and icon visibility */
    .auth-form-light,
    .auth-form-light h2,
    .auth-form-light p,
    .auth-form-light a {
      color: white !important;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    /* Modern input field styling */
    .form-group {
      margin-bottom: 20px;
    }

    .form-control {
      background: rgba(255, 255, 255, 0.95) !important;
      border: 1px solid rgba(255, 255, 255, 0.3) !important;
      border-radius: 12px !important;
      padding: 14px 18px !important;
      font-size: 15px !important;
      font-weight: 500 !important;
      color: #1a1a1a !important;
      transition: all 0.3s ease !important;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
    }

    .form-control:focus {
      background: rgba(255, 255, 255, 1) !important;
      border-color: #4F46E5 !important;
      box-shadow: 
        0 0 0 3px rgba(79, 70, 229, 0.15),
        0 4px 12px rgba(0, 0, 0, 0.15) !important;
      outline: none !important;
      color: #000000 !important;
    }

    .form-control::placeholder {
      color: rgba(100, 100, 100, 0.8) !important;
      font-weight: 400 !important;
    }

    /* Modern input group styling */
    .input-group {
      position: relative;
      border-radius: 12px;
      overflow: hidden;
      background: rgba(255, 255, 255, 0.95);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .input-group:focus-within {
      box-shadow: 
        0 0 0 3px rgba(79, 70, 229, 0.15),
        0 4px 12px rgba(0, 0, 0, 0.15);
      border-color: #4F46E5;
    }

    .input-group-text {
      background: rgba(79, 70, 229, 0.08) !important;
      border: none !important;
      border-radius: 12px 0 0 12px !important;
      padding: 14px 16px !important;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .input-group-text i {
      color: #4F46E5 !important;
      font-size: 16px !important;
      font-weight: 600 !important;
    }

    .input-group .form-control {
      border: none !important;
      border-radius: 0 12px 12px 0 !important;
      background: transparent !important;
      box-shadow: none !important;
    }

    .input-group .form-control:focus {
      background: transparent !important;
      box-shadow: none !important;
      border: none !important;
    }

    /* Modern button styling */
    .btn-primary {
      background: linear-gradient(135deg, #4F46E5, #7C3AED) !important;
      border: none !important;
      border-radius: 12px !important;
      padding: 14px 28px !important;
      font-size: 15px !important;
      font-weight: 600 !important;
      letter-spacing: 0.3px !important;
      text-transform: uppercase !important;
      color: white !important;
      box-shadow: 0 4px 15px rgba(79, 70, 229, 0.4) !important;
      transition: all 0.3s ease !important;
      position: relative;
      overflow: hidden;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #3730A3, #6D28D9) !important;
      transform: translateY(-2px) !important;
      box-shadow: 0 8px 25px rgba(79, 70, 229, 0.5) !important;
      color: white !important;
    }

    .btn-primary:active {
      transform: translateY(0) !important;
      box-shadow: 0 2px 10px rgba(79, 70, 229, 0.4) !important;
    }

    /* Modern typography */
    .auth-form-light h4 {
      font-size: 1.8rem !important;
      font-weight: 700 !important;
      margin-bottom: 8px !important;
      color: #ffffff !important;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3) !important;
    }

    .auth-form-light h6 {
      font-size: 0.95rem !important;
      font-weight: 400 !important;
      color: rgba(255, 255, 255, 0.85) !important;
      margin-bottom: 30px !important;
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2) !important;
    }

    /* Password toggle button */
    .fa-eye-slash,
    .fa-eye {
      color: #4F46E5 !important;
      transition: color 0.2s ease !important;
      font-size: 16px !important;
    }

    .btn-link:hover .fa-eye-slash,
    .btn-link:hover .fa-eye {
      color: #3730A3 !important;
    }

    .btn-link {
      border: none !important;
      padding: 0 !important;
      background: none !important;
    }

    /* Links styling */
    .text-info {
      color: rgba(255, 255, 255, 0.9) !important;
      transition: all 0.2s ease !important;
      text-decoration: none !important;
      font-weight: 500 !important;
    }

    .text-info:hover {
      color: #ffffff !important;
      text-shadow: 0 0 8px rgba(255, 255, 255, 0.6) !important;
      text-decoration: underline !important;
    }

    /* Validation error styling */
    .text-danger {
      color: #ff4757 !important;
      font-size: 0.85rem !important;
      font-weight: 500 !important;
      margin-top: 6px !important;
      background: rgba(255, 71, 87, 0.15);
      padding: 6px 10px;
      border-radius: 8px;
      border-left: 3px solid #ff4757;
      backdrop-filter: blur(10px);
    }

    /* White text sections */
    .font-weight-light {
      color: rgba(255, 255, 255, 0.85) !important;
      font-weight: 400 !important;
    }

    /* Autofill styling */
    input.form-control:-webkit-autofill,
    input.form-control:-webkit-autofill:focus,
    input.form-control:-webkit-autofill:hover,
    input.form-control:-webkit-autofill:active {
      -webkit-box-shadow: 0 0 0 100px rgba(255, 255, 255, 0.95) inset !important;
      box-shadow: 0 0 0 100px rgba(255, 255, 255, 0.95) inset !important;
      -webkit-text-fill-color: #2d3748 !important;
      color: #2d3748 !important;
      transition: background-color 5000s ease-in-out 0s !important;
    }

    /* Logo styling */
    .brand-logo img {
      max-width: 200px;
      filter: drop-shadow(0 0 5px rgba(0, 0, 0, 0.5));
    }

    /* Alert styling */
    .alert .btn-close {
      padding: 0 !important;
      margin-left: 1rem !important;
      float: none;
      position: static;
      display: flex;
      align-items: center;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .auth-form-light {
        padding: 32px 24px !important;
        margin: 16px !important;
        border-radius: 24px !important;
      }

      .auth-form-light h4 {
        font-size: 1.75rem !important;
      }

      .auth-form-light h6 {
        font-size: 0.95rem !important;
      }

      .form-control {
        padding: 14px 16px !important;
        font-size: 16px !important;
      }

      .input-group-text {
        padding: 14px 16px !important;
      }

      .btn-primary {
        padding: 14px 24px !important;
        font-size: 15px !important;
      }

      .brand-logo img {
        max-width: 160px !important;
      }
    }

    @media (max-width: 480px) {
      .auth-form-light {
        padding: 24px 20px !important;
        margin: 12px !important;
        border-radius: 20px !important;
      }

      .auth-form-light h4 {
        font-size: 1.5rem !important;
      }

      .auth-form-light h6 {
        font-size: 0.9rem !important;
      }

      .form-control {
        padding: 12px 14px !important;
        font-size: 16px !important;
      }

      .input-group-text {
        padding: 12px 14px !important;
      }

      .btn-primary {
        padding: 12px 20px !important;
        font-size: 14px !important;
      }

      .brand-logo img {
        max-width: 140px !important;
      }

      .col-lg-4 {
        padding: 0 10px !important;
      }

      .text-danger {
        font-size: 0.8rem !important;
        padding: 3px 6px !important;
      }
    }
  </style>

</head>

<body>
  <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
  <div style="position:fixed;top:20px;right:20px;z-index:2000;max-width:400px;">
    <div id="register-message-box" class="alert alert-danger alert-dismissible fade show d-flex align-items-center justify-content-between" role="alert" style="color: rgb(155, 11, 11); padding: 0.75rem 1rem;">
      <div class="d-flex align-items-center flex-grow-1">
        <span><strong>Error:</strong> <%= errorMessage %></span>
      </div>
      <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close" style="padding:0;margin-left:1rem;"></button>
    </div>
  </div>
  <% } %>

  <% if (typeof message !== 'undefined' && message) { %>
    <div class="position-relative" style="z-index: 1055;">
      <div class="d-flex justify-content-end position-absolute w-100" style="top: 10px; right: 0; z-index: 1055;">
        <div id="register-success-box" class="alert alert-success alert-dismissible fade show mt-3" role="alert" style="color: white;align-items: center;">
           <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    </div>
  <% } %>

  <video autoplay loop muted class="video-bg">
    <source src="/images/1234.mp4" type="video/mp4">
  </video>
  <div class="overlay"></div>

  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light px-4 px-sm-5 d-flex flex-column align-items-center text-center">
              <!-- Logo -->
              <div class="brand-logo mb-4">
                <img src="/images/ClickTake.png" alt="Company Logo" class="mt-3" style="max-width: 200px; filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));">
              </div>

              <!-- Headings -->
              <h4>Create Your Account</h4>
              <h6 class="font-weight-light mb-4">Join us in just a few simple steps</h6>

              <!-- Signup Form -->
              <form action="/register" method="post" class="pt-3 w-100" style="max-width: 400px;">
                <!-- Username -->
                <div class="form-group position-relative mb-3">

                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-person-fill text-white"></i>
                    </span>
                    <input type="text" class="form-control form-control-lg" id="exampleInputUsername1" name="Username"
                      placeholder="User Name" required autocomplete="username">
                  </div>
                </div>

                <!-- Email -->
                <div class="form-group position-relative mb-3">

                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-envelope-fill text-white"></i>
                    </span>
                    <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" name="Email"
                      placeholder="Email address" required autocomplete="Email">
                  </div>
                </div>

                <!-- Password -->
                <div class="form-group position-relative mb-3">

                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-lock-fill text-white"></i>
                    </span>
                    <input type="password" class="form-control form-control-lg pe-5" id="exampleInputPassword1"
                      name="password" placeholder="Password" required autocomplete="current-password"
                      style="z-index: 1;">
                    <button type="button"
                      class="btn  text-black btn-link position-absolute end-0 top-50 translate-middle-y me-2"
                      id="togglePasswordBtn" aria-label="Show password" style="z-index: 2;">
                      <i class="fas fa-eye-slash" id="togglePasswordIcon"></i>
                    </button>
                  </div>
                </div>

                <!-- CNIC -->
                <div class="form-group position-relative mb-3">
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-credit-card-2-front-fill text-white"></i>
                    </span>
                    <input type="text" class="form-control form-control-lg" id="exampleInputCnic1" name="cnic"
                      placeholder="CNIC (13 digits)" required autocomplete="off" maxlength="15">
                  </div>
                  <small id="cnicError" class="text-danger d-none">CNIC must be 13 digits (without dashes)</small>
                </div>

                <!-- Phone Number -->
                <div class="form-group position-relative mb-3">
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="bi bi-telephone-fill text-white"></i>
                    </span>
                    <input type="tel" class="form-control form-control-lg" id="exampleInputPhone1" name="phone"
                      placeholder="PHONE (11 digits)" required autocomplete="off" maxlength="12">
                  </div>
                  <small id="phoneError" class="text-danger d-none">Phone number must be 11 digits (without dashes or
                    country code)</small>
                </div>


                <!-- Submit Button -->
                <div class="d-grid mb-3">
                  <button type="submit" class="btn btn-primary btn-lg py-3 fw-medium"
                    style="border-radius: 23px; background-color: #4B49AC;">
                    CREATE ACCOUNT
                  </button>
                </div>

                <!-- Login Link -->
                <div class="text-center mt-4 font-weight-light">
                  Already have an account? <a href="/" class="text-info"
                    style="color: inherit; text-decoration: none;">Sign In</a>
                </div>
              </form>

              <!-- Popup Message -->
              <div id="account-popup"
                class="alert alert-success text-center position-fixed top-0 start-50 translate-middle-x mt-5"
                style="display:none; z-index:2000; min-width:300px;">
                Please check your email for confirmation!
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Only auto-hide success, NOT error
    window.addEventListener('DOMContentLoaded', () => {
      const successBox = document.getElementById('register-success-box');
      if (successBox) {
        setTimeout(() => {
          successBox.classList.remove('show');
          successBox.classList.add('fade');
          setTimeout(() => successBox.style.display = "none", 500);
        }, 4000);
      }
      // Do NOT auto-hide error messages!
    });
  </script>

  <script>
    const toggleButton = document.getElementById('togglePasswordBtn');
    const toggleIcon = document.getElementById('togglePasswordIcon');
    const passwordInput = document.getElementById('exampleInputPassword1');

    toggleButton.addEventListener('click', function () {
      const isText = passwordInput.type === 'text';
      passwordInput.type = isText ? 'password' : 'text';

      toggleIcon.classList.toggle('fa-eye', isText);
      toggleIcon.classList.toggle('fa-eye-slash', !isText);
    });

    const form = document.querySelector('form[action="/register"]');
    const popup = document.getElementById('account-popup');
    
    // CNIC validation (13 digits)
    const cnicInput = document.getElementById('exampleInputCnic1');
    const cnicError = document.getElementById('cnicError');

    cnicInput.addEventListener('input', function () {
      // Remove any non-digit characters
      let cnicValue = this.value.replace(/\D/g, '');

      // Format with dashes if user is typing
      if (cnicValue.length > 5) {
        cnicValue = cnicValue.substring(0, 5) + '-' + cnicValue.substring(5);
      }
      if (cnicValue.length > 13) {
        cnicValue = cnicValue.substring(0, 13) + '-' + cnicValue.substring(13);
      }

      this.value = cnicValue;

      // Validate length (13 digits without counting dashes)
      const digitsOnly = cnicValue.replace(/\D/g, '');
      if (digitsOnly.length !== 13 && digitsOnly.length > 0) {
        cnicError.classList.remove('d-none');
      } else {
        cnicError.classList.add('d-none');
      }
    });

    // Phone number validation (11 digits)
    const phoneInput = document.getElementById('exampleInputPhone1');
    const phoneError = document.getElementById('phoneError');

    phoneInput.addEventListener('input', function () {
      // Remove any non-digit characters
      let phoneValue = this.value.replace(/\D/g, '');

      // Format with dashes if user is typing
      if (phoneValue.length > 4) {
        phoneValue = phoneValue.substring(0, 4) + '-' + phoneValue.substring(4);
      }

      this.value = phoneValue;

      // Validate length (11 digits without counting dashes)
      const digitsOnly = phoneValue.replace(/\D/g, '');
      if (digitsOnly.length !== 11 && digitsOnly.length > 0) {
        phoneError.classList.remove('d-none');
      } else {
        phoneError.classList.add('d-none');
      }
    });

    // Form submission validation
    document.querySelector('form').addEventListener('submit', function (e) {
      const cnicDigits = cnicInput.value.replace(/\D/g, '');
      const phoneDigits = phoneInput.value.replace(/\D/g, '');

      if (cnicDigits.length !== 13) {
        e.preventDefault();
        cnicError.classList.remove('d-none');
        cnicInput.focus();
        return;
      }

      if (phoneDigits.length !== 11) {
        e.preventDefault();
        phoneError.classList.remove('d-none');
        phoneInput.focus();
        return;
      }
    });
  </script>

