        let current = start;
        let step = 0;
        
        const timer = setInterval(() => {
          if (step < steps) {
            current += increment;
            if (elementId === 'signalValue') {
              element.textContent = prefix + current.toFixed(1) + suffix;
            } else {
              element.textContent = prefix + Math.floor(current) + suffix;
