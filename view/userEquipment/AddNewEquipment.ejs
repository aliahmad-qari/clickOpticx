    <!-- plugins:js -->

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const typeSelect = document.getElementById('type');
            const equipmentName = document.getElementById('equipmentName');
            const quantityInput = document.getElementById('quantity');
            const imageInput = document.getElementById('image');
            const form = document.getElementById('addEquipmentForm');

            form.addEventListener('submit', function (e) {
                let hasError = false;
                let errorMessage = '';

                if (!typeSelect.value) {
                    typeSelect.parentElement.classList.add('input-error');
                    errorMessage = 'Please select an equipment type';
                    hasError = true;
                } else {
                    typeSelect.parentElement.classList.remove('input-error');
                }

                const nameValue = equipmentName.value.trim();
                if (!nameValue) {
                    equipmentName.parentElement.classList.add('input-error');
                    errorMessage = errorMessage || 'Please enter a valid equipment name';
                    hasError = true;
                } else {
                    equipmentName.parentElement.classList.remove('input-error');
                }

                const quantityValue = parseInt(quantityInput.value);
                if (!quantityInput.value || isNaN(quantityValue) || quantityValue <= 0) {
                    quantityInput.parentElement.classList.add('input-error');
                    errorMessage = errorMessage || 'Please enter a valid quantity (minimum 1)';
                    hasError = true;
                } else {
                    quantityInput.parentElement.classList.remove('input-error');
                }

                if (imageInput.files.length > 0) {
                    const file = imageInput.files[0];
                    if (!file.type.startsWith('image/')) {
                        imageInput.parentElement.classList.add('input-error');
                        errorMessage = errorMessage || 'Please upload a valid image';
                        hasError = true;
                    } else if (file.size > 5 * 1024 * 1024) {
                        imageInput.parentElement.classList.add('input-error');
                        errorMessage = errorMessage || 'Image size must be less than 5MB';
                        hasError = true;
                    } else {
                        imageInput.parentElement.classList.remove('input-error');
                    }
                } else {
                    imageInput.parentElement.classList.remove('input-error');
                }

                if (hasError) {
                    alert(errorMessage);
                    e.preventDefault();
                }
            });

            const inputs = document.querySelectorAll('.form-control, .form-select, .form-file');
            inputs.forEach(input => {
                input.addEventListener('input', function () {
                    if (this.type === 'file') {
                        if (this.files.length > 0) {
                            this.parentElement.classList.remove('input-error');
                        }
                    } else if (this.value && (this.type !== 'number' || this.value > 0) && (this.type !== 'text' || this.value.trim())) {
                        this.parentElement.classList.remove('input-error');
                    }
                });
            });
        });
    </script>

