            font-weight: 700;
            letter-spacing: -0.025em;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
        }

        .form-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.15), transparent);
            animation: shine 3s infinite;
        }

        .form-header i {
            font-size: 28px;
            margin-right: 12px;
            vertical-align: middle;
        }

        @keyframes shine {
            0% {
                left: -100%;
            }

            100% {
                left: 100%;
            }
        }

        .form-group {
            position: relative;
            margin-bottom: 32px;
        }

        .form-control,
        .form-select,
        .form-file {
            width: 100%;
            border: 2px solid var(--gray);
            border-radius: var(--border-radius);
            background: var(--gray-light);
            padding: 16px 20px;
            padding-right: 50px;
            font-size: 16px;
            font-weight: 500;
            color: var(--dark);
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: var(--shadow-sm);
        }

        .form-control:focus,
        .form-select:focus,
        .form-file:focus {
            border-color: var(--primary);
            background: white;
            outline: none;
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            transform: translateY(-2px);
        }

        .form-control:hover:not(:focus),
        .form-select:hover:not(:focus),
        .form-file:hover:not(:focus) {
            border-color: var(--gray-dark);
            transform: translateY(-1px);
        }

        .form-label {
            position: absolute;
            top: 16px;
            left: 20px;
            font-weight: 600;
            color: var(--gray-dark);
            pointer-events: none;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            background: var(--gray-light);
            padding: 0 8px;
            border-radius: 6px;
        }

        .form-control:focus~.form-label,
        .form-control:not(:placeholder-shown)~.form-label,
        .form-select:focus~.form-label,
        .form-select:not([value=""])~.form-label,
        .form-file:focus~.form-label,
        .form-file:valid~.form-label {
            top: -12px;
            left: 16px;
            font-size: 14px;
            color: var(--primary);
            background: white;
            font-weight: 700;
        }

        .form-control:focus~.form-label::after,
        .form-control:not(:placeholder-shown)~.form-label::after,
        .form-select:focus~.form-label::after,
        .form-select:not([value=""])~.form-label::after,
