                        <!-- aaaaaaaaaaaaaaaaaaaaaaa -->
                        <div class="main-panel">
                            <div class="content-wrapper">
                                <div class="form-card">
                                    <div class="form-header">
                                        <i class="fas fa-plus-circle me-2"></i> Add New Equipment to Stock
                                    </div>
                                    <form action="/AddNewEquipment" method="POST" id="addEquipmentForm"
                                        enctype="multipart/form-data">
                                        <div class="form-group mb-3">
                                            <select name="type" id="type" class="form-select" required>
                                                <option value="" disabled selected>Select Type</option>
                                                <option value="fibre">Fibre</option>
                                                <option value="wireless">Wireless</option>
                                            </select>
                                            <label for="type" class="form-label">Equipment Type</label>
                                            <i class="fas fa-list form-icon"></i>
                                            <div class="error-message">Please select an equipment type</div>
                                        </div>
                                        <div class="form-group mb-3">
                                            <input type="text" name="name" id="equipmentName" class="form-control"
                                                required placeholder=" ">
                                            <label for="equipmentName" class="form-label">Equipment Name</label>
                                            <i class="fas fa-pen form-icon"></i>
                                            <div class="error-message">Please enter a valid equipment name</div>
                                        </div>
                                        <div class="form-group mb-3">
                                            <input type="number" name="quantity" id="quantity" class="form-control"
                                                min="1" required placeholder=" ">
                                            <label for="quantity" class="form-label">Quantity</label>
                                            <i class="fas fa-boxes form-icon"></i>
                                            <div class="error-message">Please enter a valid quantity (minimum 1)</div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <input type="file" name="image" id="image" class="form-file"
                                                accept="image/*">
                                            <label for="image" class="form-label">Equipment Image (optional)</label>
                                            <i class="fas fa-image form-icon"></i>
                                            <div class="error-message">Please upload a valid image</div>
                                        </div>
                                        <div class="mt-4">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-plus-circle me-2"></i> Add to Stock
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
            </div>
            <!-- aaaaaaaaaaaaaaaaaaaaaaa -->
    </div>
    <!-- plugins:js -->

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const typeSelect = document.getElementById('type');
            const equipmentName = document.getElementById('equipmentName');
            const quantityInput = document.getElementById('quantity');
            const imageInput = document.getElementById('image');
            const form = document.getElementById('addEquipmentForm');

            form.addEventListener('submit', function (e) {
                let hasError = false;
                let errorMessage = '';

                if (!typeSelect.value) {
                    typeSelect.parentElement.classList.add('input-error');
                    errorMessage = 'Please select an equipment type';
                    hasError = true;
                } else {
                    typeSelect.parentElement.classList.remove('input-error');
                }

                const nameValue = equipmentName.value.trim();
                if (!nameValue) {
                    equipmentName.parentElement.classList.add('input-error');
                    errorMessage = errorMessage || 'Please enter a valid equipment name';
                    hasError = true;
                } else {
                    equipmentName.parentElement.classList.remove('input-error');
                }

                const quantityValue = parseInt(quantityInput.value);
                if (!quantityInput.value || isNaN(quantityValue) || quantityValue <= 0) {
                    quantityInput.parentElement.classList.add('input-error');
                    errorMessage = errorMessage || 'Please enter a valid quantity (minimum 1)';
                    hasError = true;
                } else {
                    quantityInput.parentElement.classList.remove('input-error');
                }

                if (imageInput.files.length > 0) {
                    const file = imageInput.files[0];
                    if (!file.type.startsWith('image/')) {
                        imageInput.parentElement.classList.add('input-error');
                        errorMessage = errorMessage || 'Please upload a valid image';
                        hasError = true;
                    } else if (file.size > 5 * 1024 * 1024) {
                        imageInput.parentElement.classList.add('input-error');
                        errorMessage = errorMessage || 'Image size must be less than 5MB';
                        hasError = true;
                    } else {
                        imageInput.parentElement.classList.remove('input-error');
                    }
                } else {
                    imageInput.parentElement.classList.remove('input-error');
                }

                if (hasError) {
                    alert(errorMessage);
                    e.preventDefault();
                }
            });

            const inputs = document.querySelectorAll('.form-control, .form-select, .form-file');
            inputs.forEach(input => {
                input.addEventListener('input', function () {
                    if (this.type === 'file') {
                        if (this.files.length > 0) {
                            this.parentElement.classList.remove('input-error');
                        }
                    } else if (this.value && (this.type !== 'number' || this.value > 0) && (this.type !== 'text' || this.value.trim())) {
                        this.parentElement.classList.remove('input-error');
                    }
                });
            });
        });
    </script>

