           <!-- Vendor Scripts -->
           <script src="/vendors/js/vendor.bundle.base.js"></script>
           <script src="/js/off-canvas.js"></script>
           <script src="/js/hoverable-collapse.js"></script>
           <script src="/js/template.js"></script>
           <script src="/js/settings.js"></script>
           <!-- Bootstrap and jQuery -->
           <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
           <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
           <!-- Page Scripts -->
           <script>
               $(document).ready(function () {
                   // Highlight active menu item
                   $('a[href="/EquipmentStatus"]').parent().addClass('active');

                   // Status filter button functionality
                   $('.status-btn').click(function () {
                       $('.status-btn').removeClass('active');
                       $(this).addClass('active');
                       $('.equipment-section').hide();

                       var btnId = $(this).attr('id');
                       if (btnId === 'active-btn') {
                           $('#active-equipment').show();
                           $('#active-equipment .equipment-card').each(function (index) {
                               $(this).css('animation', 'fadeInUp 0.5s ease forwards ' + (index * 0.1 + 0.1) + 's');
                           });
                       } else if (btnId === 'inactive-btn') {
                           $('#inactive-equipment').show();
                           $('#inactive-equipment .equipment-card').each(function (index) {
                               $(this).css('animation', 'fadeInUp 0.5s ease forwards ' + (index * 0.1 + 0.1) + 's');
                           });
                       } else if (btnId === 'faulty-btn') {
                           $('#faulty-equipment').show();
                       }
                   });

                   // Real-time search functionality for Active section
                   let activeSearchTimeout;
                   $('#active-search').on('input', function () {
                       clearTimeout(activeSearchTimeout);
                       const searchInput = this;
                       
                       activeSearchTimeout = setTimeout(() => {
                           var searchTerm = $(searchInput).val().toLowerCase().trim();
                           var visibleCount = 0;
                           
                           $('#active-equipment .equipment-card').each(function () {
                               var deviceName = $(this).find('.card-header').text().toLowerCase();
                               var assignedTo = $(this).find('.card-body p').first().text().toLowerCase();
                               
                               var matchesSearch = searchTerm === '' || 
                                   deviceName.includes(searchTerm) ||
                                   assignedTo.includes(searchTerm);
                               
                               if (matchesSearch) {
                                   $(this).parent().show();
                                   visibleCount++;
                               } else {
                                   $(this).parent().hide();
                               }
                           });
                           
                           // Handle empty state for active section
                           var emptyState = $('#active-equipment .empty-state');
                           if (visibleCount === 0 && searchTerm !== '') {
                               if (emptyState.length === 0) {
                                   $('#active-equipment .row').append(`
                                       <div class="col-12 search-empty-state">
                                           <div class="empty-state">
                                               <div class="empty-icon"><i class="fas fa-search"></i></div>
                                               <h5 class="empty-title">No Equipment Found</h5>
                                               <p class="empty-text">No equipment matches your search criteria.</p>
                                           </div>
                                       </div>
                                   `);
                               }
                           } else {
                               $('.search-empty-state').remove();
                           }
                       }, 200); // 200ms debounce for faster response
                   });

                   // Real-time search functionality for Inactive section
                   let inactiveSearchTimeout;
                   $('#inactive-search').on('input', function () {
                       clearTimeout(inactiveSearchTimeout);
                       const searchInput = this;
                       
                       inactiveSearchTimeout = setTimeout(() => {
                           var searchTerm = $(searchInput).val().toLowerCase().trim();
                           var visibleCount = 0;
                           
                           $('#inactive-equipment .equipment-card').each(function () {
                               var deviceName = $(this).find('.card-header').text().toLowerCase();
                               var quantity = $(this).find('.card-body p').first().text().toLowerCase();
                               
                               var matchesSearch = searchTerm === '' || 
                                   deviceName.includes(searchTerm) ||
                                   quantity.includes(searchTerm);
                               
                               if (matchesSearch) {
                                   $(this).parent().show();
                                   visibleCount++;
                               } else {
                                   $(this).parent().hide();
                               }
                           });
                           
                           // Handle empty state for inactive section
                           if (visibleCount === 0 && searchTerm !== '') {
                               var emptyState = $('#inactive-equipment .search-empty-state');
                               if (emptyState.length === 0) {
                                   $('#inactive-equipment .row').append(`
                                       <div class="col-12 search-empty-state">
                                           <div class="empty-state">
                                               <div class="empty-icon"><i class="fas fa-search"></i></div>
                                               <h5 class="empty-title">No Equipment Found</h5>
                                               <p class="empty-text">No equipment matches your search criteria.</p>
                                           </div>
                                       </div>
                                   `);
                               }
                           } else {
                               $('.search-empty-state').remove();
                           }
                       }, 200); // 200ms debounce for faster response
                   });

                   // Clear search functionality for both sections
                   $('#active-search, #inactive-search').on('keydown', function(e) {
                       if (e.key === 'Escape') {
                           $(this).val('');
                           $(this).trigger('input');
                           $(this).focus();
                       }
                   });

                   // Repairable button handler
                   $('.repair-btn').click(function () {
                       const id = $(this).data('id');
                       const equipment = $(this).data('equipment');
                       const $statusCell = $(this).closest('tr').find('td:nth-child(5)');

                       $.ajax({
                           url: `/repair-equipment/${id}`,
                           method: 'POST',
                           data: { equipment },
                           success: function (response) {
                               if (response.success) {
                                   $statusCell.text('Repaired');
                                   const modal = new bootstrap.Modal(document.getElementById('repairSuccessModal'));
                                   modal.show();
                                   setTimeout(() => modal.hide(), 2000); // Auto-close after 2 seconds
                               } else {
                                   alert('Error: ' + response.message);
                               }
                           },
                           error: function () {
                               alert('Error processing repair request');
                           }
                       });
                   });

                   // Permanent Damage button handler
                   $('.permanent-damage-btn').click(function () {
                       const id = $(this).data('id');
                       const equipment = $(this).data('equipment');
                       const teamName = $(this).data('team');
                       const $statusCell = $(this).closest('tr').find('td:nth-child(5)');

                       $.ajax({
                           url: `/mark-permanent-damage/${id}`,
                           method: 'POST',
                           data: { equipment, teamName },
                           success: function (response) {
                               if (response.success) {
                                   $statusCell.text('Permanent Damage');
                                   const modal = new bootstrap.Modal(document.getElementById('recoveryModal'));
                                   modal.show();
                                   setTimeout(() => modal.hide(), 2000); // Auto-close after 2 seconds
                               } else {
                                   alert('Error: ' + response.message);
                               }
                           },
                           error: function () {
                               alert('Error processing permanent damage request');
                           }
                       });
                   });
                   $('#active-equipment').show();
               });
           </script>
</body>

