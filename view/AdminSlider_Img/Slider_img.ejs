        <script>
          function deleteSlider(id) {
            if (confirm('Are you sure you want to delete this slider?')) {
              fetch(`/Slider_img/${id}`, {
                method: 'DELETE'
              })
                .then(response => {
                  if (response.ok) {
                    location.reload();
                  } else {
                    alert('Error deleting slider');
                  }
                })
                .catch(error => {
                  console.error('Error:', error);
                  alert('Error deleting slider');
                });
            }
