<style>
  :root {
    --primary-color: #4F46E5;
    --primary-dark: #3730A3;
    --secondary-color: #06B6D4;
    --success-color: #10B981;
    --warning-color: #F59E0B;
    --danger-color: #EF4444;
    --dark-color: #1F2937;
    --light-color: #F8FAFC;
    --gray-color: #9CA3AF;
    --border-color: #E5E7EB;
    --white: #FFFFFF;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: var(--bg-secondary, #F8FAFC);
    min-height: 100vh;
    color: var(--text-primary, #1F2937);
    line-height: 1.6;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  /* Dark theme support */
  [data-theme="dark"] {
    --bg-primary: #0F172A;
    --bg-secondary: #1E293B;
    --bg-tertiary: #334155;
    --text-primary: #F8FAFC;
    --text-secondary: #CBD5E1;
    --border-color: #334155;
    --white: #1E293B;
    --dark-color: #F8FAFC;
    --gray-color: #94A3B8;
  }

  [data-theme="dark"] body {
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  .container-fluid.page-body-wrapper {
    display: flex;
    flex-direction: row;
    min-height: 100vh;
  }

  .main-panel {
    flex-grow: 1;
    padding: 2rem;
    margin-left: 110px;
    transition: margin-left 0.3s ease;
  }

  /* Modal Backdrop Effect */
  .modal-backdrop {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 120px);
    padding: 2rem 0;
    position: relative;
  }

  .modal-backdrop::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at center, rgba(79, 70, 229, 0.03) 0%, rgba(79, 70, 229, 0.01) 50%, transparent 100%);
    pointer-events: none;
  }

  @media (max-width: 991px) {
    .main-panel {
      margin-left: 0;
      padding: 1rem;
    }
  }

  /* Professional Modal-Style Form Card */
  .form-card {
    background: var(--white, #FFFFFF);
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(0, 0, 0, 0.05);
    border: 1px solid var(--border-color, #E5E7EB);
    max-width: 800px;
    width: 100%;
    position: relative;
    overflow: hidden;
    animation: modalSlideIn 0.4s ease-out;
    transition: all 0.3s ease;
  }

  .form-card:hover {
    box-shadow: 0 32px 64px -12px rgba(0, 0, 0, 0.2), 0 0 0 1px rgba(79, 70, 229, 0.1);
    transform: translateY(-2px);
  }

  /* Dark theme form card */
  [data-theme="dark"] .form-card {
    background: var(--white, #1E293B);
    border-color: var(--border-color, #334155);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  [data-theme="dark"] .form-card:hover {
    box-shadow: 0 32px 64px -12px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(79, 70, 229, 0.3);
  }

  .form-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    border-radius: 24px 24px 0 0;
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.96);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Header Styling */
  .form-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 0;
    background: none;
  }

  .form-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .form-header p {
    color: var(--gray-color);
    font-size: 1.1rem;
    font-weight: 400;
  }

  /* Form Groups */
  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .form-group {
    position: relative;
    margin-bottom: 0;
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  /* Input Styling */
  .form-control,
  .form-select {
    width: 100%;
    padding: 1rem 1.25rem;
    border: 2px solid var(--border-color, #E5E7EB);
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 500;
    color: var(--dark-color, #1F2937);
    background: var(--white, #FFFFFF);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
  }

  .form-control:focus,
  .form-select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
    transform: translateY(-2px);
  }

  .form-control:hover,
  .form-select:hover {
    border-color: var(--gray-color, #9CA3AF);
  }

  /* Dark theme inputs */
  [data-theme="dark"] .form-control,
  [data-theme="dark"] .form-select {
    background: var(--bg-tertiary, #334155);
    color: var(--text-primary, #F8FAFC);
    border-color: var(--border-color, #334155);
  }

  [data-theme="dark"] .form-control:focus,
  [data-theme="dark"] .form-select:focus {
    box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.2);
    border-color: var(--primary-color);
  }

  [data-theme="dark"] .form-control:hover,
  [data-theme="dark"] .form-select:hover {
    border-color: var(--gray-color, #94A3B8);
  }

  /* Modern Labels */
  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--dark-color, #1F2937);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  [data-theme="dark"] .form-label {
    color: var(--text-primary, #F8FAFC);
  }

  .form-label .required {
    color: var(--danger-color);
    margin-left: 0.25rem;
  }

  /* Select Styling */
  .form-select {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.75rem center;
    background-repeat: no-repeat;
    background-size: 1.5em 1.5em;
    padding-right: 3rem;
    cursor: pointer;
  }

  .form-select option {
    padding: 0.75rem;
    font-weight: 500;
  }

  /* Submit Button */
  .btn-primary {
    width: 100%;
    padding: 1.25rem 2rem;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    color: var(--white);
    border: none;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    margin-top: 1rem;
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-xl);
    background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
  }

  .btn-primary:active {
    transform: translateY(-1px);
  }

  .btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .btn-primary:hover::before {
    left: 100%;
  }

  /* Success Message */
  #pusher-message-box {
    border-radius: 12px;
    border: none;
    background: linear-gradient(135deg, var(--success-color), #059669);
    color: var(--white);
    font-weight: 600;
    box-shadow: var(--shadow-lg);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .form-card {
      padding: 2rem;
      margin: 1rem;
      border-radius: 20px;
    }

    .form-header h1 {
      font-size: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .main-panel {
      padding: 1rem;
    }
  }

  @media (max-width: 480px) {
    .form-card {
      padding: 1.5rem;
    }

    .form-header h1 {
      font-size: 1.75rem;
    }
  }
</style>

