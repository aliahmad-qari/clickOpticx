      const squareDiffs = pingResults.map(ping => Math.pow(ping - avgPing, 2));
      const avgSquareDiff = squareDiffs.reduce((a, b) => a + b, 0) / squareDiffs.length;
      this.results.jitter = Math.round(Math.sqrt(avgSquareDiff));
      
