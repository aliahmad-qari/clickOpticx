<style>
  :root {
    /* Color Variables */
    --footer-bg: rgba(255, 255, 255, 0.95);
    --footer-border: rgba(0, 0, 0, 0.08);
    --footer-icon-size: 24px;
    --footer-text-size: 11px;
    --footer-active-color: #6a5acd;
    --footer-inactive-color: #888;
    --footer-hover-color: #333;
    --footer-glow: 0 5px 15px rgba(106, 90, 205, 0.2);
    --footer-shadow: 0 -2px 10px rgba(0, 0, 0, 0.05);
  }

  /* Reset and Base Styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Hide footer on desktop */
  .footer {
    display: none;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .footer {
      display: block;
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: var(--footer-bg);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-top: 1px solid var(--footer-border);
      padding: 8px 0 12px;
      z-index: 1000;
      box-shadow: var(--footer-shadow);
    }

    .footer-links {
      display: flex;
      justify-content: space-around;
      align-items: center;
      width: 100%;
      max-width: 500px;
      margin: 0 auto;
    }

    .footer-links a {
      color: var(--footer-inactive-color);
      text-decoration: none;
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
      padding: 6px 10px;
      border-radius: 12px;
      position: relative;
      flex: 1;
      text-align: center;
    }

    /* Active item styling */
    .footer-links a.active {
      color: var(--footer-active-color);
      transform: translateY(-6px);
    }

    .footer-links a.active::before {
      content: '';
      position: absolute;
      top: -8px;
      width: 6px;
      height: 6px;
      background: var(--footer-active-color);
      border-radius: 50%;
    }

    /* Hover effects */
    .footer-links a:hover:not(.active) {
      color: var(--footer-hover-color);
      transform: translateY(-2px);
    }

    /* Icon styling */
    .footer-links img {
      width: var(--footer-icon-size);
      height: var(--footer-icon-size);
      margin-bottom: 4px;
      transition: all 0.25s ease;
      object-fit: contain;
    }

    .footer-links a.active img {
      filter: drop-shadow(var(--footer-glow));
    }

    /* Text styling */
    .footer-links span {
      font-size: var(--footer-text-size);
      font-weight: 500;
      letter-spacing: 0.2px;
    }
  }

  /* Fix for mobile viewport units */
  @supports (-webkit-touch-callout: none) {
    .footer {
      padding-bottom: max(12px, env(safe-area-inset-bottom));
    }
  }
</style>


<footer class="footer">
  <div class="footer-links">
    <a href="/package" class="active">
      <img src="images/package.png" alt="Packages"/>
      <span>Packages</span>
    </a>
    <a href="/History">
      <img src="images/history2.png" alt="History"/>
      <span>History</span>
    </a>
    <a href="/index">
      <img src="images/home.png" alt="Home"/>
      <span>Home</span>
    </a>
    <a href="/contactUs">
      <img src="images/customer-service.png" alt="Contact"/>
      <span>Contact</span>
    </a>
    <a href="/profile">
      <img src="images/profile.png" alt="Profile"/>
      <span>Profile</span>
    </a>
  </div>
</footer>