  <script>
    // Initialize real-time search for users table
    document.addEventListener('DOMContentLoaded', function() {
      const tableRows = Array.from(document.querySelectorAll('tbody tr'));
      const userData = tableRows.map(row => {
        const cells = row.querySelectorAll('td');
        return {
          element: row,
          id: cells[1] ? cells[1].textContent.trim() : '',
          username: cells[1] ? cells[1].textContent.trim() : '',
          email: cells[2] ? cells[2].textContent.trim() : '',
          role: cells[3] ? cells[3].textContent.trim() : '',
          package: cells[4] ? cells[4].textContent.trim() : '',
          plan: cells[5] ? cells[5].textContent.trim() : '',
          invoice: cells[6] ? cells[6].textContent.trim() : '',
          expiry: cells[7] ? cells[7].textContent.trim() : ''
        };
      });
      
      if (window.createAdminSearch && userData.length > 0) {
        window.userTableSearch = createAdminSearch({
          searchInputId: 'user-search-input',
          dataSource: userData,
          searchFields: ['username', 'email', 'role', 'package', 'plan', 'invoice'],
          displayFunction: function(filteredUsers) {
            // Hide all rows first
            tableRows.forEach(row => row.style.display = 'none');
            
            // Show filtered rows
            filteredUsers.forEach(user => {
              if (user.element) {
                user.element.style.display = '';
              }
            });
            
            // Update results count if exists
            const resultCount = document.querySelector('.search-results-count');
            if (resultCount) {
              resultCount.textContent = `Showing ${filteredUsers.length} of ${userData.length} users`;
            }
          },
          debounceTime: 200,
          minSearchLength: 0
        });
      }
    });

    $(document).ready(function () {
      // Populate edit modal
      $('.btn-action.edit').on('click', function () {
        const button = $(this);
        const modal = $('#editUserModal');
        modal.find('#userId').val(button.data('id'));
        modal.find('#editUsername').val(button.data('username'));
        modal.find('#editEmail').val(button.data('email'));
        modal.find('#editRole').val(button.data('role'));
        modal.find('#editPlan').val(button.data('plan'));
        modal.find('#editExpiry').val(button.data('expiry'));
      });

      // Form validation for add and edit modals
      function validateForm(formId) {
        const form = $(`#${formId}`);
        let isValid = true;

        form.find('.form-control, .form-select').each(function () {
          const input = $(this);
          const formGroup = input.closest('.form-group');
          const errorMessage = formGroup.find('.error-message');
          formGroup.removeClass('input-error');

          if (input.attr('type') === 'email') {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(input.val())) {
              formGroup.addClass('input-error');
              isValid = false;
            }
          } else if (input.attr('type') === 'password' && input.val() && input.val().length < 6) {
            formGroup.addClass('input-error');
            isValid = false;
          } else if (input.attr('type') === 'number' && !input.val()) {
            formGroup.addClass('input-error');
            isValid = false;
          } else if (input.prop('tagName') === 'SELECT' && !input.val()) {
            formGroup.addClass('input-error');
            isValid = false;
          } else if (input.attr('required') && !input.val()) {
            formGroup.addClass('input-error');
            isValid = false;
          }
        });

        return isValid;
      }

      $('#addUserForm').on('submit', function (e) {
        if (!validateForm('addUserForm')) {
          e.preventDefault();
        }
      });

      $('#editUserForm').on('submit', function (e) {
        if (!validateForm('editUserForm')) {
          e.preventDefault();
        }
      });
    });
