  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Flash Message Timeout -->
  <script>
    window.addEventListener('DOMContentLoaded', () => {
      const msgBox = document.getElementById('pusher-message-box');
      if (msgBox) {
        setTimeout(() => {
          msgBox.style.transition = "opacity 0.5s";
          msgBox.style.opacity = 0;
          setTimeout(() => msgBox.style.display = "none", 500);
        }, 4000);
      }
    });
  </script>
  <!-- Search Functionality -->
  <script>
    $(document).ready(function () {
      const usernameInput = $('#usernameSearch');
      const startDateInput = $('#startDate');
      const endDateInput = $('#endDate');

      function filterUsers() {
        const username = usernameInput.val().toLowerCase();
        const startDate = startDateInput.val();
        const endDate = endDateInput.val();

        $('.ag-courses_item').each(function () {
          const userItem = $(this);
          const userUsername = userItem.data('username').toLowerCase();
          const userExpiry = userItem.data('expiry');

          let show = true;

          // Username filter
          if (username && !userUsername.includes(username)) {
            show = false;
          }

          // Date range filter
          if (startDate && endDate) {
            const expiryDate = new Date(userExpiry);
            const start = new Date(startDate);
            const end = new Date(endDate);
            end.setHours(23, 59, 59, 999); // Include entire end date
            if (expiryDate < start || expiryDate > end) {
              show = false;
            }
          } else if (startDate && !endDate) {
            const expiryDate = new Date(userExpiry);
            const start = new Date(startDate);
            if (expiryDate < start) {
              show = false;
            }
          } else if (!startDate && endDate) {
            const expiryDate = new Date(userExpiry);
            const end = new Date(endDate);
            end.setHours(23, 59, 59, 999);
            if (expiryDate > end) {
              show = false;
            }
          }

          userItem.toggle(show);
        });
      }

      usernameInput.on('input', filterUsers);
      startDateInput.on('change', filterUsers);
      endDateInput.on('change', filterUsers);
    });
  </script>
</body>

</html>